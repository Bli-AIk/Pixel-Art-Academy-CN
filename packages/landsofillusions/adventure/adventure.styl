@import "../typography/typography.import"
@import "../styles/atari2600.import"

html.lands-of-illusions-style-adventure
  // Prevent elastic scrolling.
  overflow hidden

  height 100%
  margin 0
  padding 0
  background atari2600colors[0][0]
  color white

  *
    box-sizing border-box

  // Pixel art image scaling
  img
  canvas
    image-rendering optimizeSpeed
    image-rendering -moz-crisp-edges            // Firefox
    image-rendering -o-crisp-edges              // Opera
    image-rendering -webkit-optimize-contrast   // Chrome, Safari
    image-rendering pixelated                   // Chrome
    image-rendering optimize-contrast           // CSS3
    -ms-interpolation-mode nearest-neighbor     // IE8+

  body
    min-height 100%
    margin 0
    padding 0
    uni()

  .adventure
    .display
      .location
        min-height 200rem
        background atari2600colors[4][10]

    .ui
      padding-left 10rem

      .inventory
        list-style none
        padding 0

        .item
          .link
            display inline-block
            text-transform uppercase
            color white
            text-decoration none

            &:hover
              color black
              background white
