@import "../typography/typography.import"
@import "../style/style.import"

html.adventure
  // Prevent horizontal elastic scrolling.
  overflow-x hidden

  height 100%
  margin 0
  padding 0
  background atariGrey(0)
  color atariGrey(7)

  *
    box-sizing border-box
    pixel-image-rendering()
    background-size 100% 100%

  input
  textarea
    font inherit
    color inherit

  body
    margin 0
    padding 0
    height 100%
    adventure()

  .am-display
    position fixed
    z-index 1
