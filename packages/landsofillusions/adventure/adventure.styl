@import "{retronator:retronator-identity}/style/style.import"

html.adventure
  margin 0
  padding 0
  background atariGray(0)
  color atariGray(7)
  pixel-image-rendering()

  *
  *::before
  *::after
    background-size 100% 100%

  input
  textarea
    font inherit
    color inherit

  body
    width 100%
    margin 0
    padding 0
    adventure()

  .artificial-mirage-display
    position fixed
    z-index 5

  .viewport-bounds
    position fixed
    z-index 1
    pointer-events none

    > *
      pointer-events auto

    .build-version
      position absolute
      right 2rem
      bottom 2rem
      line-height 1em
      text-align right
      color atariGray(2)
      opacity 0.5
      text-decoration none
      cursor pointer
      transition opacity 0.15s
      checkout()
      text-transform uppercase
      padding-left 1rem

      &:hover
        opacity 1
