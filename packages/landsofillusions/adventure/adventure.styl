@import "../typography/typography.import"
@import "../style/style.import"

html
  // Prevent elastic scrolling.
  overflow hidden

  height 100%
  margin 0
  padding 0
  background atari2600grey(0)
  color atari2600grey(7)

  *
    box-sizing border-box
    pixel-image-rendering()
    background-size 100% 100%

  input
  textarea
    font inherit
    color inherit

  body
    min-height 100%
    margin 0
    padding 0
    uni()

  .am-display
    position fixed
    z-index 1
