@import "../typography/typography.import"
@import "../style/style.import"

html.adventure
  margin 0
  padding 0
  background atariGrey(0)
  color atariGrey(7)

  *
    box-sizing border-box
    pixel-image-rendering()
    background-size 100% 100%

  input
  textarea
    font inherit
    color inherit

  body
    width 100%
    margin 0
    padding 0
    adventure()

  .am-display
    position fixed
    z-index 1

  .build-version
    position fixed
    z-index 1
    right 2rem
    bottom 2rem
    line-height 1em
    text-align right
    color atariGrey(0)
    opacity 0.1
    text-decoration none
    cursor pointer
    transition opacity 0.15s

    &:hover
      opacity 1
