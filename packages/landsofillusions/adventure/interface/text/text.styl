.adventure
  position fixed
  left 0
  right 0
  top 0
  bottom 0

  .text-interface
    line-height 10rem

    .location
      position absolute
      background slategrey

    .ui
      position absolute

      .text-display
        position absolute
        overflow hidden

        .narrative
          p
            margin 0
            padding-bottom 10rem

        .command-line
          text-transform uppercase
          padding-bottom 10rem

        // This is an empty element at the bottom of the text-display so that velocityjs has a target to scroll to.
        .bottom
          height 0

      .inventory
        position absolute
        overflow hidden

        p
          margin 0

      .scrollable-content
        position absolute
