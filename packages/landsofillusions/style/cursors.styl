@import "style.import"

html
  cursor default

  &:not([data-scale='2'])
    cursor url('/interface/cursors/3x/arrow.png') 3 0, default

a
button
select
  cursor pointer

input:not([type])
input[type='']
input[type=text]
input[type=email]
input[type=password]
input[type=number]
textarea
  cursor text
