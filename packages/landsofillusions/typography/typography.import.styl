// Pixel art font smoothing

pixel-font-smoothing()
  -webkit-font-smoothing none
  -moz-osx-font-smoothing grayscale

// Font mixins

retrotype()
  font-family "Retrotype Pixel Art Academy"
  font-weight normal
  font-size 12rem
  pixel-font-smoothing()

acme-5()
  font-family "Acme 5 Pixel Art Academy"
  font-size 8rem
  pixel-font-smoothing()

acme-7()
  font-family "Acme 7 Pixel Art Academy"
  font-size 8rem
  pixel-font-smoothing()

acme-9()
  font-family "Acme 9 Pixel Art Academy"
  font-size 8rem
  pixel-font-smoothing()

kyrou-5()
  font-family "Kyrou 5 Pixel Art Academy"
  font-size 8rem
  pixel-font-smoothing()

kyrou-7()
  font-family "Kyrou 7 Pixel Art Academy"
  font-size 8rem
  pixel-font-smoothing()

kyrou-9()
  font-family "Kyrou 9 Pixel Art Academy"
  font-size 8rem
  pixel-font-smoothing()

uni()
  font-family "Uni Pixel Art Academy"
  font-weight normal
  font-size 8rem
  pixel-font-smoothing()
