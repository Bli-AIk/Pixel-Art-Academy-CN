@import "{retronator:landsofillusions}/style/style.import"

.landsofillusions-components-signin
  fixed-cover()
  z-index 5
  color atariGray(5)
  adventure()
  line-height 9rem

  .safe-area
    display flex
    flex-direction column
    justify-content space-evenly

    .title
      kyrou-9()
      font-weight bold
      text-align center
      pixel-text-emboss(atariGray(0), atariGray(2))

    .wallet
      position relative
      width 320rem
      height 140rem

      .wallet-layer
        absolute-cover-size()
        pointer-events none

        &.layer-0
          filter drop-shadow(-5px 5px 20px black)
          z-index 0

        &.layer-1
          z-index 2

        &.layer-2
          z-index 4

        &.layer-3
          z-index 6

        &.layer-4
          z-index 8

        &.layer-5
          z-index 10

      .message
        display none

    .footer
      text-align center
      padding 0 30rem
      color atariGray(2)

      a
        &:hover
          color atariGray(3)

      .info
        color atariGray(5)

      .error
        color atariRed(4)

  #login-sign-in-link
  .login-close-text
  .or
    display none

  .login-text-and-button
    .login-button
      position absolute
      left 18rem
      width 127rem
      height 52rem
      text-align center
      color atariGray(6)
      padding-top calc(2rem - 1px)
      cursor pointer

      &:hover
        margin-top -1rem

      &:active
        margin-top -3rem

  #login-buttons-facebook
    top 36rem
    z-index 5
    background-image image('/landsofillusions/components/signin/facebook-card.png')

  #login-buttons-twitter
    top 49rem
    z-index 7
    background-image image('/landsofillusions/components/signin/twitter-card.png')

  #login-buttons-google
    top 62rem
    z-index 9
    background-image image('/landsofillusions/components/signin/google-card.png')

  #login-buttons-patreon
    display none

  .login-form
    color atariGray(2)

    .login-button-form-submit
      border none
      background none
      padding 0
      freehand()

    &::before
      content ''
      position absolute
      top 56rem
      left 180rem
      width 122rem
      height 64rem
      z-index 5
      background atariGray(7)

    #login-email-label-and-input
    #forgot-password-email-label-and-input
      position absolute
      left 185rem
      top 63rem
      z-index 5

      input
        freehand()

    #login-password-label-and-input
      position absolute
      left 185rem
      top 84rem
      z-index 5

    #login-buttons-password
    #login-buttons-forgot-password
      position absolute
      right 30rem
      top 105rem
      z-index 5
      color atariBlue(3)
      cursor pointer
      white-space nowrap
      border-bottom 1rem solid atariGray(6)

      &:hover
        border-bottom-color atariGray(5)

    #login-buttons-forgot-password
      top 84rem

    label
      display block

    input
      width 109rem
      border 0
      color atariGray(1)
      background atariGray(5)

    #forgot-password-link
    #signup-link
    #back-to-login-link
      display block
      position absolute
      text-align center
      cursor pointer
      freehand()

      &:hover
        margin-top -1rem

    #signup-link
    #back-to-login-link
      top 23rem
      left 220rem
      z-index 3
      width 76rem
      height 15rem
      background-image image('/landsofillusions/components/signin/account-paper.png')
      color atariBlue(3)
      padding-top 1rem
      freehand()

    #forgot-password-link
      top 35rem
      left 175rem
      z-index 5
      width 81rem
      height 15rem
      background-image image('/landsofillusions/components/signin/password-paper.png')
      color atariBlue(4)
      padding-top 1rem
      freehand()

    #back-to-login-link
      left 222rem
      freehand()
