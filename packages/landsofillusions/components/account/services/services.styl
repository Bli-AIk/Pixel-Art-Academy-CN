@import "{retronator:landsofillusions}/style/style.import"

.landsofillusions-components-account-general
  .support-area
    .support-amount
      acme-9()

  .transactions
    list-style none
    padding 0

    .transaction
      .date
        text-transform uppercase
        color console-lighter-grey

      .details-area
        background #222
        border 2px solid #333
        width 100%
        padding 0 1em
        margin 1em 0

        .gift
          .gift-link
            display inline-block
            background #111
            padding 1em 1.5em

            a
              text-decoration none
              color console-grey

              &:hover
                color black

  a
    color atariGrey(7)
    cursor pointer

    &:hover
      background-color atariGrey(7)
      color atariGrey(0)

  button
  .button
    position relative
    top -4px
    margin-top 4px
    background #666
    uni()
    color atariGrey(0)
    border none
    border-bottom 4px solid #333
    cursor pointer

    &:focus
      background: #777
      outline none

    &:hover
      background: #888

    &:active
      border-bottom none
      margin-bottom 4px
      top 0

    &:disabled
      color #444
      cursor default

      &:hover
        background #666

  ul
  ol
    list-style square

    li
      margin-bottom 1em

  input
  textarea
    uni()
    background atariGrey(1)
    border 1rem solid atariGrey(2)
    padding 0 2rem
    color atariGrey(5)
    input-placeholder atariGrey(4)

    &:focus
      outline none
      border-color atariGrey(3)
