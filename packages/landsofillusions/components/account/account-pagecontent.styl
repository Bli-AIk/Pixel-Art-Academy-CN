@import "{retronator:landsofillusions}/style/style.import"

.landsofillusions-components-account
  .account-file
    .page-content
      position absolute
      left 170rem
      width 158rem
      top 18rem
      bottom 23rem
      padding 14rem
      color atariGray(2)

      h2
        margin 0 0 5rem
        acme-5()
        font-weight bold
        text-transform uppercase
        line-height 7rem

      h3
        margin 3rem 0 3rem
        acme-5()
        font-weight normal
        line-height 7rem

      input
      textarea
      select
        width 100%
        padding 0 4px
        margin 0
        border none
        background none
        freehand()
        color atariBlue(4)
        input-placeholder atariGray(3)
        appearance none

        &:focus
          outline none

      textarea
        border 1rem solid atariGray(5)
        height 3em
        padding 3rem

      label
        cursor pointer

      input[type='checkbox']
        display none

        & + .label::before
          content ''
          display inline-block
          width 7rem
          height 7rem
          padding 0 0 1rem 1rem
          margin-right 3rem
          vertical-align bottom
          border 1rem solid atariGray(5)
          text-align center
          color atariBlue(4)

        &:checked + .label::before
          content '✔︎'

      .smallprint
        position relative
        small-print()
        margin 0 6rem 5rem
        color atariGray(4)
        hyphens auto

        &::before
          content '*'
          position absolute
          top 0
          left -6rem

        &.bottom
          position absolute
          bottom 0
          left 14rem
          right 14rem
