@import "{retronator:landsofillusions}/style/style.import"

.landsofillusions-components-account-contents
  .contents
    padding 0
    list-style none
    text-transform uppercase

    .content
      margin-left -5rem

      .page-link
      .current-page
        display block
        padding 2rem 5rem
        color atariGray(1)

        .page-line
          display block
          position relative
          padding-top 1rem
          border-bottom 1rem solid atariGray(5)

          .page-number
            position absolute
            right 0
            color atariGray(2)

      .page-link
        display block
        cursor pointer
        color atariGray(1)
        text-decoration none

        &:hover
          .page-line
            background atariGray(6)
