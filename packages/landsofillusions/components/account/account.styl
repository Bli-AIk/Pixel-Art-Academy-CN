@import "{retronator:landsofillusions}/style/style.import"

.landsofillusions-components-account
  fixed-cover()
  color atariGrey(5)

  .account-file
    filter drop-shadow(-5px 5px 20px black)

    .account-file-layer
      position absolute
      width 340rem
      height 228rem
      top 0
      left -10rem
      visibility hidden
      pointer-events none

      &.visible
        visibility visible

      &.cover-closed
        z-index 11

      &.page-1
        z-index 8

      &.page-2
        z-index 7

      &.page-3
        z-index 6

      &.page-4
        z-index 5

      &.page-5
        z-index 4

      &.papers-bottom
        z-index 2

      &.cover-open
        z-index 1

      &.cover-back
        z-index 0

    &.on-cover
      .account-file-layer
        left -90rem
