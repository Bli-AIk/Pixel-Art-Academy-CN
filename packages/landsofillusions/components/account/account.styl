@import "{retronator:landsofillusions}/style/style.import"

.landsofillusions-components-account
  fixed-cover()
  z-index 5
  color atariGrey(5)

  &.no-background
    .landsofillusions-components-overlay
      .background
        background none

  .account-file
    .account-file-layer
      position absolute
      width 340rem
      height 228rem
      top 0
      left -10rem
      transition 0.6s cubic-bezier(0.23, 1, 0.32, 1)
      transition-property left, top

      &.turned
        left -175rem
        top 5rem

      &.cover-closed
        z-index 11

      &.page-1
        z-index 8

      &.page-2
        z-index 7

      &.page-3
        z-index 6

      &.page-4
        z-index 5

      &.page-5
        z-index 4

      &.page-6
        z-index 3

      &.papers-bottom
        z-index 2

      &.cover-open
        z-index 1

      &.cover-back
        z-index 0

      &.cover-closed
      &.cover-open
        visibility hidden

        &.visible
          visibility visible

      &.flipped
        transform translateX(160rem) scaleX(-1)

        &.turned
          pointer-events none

        .page-content
          transform scaleX(-1)

        .page-number
          display none

      > .page-number
        position absolute
        bottom 16rem
        right 21rem
        atariGrey(5)

    &.on-cover
      .account-file-layer
        left -90rem

    .pages
      for pageNumber in (1..6)
        .page-{pageNumber}
          background-image image('/landsofillusions/components/account/page-' + pageNumber + '.png')
