@import "{retronator:retronator-identity}/style/style.import"

.landsofillusions-components-loadgame
  .safe-area
    display flex
    flex-direction column
    justify-content space-evenly

    .title
      kyrou-9()
      font-weight bold
      text-align center
      pixel-text-emboss(atariGray(0), atariGray(2))

    .profiles
      display flex
      height 75rem
      padding 0
      margin 0
      list-style none
      transition left 0.5s

      .profile
        display flex
        position relative
        vertical-align top
        flex-shrink 0
        width 76rem
        height 76rem
        margin-right 5rem
        cursor pointer
        justify-content center
        align-items center

        &:hover:not(.active)
          .floppy
            top -1rem

            .shutter
              left 7rem

        &.active
          .floppy
            top -300rem
            transition top 1s

        .floppy
          position relative
          top 0
          width 68rem
          height 71rem
          background-image image('/landsofillusions/components/loadgame/floppy.png')
          filter drop-shadow(-4rem 2rem 10rem rgba(atariGray(0), 0.5))
          transition all ease-out 0.2s

          .shutter
            position absolute
            top 0
            left 15rem
            width 38rem
            height 25rem
            background-image image('/landsofillusions/components/loadgame/floppy-shutter.png')
            transition left ease-out 0.2s

          .label
            position absolute
            top 35rem
            left 9rem
            width 50rem
            height 28rem
            checkout()
            color atariGray(1)
            overflow-wrap break-word
            text-align center

    .controls
      text-align center

      .action-button
        padding 2rem 4rem
        border 1rem solid atariGray(4)
        background black
        font inherit
        color inherit
        text-transform uppercase
        text-align center

        &:hover
          color atariGray(7)

        &.previous-button
        &.next-button
          margin 0 3rem
          visibility hidden

          &.visible
            visibility visible
