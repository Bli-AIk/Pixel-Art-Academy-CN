@import "{retronator:retronator-identity}/style/style.import"

.landsofillusions-components-back-button
  display block
  position fixed
  width 22rem
  height 20rem
  border none
  z-index 1000
  background image('/interface/back-arrow.png') 0 1rem no-repeat
  background-size 22rem 18rem !important
  cursor pointer
  opacity 1
  transition opacity ease-out 0.5s

  &:hover
    background-position-y 0

  &:active
    background-position-y 2rem

  &:focus
    outline none

  &.closing
    opacity 0

.overlaid
  .landsofillusions-components-back-button
    width 22rem
    height 24rem
    background-image image('/interface/close-circle.png')
    background-size 22rem 22rem !important
