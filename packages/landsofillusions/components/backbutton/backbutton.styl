@import "{retronator:retronator-identity}/style/style.import"

.landsofillusions-components-back-button
  display block
  position fixed
  width 22rem
  height 18rem
  border none
  z-index 1000
  background image('/interface/back-arrow.png') 0 0 / 100% 100%
  cursor pointer
  opacity 1
  transition opacity ease-out 0.5s

  &:hover
    margin-top -1rem

  &:active
    margin-top 1rem

  &:focus
    outline none

  &.closing
    opacity 0

.overlaid
  .landsofillusions-components-back-button
    width 22rem
    height 22rem
    background image('/interface/close-circle.png') 0 0 / 100% 100%
