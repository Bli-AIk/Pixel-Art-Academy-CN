@import "../../style/style.import"

.landsofillusions-components-menu
  position fixed
  z-index 3

  .menu-button
    position fixed
    top 0
    right 0
    background none
    border none
    padding 8rem
    color atariGrey(1)
    adventure()
    text-transform uppercase
    opacity 0
    transition opacity 200ms

    &:hover
    &:focus
      color atariGrey(2)
      outline none

    &.visible
      opacity 1

  .menu-overlay
    fixed-cover()
    visibility hidden
    opacity 0
    background-color rgba(0,0,0,0.8)

    &.visible
      visibility visible

    .landsofillusions-components-menu-items
      position absolute
      top 50%
      width 100%
      color atariGrey(5)
      text-align center
      transform translateY(-50%)

      .actionable
      button
        &:hover
          color atariGrey(7)
