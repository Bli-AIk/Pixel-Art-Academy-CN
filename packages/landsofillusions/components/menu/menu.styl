@import "{retronator:retronator-identity}/style/style.import"

.landsofillusions-components-menu
  position fixed
  z-index 3
  pointer-events none

  > *
    pointer-events auto

  .toolbar
    position absolute
    top 0
    right 0
    padding 4rem 6rem
    text-align right
    transition opacity 200ms
    opacity 0
    visibility hidden

    &.visible
      opacity 1
      visibility visible

    &:hover
      .toggle-audio-button
        opacity 1

    button
      border none
      vertical-align top

      &.menu-button
        padding 4rem 2rem
        background none
        color blend(rgba(atariGray(1), 0.5) atariGray(2))
        adventure()
        text-transform uppercase
        transition color, 0.2s

        &:hover
          color blend(rgba(atariGray(2), 0.5) atariGray(3))

      &.toggle-audio-button
        width 17rem
        height 17rem
        padding 0
        background image('/landsofillusions/components/menu/audio-on-off.png') 17rem 0 / 34rem 34rem
        opacity 0
        transition opacity 200ms

        &:hover
          background-position-y 17rem

        &.audio-enabled
          background-position-x 0

  .menu-overlay
    absolute-cover()
    visibility hidden
    opacity 0
    background-color rgba(0,0,0,0.8)

    &.visible
      visibility visible

    .landsofillusions-components-menu-items
      position absolute
      top 50%
      width 100%
      color atariGray(5)
      transform translateY(-50%)

      .actionable
      button
        &:hover
          color atariGray(7)
