@import "{retronator:retronator-identity}/style/style.import"

.landsofillusions-components-savegame
  .links
    display flex
    position absolute
    top 103rem
    left 0
    height 75rem
    padding 0
    list-style none
    transition left 0.5s

    .link
      position relative
      vertical-align top
      flex-shrink 0
      width 75rem
      height 75rem
      margin-right 5rem
      border 1rem solid transparent
      cursor pointer

      .name
        padding 3rem
        text-transform uppercase
        text-align center
        color atariAqua(4)

      &:hover
        .name
          color atariAqua(6)

      &.active
        cursor default

    .character
      &.active
        border 1rem solid atariCyan(3)

        .name
          color atariCyan(6)

    .lands-of-illusions
      &.active
        .name
          color atariCyan(6)
          border 1rem solid atariCyan(3)

  .controls
    position absolute
    bottom 0
    left 0
    right 2rem
    text-align center

    .action-button
      padding 2rem 4rem
      border 1rem solid atariAqua(4)
      background black
      font inherit
      color inherit
      text-transform uppercase
      text-align center

      &:hover
        color atariGray(7)

      &.previous-button
      &.next-button
        margin 0 3rem
        visibility hidden

        &.visible
          visibility visible
