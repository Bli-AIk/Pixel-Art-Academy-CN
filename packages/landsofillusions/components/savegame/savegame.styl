@import "{retronator:retronator-identity}/style/style.import"

.landsofillusions-components-savegame
  .safe-area
    .new-save-game
      display flex
      height 71rem
      justify-content center

      .floppy
        .label
          textarea
            width 100%
            height 100%
            padding 0
            margin 0
            border none
            background none
            font inherit
            color inherit
            text-align center
            input-placeholder atariGray(2)
            appearance none
            resize none
            text-transform uppercase

            &:focus
              outline none

    .controls
      text-align center

      .action-button
        padding 2rem 4rem
        border 1rem solid atariGray(4)
        background black
        font inherit
        color inherit
        text-transform uppercase
        text-align center

        &:hover
          color atariGray(7)

        &.save-button
          position relative
          top -2rem
          visibility hidden
          background atariGreen(3)
          color atariGreen(0)
          border none
          border-bottom 2rem solid atariGreen(1)

          &:focus
            background: atariGreen(4)
            outline none

          &:hover
            background: atariGreen(4)

          &:active
            border-bottom none
            margin-bottom 2rem
            top 0

          &.visible
            visibility visible
