@import "{retronator:retronator-identity}/style/style.import"

.landsofillusions-components-savegame
  .safe-area
    display flex
    flex-direction column
    justify-content space-evenly

    .title
      kyrou-9()
      font-weight bold
      text-align center
      pixel-text-emboss(atariGray(0), atariGray(2))

    .new-save-game
      display flex
      height 71rem
      justify-content center

      .floppy
        position relative
        top 0
        width 68rem
        height 71rem
        background-image image('/landsofillusions/components/loadgame/floppy.png')
        filter drop-shadow(-4rem 2rem 10rem rgba(atariGray(0), 0.5))

        .shutter
          position absolute
          top 0
          left 15rem
          width 38rem
          height 25rem
          background-image image('/landsofillusions/components/loadgame/floppy-shutter.png')
          transition left ease-out 0.2s

        .label
          position absolute
          top 35rem
          left 9rem
          width 50rem
          height 28rem
          checkout()
          color atariGray(1)
          overflow-wrap break-word
          text-align center

          textarea
            width 100%
            height 100%
            padding 0
            margin 0
            border none
            background none
            font inherit
            color inherit
            text-align center
            input-placeholder atariGray(2)
            appearance none
            resize none
            text-transform uppercase

            &:focus
              outline none

    .controls
      text-align center

      .action-button
        padding 2rem 4rem
        border 1rem solid atariGray(4)
        background black
        font inherit
        color inherit
        text-transform uppercase
        text-align center

        &:hover
          color atariGray(7)

        &.save-button
          position relative
          top -2rem
          visibility hidden
          background atariGreen(3)
          color atariGreen(0)
          border none
          border-bottom 2rem solid atariGreen(1)

          &:focus
            background: atariGreen(4)
            outline none

          &:hover
            background: atariGreen(4)

          &:active
            border-bottom none
            margin-bottom 2rem
            top 0

          &.visible
            visibility visible
