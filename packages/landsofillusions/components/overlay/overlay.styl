@import "../../style/style.import"

.lands-of-illusions-components-overlay
  fixed-cover()
  z-index 1

  > .background
    absolute-cover()
    z-index 0
    background black image('/items/backgrounds/black-gradient.png') 50% 50% / 480rem 360rem no-repeat

    > .viewport-area
    > .max-area
      position absolute

  > .crop-bar
    position absolute
    z-index 2
    background black
    transform translateZ(0)

    &.top-crop-bar
      top 0
      left 0
      right 0

    &.bottom-crop-bar
      bottom 0
      left 0
      right 0

  > .safe-area
    position absolute
    z-index 1

.overlay-disable-scrolling
  overflow hidden
