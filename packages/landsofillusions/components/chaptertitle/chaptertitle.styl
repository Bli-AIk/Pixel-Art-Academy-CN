@import "{retronator:landsofillusions}/style/style.import"

.landsofillusions-components-chaptertitle
  cursor pointer
  text-align center

  &.to-be-continued
    cursor default

  .landsofillusions-components-overlay
    .background
      &::after
        content: ''
        absolute-cover()
        background rgba(atariGrey(0), 0.2)

  .episode-title
  .call-to-action
    position absolute
    left 0
    right 0
    adventure()
    color atariOrange(5)
    text-shadow 0 2rem 3rem rgba(atariGrey(0), 0.5)

  .episode-title
    bottom 150rem

    .to-be-continued
      display block
      margin 10rem 0 5rem
      text-transform uppercase

  .chapter-title-area
    position absolute
    top 60rem
    left 0
    width 100%

    .chapter-title
      display inline-block
      position relative
      height 120rem
      padding-top 37rem
      color atariOrange(6)
      background-image image('/landsofillusions/components/chaptertitle/banner-middle.png')
      background-repeat repeat-x

      &::before
      &::after
        content ''
        display block
        position absolute
        top 0
        width 103rem
        height 100%
        background-size 100%

      &::before
        right 100%
        background-image image('/landsofillusions/components/chaptertitle/banner-left.png')

      &::after
        left 100%
        background-image image('/landsofillusions/components/chaptertitle/banner-right.png')

      .heading
        display block
        position relative
        adventure()
        pixel-text-outline atariRed(1)

      .chapter-name
        display block
        padding 0 3rem 0 4rem
        kyrou-9()
        font-weight bold
        text-transform uppercase

  .call-to-action
    top 155rem

    .coming-soon
      margin-bottom 10rem
      text-transform uppercase

    .support
      .pre-order
        cursor pointer
        text-decoration none
        border-bottom 1rem solid atariOrange(5)

        &:hover
          color atariGrey(0)
          background atariOrange(7)
          border-bottom-color atariOrange(7)
          text-shadow none
