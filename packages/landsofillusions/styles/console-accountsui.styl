@import "{retronator:artificialengines}/mirage/helpers.import"

html.lands-of-illusions-style-console
  body > .accounts-centered-dialog
    left 50%
    margin 2em 0 0 -11em

  .accounts-dialog
    position absolute
    top 0
    left 0
    z-index 1
    width 22em
    border 2px solid #666
    background #333
    padding 1em

    .login-close-text
      display inline-block
      margin-bottom 10px

    .login-button
      display inline-block
      width 100%
      position relative
      top -4px
      background #999
      padding 4px
      margin 8px 0
      uni()
      text-align center
      color black
      border none
      border-bottom 4px solid #666
      cursor pointer

      &:last-child
        margin-bottom 0

        &:active
          margin-bottom 4px

      &:focus
        background: #aaa
        outline none

      &:hover
        background: #bbb

      &:active
        border-bottom none
        margin-bottom 12px
        top 0

    .or
      text-align center
      margin 10px 0 15px

      .hline
        display inline-block
        height 2px
        border none
        background-color #666
        vertical-align middle

      .or-text
        display inline-block
        vertical-align middle

    .login-form
      text-align right

      #login-email-label-and-input
        margin-bottom 0.3em

      #login-email-label
      #login-password-label
        display inline-block

      .login-button
        margin-top 10px
        width auto
        float right

      .additional-link-container
        display block

        &:last-child::after
          display block
          content " "
          clear both

      #signup-link
      #back-to-login-link
        display block
        float right
        clear both

      #forgot-password-link
        display block
        float left

    #login-buttons-do-change-password
      margin-top 20px

    #reset-password-new-password
      width 100%

    .accounts-close
      position absolute
      top 4px
      right 4px

  #login-buttons
    position relative

  .hide-background
    fixed-cover()
    z-index 1
    background rgba(0,0,0,0.9)
