@import "{retronator:artificialengines}/mirage/helpers.import"
@import "../../styles/atari2600.import"

.lands-of-illusions-loading
  fixed-cover()
  z-index 1000
  background atari2600grey(0)

  .loading
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    color atari2600grey(7)
    opacity 0
    transition opacity 5s ease-in-out

    &.visible
      opacity 1
