@import "../../style/style.import"

.landsofillusions-loading
  fixed-cover()
  z-index 1000
  background atariGrey(0)
  opacity 0
  transition opacity 0.2s
  cursor wait

  &.visible
    opacity 1

  .loading
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    color atariGrey(7)
    opacity 0
    transition opacity 5s ease-in-out

    &.visible
      opacity 1
