@import "{retronator:retronator-identity}/style/style.import"

.landsofillusions-pages-admin-characters-characters
  .characters
    border-collapse collapse

    &.show-only-stale
      .character:not(.stale)
        display none

    .character
      border-bottom 1px solid #333

      &.stale
        background #fdd

      .used-templates
        font-size 80%

        .used-template
          &.can-upgrade
            background #faa

          &.can-embed
            background #aaf

          &.can-clean
            background #066
