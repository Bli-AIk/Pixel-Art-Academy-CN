@import "{retronator:landsofillusions}/style/style.import"

.landsofillusions-pages-admin-memories-latest
  padding 1em

  .memories
    list-style none
    padding 0

    .memory
      display inline-block
      vertical-align top
      width 30%
      margin-right 2em
      margin-bottom 2em
      padding 1em
      border 1px solid atariGray(3)

      .info
        margin-bottom 0.5em
        font-size 0.8em
        color atariGray(3)
        overflow-wrap break-word

      .actions
        list-style none
        padding 0

        .action
          margin-bottom 0.5em

          .character
            font-weight bold

          .time
            font-size 0.8em
            color atariGray(3)
