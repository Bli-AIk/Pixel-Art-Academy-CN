.loi-accounts-user-panel
  position absolute
  top 16px
  right 16px

  .panel
    position absolute
    top 0
    right 0
    z-index 1
    width 15em
    border 2px solid #666
    background #333
    padding 1em

    hr
      margin 1em 0 0.5em
      background-color #666

    .close-panel-area
      text-align right
      margin-bottom 1em

    .characters-area
      .characters
        list-style none
        padding 0
        margin-bottom 0

        .character
          margin-bottom 8px

          &:last-child
            margin-bottom 0

          .load-character
            width 100%
            background #999
            border-bottom-color #666

            &:focus
              background: #aaa

            &:hover
              background: #bbb
