@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-studyguide-article.ql-container
  color atariGrey(1)
  daily()
  line-height 10rem
  hyphens auto
  column-fill auto

  p
    margin 10rem 0

  ul
    list-style square

  ul
  ol
    padding-left 10rem

    li
      padding-left 0

  blockquote
    margin 8rem 0
    padding 2rem 10rem
    border-left 1rem solid atariGrey(4)
    font-style italic

  sup
  sub
    checkout()

  code
  .ql-syntax
    adventure()
    background atariGrey(6)

  code
    padding 1rem 2rem 1rem 3rem

  .ql-syntax
    padding 5rem

  .ql-video
    width 100%
    min-height 150rem

  .ql-editor
    // Note: Important to prevent loss of spaces in Firefox.
    white-space pre-wrap

    > *:first-child
      margin-top 0

  .ql-clipboard
    height 1px
    overflow-y hidden
    pointer-events none
