@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-studyguide-article-task-reading
  padding 6rem
  background atariGrey(6)
  cursor default
  white-space normal

  .task
    &.completed
      .prompt
        color inherit

    .prerequisites
    .prompt
      adventure()
      line-height 7rem

    .prerequisites
      margin 3rem 0
      color atariRed(2)

      .tasks
        margin-top 2rem

    .prompt
      margin-bottom 5rem
      color atariGreen(2)
