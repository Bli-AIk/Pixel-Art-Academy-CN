@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-studyguide-article-task-reading
  padding 6rem
  background atariGrey(6)
  cursor default
  white-space normal

  .task
    &.completed
      .prompt
        color inherit

      .confirmation
        &::after
          content 'âœ“'
          position absolute
          left 2rem
          top 0

    .prerequisites
    .prompt
      adventure()
      line-height 7rem

    .prerequisites
      margin 3rem 0
      color atariRed(2)

      .tasks
        margin-top 2rem

    .prompt
      margin-bottom 5rem
      color atariGreen(2)

    .confirmation
      position relative

      &::before
        position relative
        content ''
        width 8rem
        height 8rem
        border 1rem solid atariGrey(2)
        float left

      &.enabled
        cursor pointer

        &::before
          cursor text

      .directive
        margin-left 13rem
