@import "{retronator:landsofillusions}/style/style.import"

html.pixelartacademy-studyguide
  margin 0
  padding 0

  body
    width 100%
    margin 0
    padding 0

.pixelartacademy-studyguide
  background atariGrey(0)
  pixel-image-rendering()
  overflow-x hidden

  *
  *::after
  *::before
    background-size 100% 100%

  input
  textarea
    font inherit
    color inherit

.pixelartacademy-studyguide-pages-layout
  daily()
  line-height 10rem
  color atariGrey(5)
  background atariGrey(0)

  a
    &:hover
      color atariPeach(2)
