@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-studyguide-pages-layout-menu
  .toolbar
    position absolute
    top 0
    right 0
    padding 4rem 6rem
    text-align right
    transition opacity 200ms
    opacity 0
    visibility hidden

    &.visible
      opacity 1
      visibility visible

    button
      border none
      vertical-align top

      &.menu-button
        padding 4rem 2rem
        background none
        color atariGrey(1)
        adventure()
        text-transform uppercase

        &:hover
          color atariGrey(2)

  .menu-overlay
    fixed-cover()
    visibility hidden
    opacity 0
    background-color rgba(0,0,0,0.8)

    &.visible
      visibility visible

    .pixelartacademy-studyguide-pages-layout-menu-items
      position absolute
      top 50%
      width 100%
      color atariGrey(5)
      text-align center
      transform translateY(-50%)

      .actionable
      button
        &:hover
          color atariGrey(7)
