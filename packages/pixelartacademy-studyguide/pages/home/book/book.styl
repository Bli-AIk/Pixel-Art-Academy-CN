@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-studyguide-pages-home-book
  display none
  position absolute
  left 0

  &.loaded
    transition left 0.5s ease-out
    display block

  .book
    position relative
    color atariGrey(0)

    &.brown
      &.dark
        .page
          &.left
            border-image-source image('/pixelartacademy/studyguide/home/book/page-left-brown-dark.png')

            &.front
              border-image-source image('/pixelartacademy/studyguide/home/book/page-front-left-brown-dark.png')

          &.right
            border-image-source image('/pixelartacademy/studyguide/home/book/page-right-brown-dark.png')

            &.front
              border-image-source image('/pixelartacademy/studyguide/home/book/page-front-right-brown-dark.png')

    .move-button
      position fixed
      z-index 2
      top 0
      bottom 0
      background none
      border none
      transition background 0.2s, width 0.5s

      &:hover
        background rgba(atariGrey(3), 0.3)

      &.left
        left 0
        cursor w-resize

      &.right
        right 0
        cursor e-resize

    .page
      position absolute
      top 0
      width 50%
      height 100%
      border-style solid
      background-color atariGrey(7)
      background-clip padding-box

      &.left
        left 0
        border-width 7rem 25rem 14rem 52rem
        border-image-slice 7 25 14 52

        &.front
          border-width 15rem 23rem 16rem 36rem
          border-image-slice 15 23 16 36

        .header
          left -12rem
          right -10rem

      &.right
        right 0
        border-width 7rem 52rem 14rem 25rem
        border-image-slice 7 52 14 25

        &.front
          border-width 15rem 19rem 16rem 21rem
          border-image-slice 15 19 16 21

        .header
          left 15rem
          right 35rem

      .header
        position absolute
        top 5rem
        text-align center
        text-transform uppercase

    .contents-area
      position absolute
      z-index 1
      left 40rem
      right 40rem
      top 40rem
      bottom 40rem
      overflow hidden

      .contents
        position absolute
        left 0
        width 10000rem
        height 100%
        column-fill auto

        h1
          academy()
          margin-bottom 10rem

        p
          margin-top 0

        .table-of-contents
          position absolute
          height 100%

          h1
            text-align center
            text-transform uppercase

          .activities
            academy()
            margin-left 10rem
            padding-left 20rem

            .activity
              margin-bottom 10rem

              a
                text-decoration none
