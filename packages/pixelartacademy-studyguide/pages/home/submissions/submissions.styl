@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-studyguide-pages-home-submissions
  position fixed
  z-index 1
  transition 0.6s cubic-bezier(0.23, 1, 0.32, 1)
  transition-property left, top
  visibility hidden

  &.loaded
    visibility visible

  .folder
    position absolute
    width 282rem
    height 189rem

    &.opened
      .cover
        &.opened
          visibility visible

        &.closed
          visibility hidden

    .cover
      absolute-cover()

      &.back
        background-image image('/pixelartacademy/studyguide/home/submissions/folder-back.png')

      &.opened
        background-image image('/pixelartacademy/studyguide/home/submissions/folder-cover-opened.png')
        visibility hidden

      &.closed
        z-index 4
        background-image image('/pixelartacademy/studyguide/home/submissions/folder-cover-closed.png')

        .title
          position absolute
          top 48rem
          right 36rem
          width 62rem
          max-height 30rem
          overflow hidden
          text-align center
          color atariGray(1)
          freehand()
          transform translateY(-50%)

    .entries-sheet
      position absolute
      z-index 0
      left 148rem
      bottom 3rem
      width 130rem
      height 180rem
      padding 6rem
      background atariGray(6)
      color atariGray(0)
      checkout()
      transition left 0.6s cubic-bezier(0.23, 1, 0.32, 1)

      &.displayed
        left 4rem

      .title
        .name
          margin-top 1rem
          height 8rem
          border-bottom 1rem solid atariGray(4)
          text-align center
          text-transform uppercase
          color atariCyan(2)
          overflow hidden
          text-overflow ellipsis
          white-space nowrap

      .entries
        margin-top 5rem
        width 100%
        border-collapse collapse

        .header
          height 9rem
          vertical-align top

          th
            font-weight normal

        .name
          text-align left
          white-space nowrap
          overflow hidden
          text-overflow ellipsis
          max-width 80rem

        .date
          text-align right

        .entry
        .empty-row
          height 9rem

          td
            border-bottom 1rem solid atariGray(4)

        .entry
          color atariCyan(2)
          cursor zoom-in

          &:hover
            background-color atariGray(5)

          .name
            freehand()

      .pagination
        display flex
        margin-top 5rem
        color atariGray(2)

        .previous
        .next
          width 30rem

          .page-button
            border none
            background none
            font inherit
            color inherit

        .counter
          text-align center
          flex-grow 1

        .next
          text-align right

    .pocket
      position absolute
      right 0
      bottom 0
      z-index 3
      width 118rem
      height 49rem
      background-image image('/pixelartacademy/studyguide/home/submissions/pocket.png')
      filter drop-shadow(-1rem -1rem 1rem rgba(black, 0.3))
      pointer-events none
