@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixelpad-apps-studyplan-goalsearch
  position absolute
  z-index 1
  top 5rem
  left 50rem
  width calc(100% - 100rem)
  padding 3rem
  background atariCyan(2)

  .interests
    .search
      position relative

      .input
        background atariCyan(3)
        border none
        padding 2rem 5rem
        width 100%

        &::placeholder
          color atariCyan(6)

      .clear-input-button
        position absolute
        top 1rem
        right 1rem
        border none
        background none
        padding 2rem 2rem 1rem 4rem
        font inherit
        color atariCyan(6)
        text-align center

        &::before
          content 'X'

        &:hover
          background atariCyan(4)
          color atariGray(7)

      .autocomplete
        position absolute
        z-index 1
        top 100%
        left 0
        right 0
        background atariCyan(4)
        margin 0
        padding 5rem
        list-style none

        .interest
          padding 2rem 5rem
          cursor pointer

          &.active
            background atariCyan(1)

  .goals
    padding 0
    margin 5rem 0 0

    .goal
      display inline-block
      margin 0 1rem 1rem 0

      &.existing
        .pixelartacademy-pixelpad-apps-studyplan-goal
          cursor pointer
          opacity 0.5

      .pixelartacademy-pixelpad-apps-studyplan-goal
        .name
          pointer-events none

        .required-interests
          display none
