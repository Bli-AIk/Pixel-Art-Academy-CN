.pixelartacademy-pixelboy-apps-calendar
  margin-left 10rem

  .providers
    list-style none
    padding 0

  .navigator
    .displayed-month-text
      margin-bottom 10px

  .days
    list-style none

    .day
      position relative
      margin-bottom 0
      min-height 1em

      .date-day
        position absolute
        top 0
        left 0

      .events
        display block
        list-style none

        .event
          display block
