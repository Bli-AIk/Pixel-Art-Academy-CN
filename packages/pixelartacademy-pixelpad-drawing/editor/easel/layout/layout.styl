@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixelpad-apps-drawing-editor-easel-layout
  position absolute
  left 50%
  transition all 0.6s

  .frame
    position absolute
    bottom 49rem
    left calc(50vw + 71rem)
    transition all 1s

    .frame-bottom
      position absolute
      top 0
      left -57rem
      width 114rem
      height 94rem
      background-image image('/pixelartacademy/pixelpad/apps/drawing/editor/easel/frame-bottom.png')

    .tray
      position absolute
      top 0
      left -71rem
      width 142rem
      height 68rem

      .tray-back
        absolute-cover()
        z-index 2
        background-image image('/pixelartacademy/pixelpad/apps/drawing/editor/easel/tray-back.png')

      .tray-front
        position absolute
        z-index 5
        top 43rem
        left 0
        width 142rem
        height 13rem
        background-image image('/pixelartacademy/pixelpad/apps/drawing/editor/easel/tray-front.png')

    .frame-top-back
    .movable-stand
      transition opacity 0.2s, visibility 0.2s

    .frame-top-back
      position absolute
      bottom 0
      left -63rem
      width 126rem
      height 189rem
      background-image image('/pixelartacademy/pixelpad/apps/drawing/editor/easel/frame-top.png')

    .movable-stand
      position absolute
      z-index 3
      transition bottom 1s

      .movable-stand-bottom
        position absolute
        bottom -17rem
        left -66rem
        width 132rem
        height 253rem
        background-image image('/pixelartacademy/pixelpad/apps/drawing/editor/easel/movablestand-bottom.png')

      .movable-stand-top
        position absolute
        left -16rem
        width 32rem
        height 43rem
        background-image image('/pixelartacademy/pixelpad/apps/drawing/editor/easel/movablestand-top.png')
        transition bottom 1s

      .asset-placeholder
        position absolute
        bottom 0

.pixelartacademy-pixelpad-apps-drawing.editor-easel
  &.editor-active
    .pixelartacademy-pixelpad-apps-drawing-editor-easel-layout
      .frame
        left 87rem

.pixelartacademy-pixelpad-apps-drawing-editor-easel
  &.zoomed-in-mode
    .pixelartacademy-pixelpad-apps-drawing-editor-easel-layout
      bottom 0 !important

  &.focused-mode
    .pixelartacademy-pixelpad-apps-drawing-editor-easel-layout
      bottom -55rem !important

  &.zoomed-in-mode
  &.focused-mode
    .pixelartacademy-pixelpad-apps-drawing-editor-easel-layout
      .frame-top-back
      .movable-stand
        opacity 0
        visibility hidden

  &.dragging
    .pixelartacademy-pixelpad-apps-drawing-editor-easel-layout
    .frame
    .movable-stand
    .movable-stand-top
      transition none !important
