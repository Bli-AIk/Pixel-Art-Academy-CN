@import "{retronator:retronator-identity}/style/style.import"
@import "{retronator:pixelartacademy-pixelpad-drawing}/editor/desktop/desktop.import"

.pixelartacademy-pixelpad-apps-drawing-editor-desktop-references-displaycomponent-reference
  position absolute
  margin 0
  border 4rem solid atariGray(6)
  background atariGray(6)
  box-shadow -1rem 1rem 0 desktopShadowColor
  transform translate(-50%, -50%)
  transition all 1s
  cursor grab

  &.image-only
    border none
    background none
    box-shadow none
    filter drop-shadow(-1rem 1rem 0 desktopShadowColor)

    &.dragging
      box-shadow none
      filter drop-shadow(-12rem 3rem 20rem desktopShadowColor)

  &.dragging
    position fixed
    box-shadow -12rem 3rem 20rem desktopShadowColor
    z-index 101 !important

  &.resizing-n
  &.resizing-s
    cursor ns-resize

  &.resizing-e
  &.resizing-w
    cursor ew-resize

  &.resizing-nw
  &.resizing-se
    cursor nwse-resize

  &.resizing-ne
  &.resizing-sw
    cursor nesw-resize

  .image
    display block
    width 100%
    image-rendering auto

  .caption
    height 14rem
    padding-top 3rem
    freehand()
    color atariPurple(3)
    text-align center
    white-space nowrap
    text-overflow ellipsis
    overflow hidden
