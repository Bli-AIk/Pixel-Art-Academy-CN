@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixelpad-apps-drawing-editor-desktop-colorfill
  position absolute
  top -102rem
  right -86rem
  width 72rem
  height 72rem

  .pixelartacademy-pixelpad-apps-drawing-editor-desktop.drawing-active:not(.focused-mode) &
    top -22rem
    right -6rem

  .pixelartacademy-pixelpad-apps-drawing-editor-desktop.hidden-tools &
    visibility hidden

  &::before
    content ''
    position absolute
    z-index 13
    top 8rem
    left -28rem
    width 91rem
    height 72rem
    background-image image('/pixelartacademy/pixelpad/apps/drawing/editor/desktop/glass-shadow.png')
    mix-blend-mode multiply
    pointer-events none

  .glass
    absolute-cover()
    z-index 13

    &::before
    &::after
      content ''
      position absolute

    &::before
      absolute-cover()
      z-index 0
      background-image image('/pixelartacademy/pixelpad/apps/drawing/editor/desktop/glass-bottom.png')

    &::after
      z-index 5
      top 8rem
      left 3rem
      width 61rem
      height 57rem
      background-image image('/pixelartacademy/pixelpad/apps/drawing/editor/desktop/glass-top.png')

    .color
      position absolute
      z-index 4
      top 9rem
      left 9rem
      width 54rem
      height 54rem
      border-radius 50%
      transition all 0.2s
