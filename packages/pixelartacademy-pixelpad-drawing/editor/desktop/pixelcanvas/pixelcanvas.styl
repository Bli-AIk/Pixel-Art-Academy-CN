@import "{retronator:retronator-identity}/style/style.import"
@import "{retronator:pixelartacademy-pixelpad-drawing}/editor/desktop/desktop.import"

.pixelartacademy-pixelpad-apps-drawing-editor-desktop-pixelcanvas
  &.landsofillusions-assets-spriteeditor-pixelcanvas
    background initial

  .drawing-area
    position absolute
    z-index 11
    background atariGray(6)
    box-sizing content-box
    border solid atariGray(6)
    box-shadow -1rem 1rem 0 desktopShadowColor
    transition all 0.6s

    &.smooth-movement
      transition all 1s !important

    &.hidden
      display none

    &.completed
      &::before
        content 'ï¸Ž'
        position absolute
        z-index 1
        top -2rem
        right -2rem
        width 10rem
        height 8rem
        background-image image('/pixelartacademy/practice/project/asset/bitmap/clipboardcomponent/completedcheckmark.png')

    canvas
      absolute-cover-size()

.pixelartacademy-pixelpad-apps-drawing.editor-desktop
  &.editor-active
    .pixelartacademy-pixelpad-apps-drawing-editor-desktop.dragging
      .fatamorgana-interface.move-canvas
        .pixelartacademy-pixelpad-apps-drawing-editor-desktop-pixelcanvas
          .drawing-area
            transition none !important

  &.active-asset:not(.editor-active)
    .pixelartacademy-pixelpad-apps-drawing-editor-desktop
      .pixelartacademy-pixelpad-apps-drawing-editor-desktop-pixelcanvas
        .drawing-area
          transition top 0.6s 0.2s, left 0.6s 0.2s, width 0.2s, height 0.2s

  .pixelartacademy-pixelpad-apps-drawing-editor-desktop.drawing-active
    .pixelartacademy-pixelpad-apps-drawing-editor-desktop-pixelcanvas
      .drawing-area
        transition all 0.2s
