@import "{retronator:retronator-identity}/style/style.import"
@import "{retronator:pixelartacademy-pixelpad-drawing}/editor/desktop/desktop.import"
@import "{retronator:pixelartacademy-pixelpad-drawing}/editor/desktop/pixelartevaluation/pixelartevaluation.import"

.pixelartacademy-pixelpad-apps-drawing-editor-desktop-pixelartevaluation
  position absolute
  right 0
  bottom 0
  z-index 14
  transform translate(calc(100% + 10rem), calc(100% + 10rem))
  cursor pointer

  &.active
    transform translate(0, 0)
    right calc(50% - 105rem)
    cursor default

    .paper
      box-shadow -20rem 5rem 0 desktopShadowColor

  .paper
    position relative
    width 210rem
    transition all 0.2s
    background-color paperColor
    box-shadow -1rem 1rem 0 desktopShadowColor
    color printColor

    .content-placeholder
      transition all 0.5s

    .content
      position absolute
      top 0
      left 0
      right 0
      padding 6rem 6rem 3rem

    .title
      typecast()
      text-align center
      font-style italic
      letter-spacing -2rem

    .evaluation-breakdown
      width 100%
      border-spacing 1rem

      .header-row
        th
          position relative
          checkout()
          font-weight normal
          text-transform uppercase
          text-align left

          &::after
            content ''
            position absolute
            bottom -2rem
            left -1rem
            right -1rem
            height 1rem
            background-color printColor

        th:not(:first-child)
          border-left 1rem solid printColor
          padding-left 2rem

      .criterion
      .category
        td
          position relative
          padding 1rem 0 0
          vertical-align bottom

          &::after
            content ''
            position absolute
            bottom -1rem
            left 0
            right 0
            height 1rem
            background image('/pixelartacademy/pixelpad/apps/drawing/editor/desktop/pixelartevaluation/dottedline.png') 0 0 / 4rem 1rem

        td:not(:first-child)::after
          left 3rem

        td:not(:first-child)::before
          content ''
          position absolute
          left 0
          top 2rem
          width 1rem
          height calc(100% + 7rem)
          background-color printColor

        .required
          width 17rem
          daily()
          color penColor
          text-align center
          line-height 10rem

          .checkmark-area
            display block
            absolute-cover()
            bottom -1rem
            z-index 1
            padding-top 2rem
            cursor text

            input[type='checkbox']
              display none

              &:checked + .checkmark::before
                content 'âœ“'

        .name-area
          &:not(:first-child)
            .name
              padding 0 2rem
              margin-left 1rem

          .name
            display inline-block
            position relative
            z-index 1
            top 2rem
            padding-right 2rem
            background-color paperColor

        .score
          width 27rem

  .pixelartacademy-pixelpad-apps-drawing-editor-desktop.drawing-active:not(.focused-mode) &
    transform translate(calc(100% - 26rem), calc(100% - 18rem))

    &:hover:not(.active)
      .paper
        transform translate(-4rem, -4rem)
        box-shadow -8rem 2rem 0 desktopShadowColor
