@import "{retronator:retronator-identity}/style/style.import"
@import "{retronator:pixelartacademy-pixelpad-drawing}/editor/desktop/desktop.import"
@import "{retronator:pixelartacademy-pixelpad-drawing}/editor/desktop/pixelartgrading/pixelartgrading.import"

.pixelartacademy-pixelpad-apps-drawing-editor-desktop-pixelartgrading-overview
  .title
    text-transform uppercase

    &::after
      content ''
      display block
      margin 5rem 0 3rem
      height 1rem
      border-top 2rem solid printColor
      border-bottom 1rem solid printColor

  .grading-breakdown
    margin-bottom 6rem

    .criterion
      .name-area
        typecast()
        letter-spacing -1rem
        line-height 10rem

      .name-area
      .score
        cursor pointer

    .criterion
    .empty-row
    .final-score-row
      td
        position relative
        padding 1rem 0 0
        vertical-align bottom

      .score
        width 25rem
        adventure()
        color penColor
        text-align center
        padding 1rem 2rem 0 3rem

    .empty-row
    .final-score-row
      height 10rem

      td
        position relative

        &::after
          content ''
          position absolute
          left -1rem
          right -1rem
          height 1rem

    .empty-row
      td
        &::after
          bottom 0
          background printColor

    .final-score-row
      td
        &::after
          bottom -4rem
          border-top 1rem solid printColor
          border-bottom 1rem solid printColor

      .average
        checkout()
        text-transform uppercase
        padding-bottom 1rem

        &:not(:first-child)
          padding-left 3rem

      .score
        border-left 1rem solid printColor

  .letter-grade
    position absolute
    top 3rem
    left 4rem
    width 17rem
    height 12rem
    padding 2rem 2rem 2rem 4rem
    daily()
    color penColor
    text-align center
    background-image image('/pixelartacademy/pixelpad/apps/drawing/editor/desktop/pixelartgrading/gradecircle.png')
