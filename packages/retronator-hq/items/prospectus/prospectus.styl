@import "{retronator:landsofillusions}/style/style.import"

.retronator-hq-items-prospectus-content
  position relative
  color atariGrey(5)

  *
    position relative
    box-sizing border-box

  .main-wrapper
    background black

  h1
    acme-9()
    font-weight normal

  h2
    acme-7()
    color atariGrey(7)
    text-transform uppercase

  .byline
    kyrou-7()

  p
    adventure()
    margin-bottom 10rem

  a
    text-decoration none
    color #eee
    white-space nowrap

    &::after
      display block
      content ''
      absolute-cover()
      right 1rem
      border-bottom 1rem solid #eee

    &:hover
      background-color #eee
      color black

      &::after
        display none

  button:not(.reset)
  .button:not(.reset)
    display inline-block
    padding 4rem 8rem
    adventure()
    color black
    border none
    border-bottom 4rem solid transparent
    cursor pointer
    margin-bottom 10rem
    background transparent

    .content
      display block
      position relative
      z-index 1

    &::after
      content ''
      position absolute
      top 0
      left 0
      right 0
      bottom -4rem
      background #666
      border-bottom 4rem solid #333

    &:hover:not([disabled='false'])
    &:focus
      outline none

      &::after
        background: #888
        display block

    &:active:not([disabled='false'])
      border-top 4rem solid transparent
      border-bottom none

      &::after
        top 0
        bottom 0
        border-bottom none

    &:disabled
      color atariGrey(4)

    &.link-button
      color atariGrey(7)
      cursor pointer
      background none
      padding 0
      border none
      top 0

      &:hover
        background-color atariGrey(7)
        color black

      &:active
        margin-bottom 0

  .cta
    &::before
      content '> '
      white-space nowrap

  input
  textarea
    adventure()
    background #333
    border 2rem solid #666
    padding 0 4rem
    color atariGrey(6)

    &:focus
      outline none
      border-color #777

  blockquote
    kyrou-7()
    line-height 10rem
    padding 10rem 0 20rem 20rem

    &::before
      position absolute
      padding 1rem
      content '"'
      font-size 16rem
      top 0
      left 1rem

    cite
      adventure()
      font-style normal
      text-transform none

  nav
    position absolute
    top 0
    left 0
    width 100%
    height 15rem
    line-height 15rem
    padding 0 15rem
    text-align right
    z-index 2
    background-color black
    adventure()

    .social-media-icons
      float left
      font-size 12rem

      .social-media-icon
        display inline-block
        width 16rem
        height 16rem
        overflow hidden
        text-decoration none
        vertical-align top
        border 0
        float left

        &::after
          display:none

        img
          position absolute
          width 48rem
          height 32rem
          bottom -16rem

        &:hover
          background transparent

          img
            bottom 0

        &.facebook
          img
            left 0

        &.twitter
          img
            left -16rem

        &.tumblr
          img
            left -32rem

    & > a
      margin-left 8rem

      &::after
        display:none

      &.active
        text-transform uppercase

  #jumbotron
    min-height 100%
    height 100%
    text-align center
    background-image image('/retronator/hq/items/prospectus/background.png')
    background-attachment fixed
    background-position center bottom
    background-size cover
    color #eee

    &::after
      content ''
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background-color black
      opacity 0.5
      z-index 0

  .jumbotron-content
    position absolute
    top 55%
    left 50%
    width 100%
    transform translate(-50%, -50%)
    z-index 1
    padding 0

    h1
      padding-bottom 5rem

      .subheading
        display block
        adventure()
        margin-bottom 8rem

        .retronator
          retrotype()

      .title
        acme-9()
        font-weight bold
        display inline-block
        background-color #eee
        padding 6rem 10rem 14rem
        box-shadow 1.5rem 1.5rem black
        color black

        .author
          position absolute
          right 18rem
          top 15rem
          adventure()
          color dark-grey

  section:not(.jumbotron)
    margin auto
    padding 25rem 0 10rem

  section > *
    padding 0 20rem 0 30rem

  .trailer
    width 330rem
    height 186rem
    margin-bottom 15rem

  .core-features
    text-align center

    .title
      kyrou-5()

    .description
      margin 10rem

  .core-features-img
    height 50rem
    padding-top 10rem

    > img
      position static

    > [src*="icon-character"]
      height 21rem

    > [src*="icon-yearbook"]
      height 22rem

    > [src*="icon-palette"]
      height 24rem

    > [src*="icon-book"]
      height 24rem

  .enrollment
    text-align center
    margin-top 10rem

  .student-life
    .infoblock
      min-height 200rem
      background-position center bottom
      background-repeat no-repeat
      background-attachment fixed
      background-size cover

      .line
        height 200rem

        .unit
          top 50%
          transform translateY(-50%)

          &.size2of3
            border 1rem solid #eee
            padding 10rem 10rem 0 10rem
            text-shadow 1rem 1rem black
            color #eee
            background hsla(211,20%,20%,0.7)

          .title
            display block
            kyrou-7()
            margin-bottom 5rem

      &.campus
        background-image image('/retronator/hq/items/prospectus/campus.png')
        background-color #002C5C

      &.studio
        background-image image('/retronator/hq/items/prospectus/studio.png')

      &.pixelboy
        background-image image('/retronator/hq/items/prospectus/pixelboy.png')

      &.library
        background-image image('/retronator/hq/items/prospectus/library.png')
        background-color black

  // On iOS background-attachment fixed does not work. Fallback to scroll.
  .ios
    #jumbotron
      background-attachment scroll

    .student-life
      .infoblock
        background-attachment scroll
        background-position center center

  .support-intro
    background-color #a7e2fd
    padding-top 20rem
    color black

    h2
      color black

    a
      text-decoration none
      color black
      white-space nowrap

      &::after
        display block
        content ''
        absolute-cover()
        right 1rem
        border-bottom 1rem solid black

      &:hover
        background-color black
        color #eee

        &::after
          display none

  .featured-product
    background-image image('/retronator/hq/items/tablet/apps/prospectus/greetings.png')

  .support-area
    background-image image('/retronator/hq/items/prospectus/greetings.png')
    background-position left top
    background-repeat no-repeat
    background-color #a7e2fd
    background-size 350rem
    margin-bottom 10rem
    padding 20rem

    .support-content
      color black
      z-index 1
      padding 10rem
      margin-bottom 10rem
      background hsla(0,0%,100%,0.9)
      border 2rem solid #689ec2
      text-align center

      h2
        color black

      h3
        font-weight bold

      .play-button
        adventure()
        text-transform uppercase
        padding 6rem 10rem

        &::after
          background atariGreen(4)
          border-bottom-color atariGreen(2)

        &:hover::after
          background atariGreen(5)

  /* **************** GRIDS ***************** */
  .line::after
    content '.'
    display block
    height 0
    clear both
    visibility hidden

  .line
    max-width 380rem
    margin 0 auto
    @media only screen and (min-width: 1024px)
      margin auto

  .unit
    float left
    padding-right 15rem

  .size1of1
    float none
    padding-right 5rem

  .size1of2
    width 50%

  .size1of3
    width 33.33333%
  .size2of3
    width 66.66666%

  .size1of4
    width 25%
  .size3of4
    width 75%

  .size1of5
    width 20%
  .size2of5
    width 40%
  .size3of5
    width 60%
  .size4of5
    width 80%


.retronator-hq-items-prospectus
  .safe-area
    .landsofillusions-components-hand
      position absolute
      z-index 3
      top 105rem
      left -60rem

    .retronator-hq-items-prospectus-content
      absolute-cover()
      border 1rem solid
      border-bottom 2rem solid
      border-color atariGrey(1) atariGrey(2) atariGrey(0) atariGrey(0)

      &::after
        content ''
        absolute-cover()
        z-index 2
        pointer-events none
        border 2rem solid rgba(atariGrey(1), 0.5)

      &::before
        content ''
        absolute-cover()
        z-index 3
        pointer-events none
        border 1rem solid rgba(atariGrey(1), 0.5)

      .home-link
        display none

      .main-wrapper
        absolute-cover()
        overflow scroll

      #jumbotron
        background-attachment local

      .student-life
        .infoblock
          background-attachment local

      section:not(.jumbotron)
        margin auto
        padding 15rem 0 10rem

      .play-button
        display none

      .trailer
        width 263rem
        height 148rem
        margin-bottom 15rem
