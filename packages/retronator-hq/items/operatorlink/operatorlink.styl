@import "{retronator:retronator-identity}/style/style.import"

.retronator-hq-items-operator-link
  fixed-cover()
  // We need to use important to override the relative positioning for all items.
  position fixed !important
  transition background 4s
  background rgba(255,255,255,0)
  pointer-events none

  &.pluggedIn
    background rgba(255,255,255,1)

  &.fast-transition
    transition background 0.5s

  .landsofillusions-components-overlay
    .crop-bar
    .background
      background none

    .safe-area
      pointer-events none

      .cube
        position absolute
        left 135rem
        top 95rem
        width 50rem
        height 50rem
