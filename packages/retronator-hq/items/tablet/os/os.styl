@import "{retronator:landsofillusions}/style/style.import"

.retronator-hq-items-tablet-os
  absolute-cover()
  background atariCyan(1)

  .app-area
    z-index 1

  .menu-button
    position absolute
    z-index 2
    bottom 5rem
    right 0
    width 40rem
    height 40rem
    border none
    padding 0
    cursor pointer
    background image('/retronator/hq/items/tablet/menu-stripes.png')
    background-size 100%

    &:focus
      outline none
