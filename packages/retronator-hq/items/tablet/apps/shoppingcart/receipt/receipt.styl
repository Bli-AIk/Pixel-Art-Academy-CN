@import "{retronator:landsofillusions}/style/style.import"

// When we're looking at the receipt overlaid, we should move
// it to the left to reveal the supporters display behind it.
.retronator-hq-items-tablet.overlaid.receipt-visible
  .tablet
    left -180rem

.retronator-hq-items-tablet-apps-shopping-cart-receipt
  absolute-cover()
  z-index 1
  overflow scroll
  background rgba(0,0,0,0.8)

  .receipt-area
    width 134rem
    margin-left auto
    padding 10rem 20rem 10rem 10rem

    .receipt
      position relative
      z-index 1
      width 104rem
      padding 8rem
      checkout()
      color atariAzure(2)
      background image('/retronator/hq/items/tablet/apps/shopping-cart/receipt-top.png')
      background-size 100%
      background-repeat no-repeat

      &::before
        content ''
        absolute-cover()
        z-index -1
        top 13rem
        background atariGrey(5)

      h2
        margin 0
        text-transform uppercase
        font-weight normal
        text-align center
        checkout()

      .purchase-completed
        // TODO

      .shopping-cart-items
      .receipt-items
        list-style none
        margin 0
        padding 0
        text-transform uppercase

        .cart-item
        .receipt-item
          position relative

          .name
            display block
            width 56rem

          .price
            position absolute
            top 0
            right 0
            text-align right

      .shopping-cart-items
        .cart-item
          margin-bottom 1em

          &:last-child
            margin-bottom 0

      .receipt-items
        .receipt-item
          .name
            text-align right

          &.total
            margin-top 1em

      .items-subtotal
        text-transform uppercase
        text-align right

      .support-area
        .tip-amount-area
          position relative
          display block
          margin-top 2rem

          .tip-amount
            freehand()

      .receipt-bottom
        text-transform uppercase
        text-align center

    .actions
      .submit-payment-button
        width 104rem

    .payment-smallprint
      adventure()

    button
      position relative
      top -2rem
      margin-top 2rem
      background atariGreen(3)
      uni()
      color atariGreen(0)
      border none
      border-bottom 2rem solid atariGreen(1)
      cursor pointer

      &:focus
        background atariGreen(4)
        outline none

      &:hover
        background atariGreen(4)

      &:active
        border-bottom none
        margin-bottom 2rem
        top 0

      &:disabled
        color atariGrey(2)
        cursor default

        &:hover
          background atariGrey(2)

    input
    textarea
      width 100%
      freehand()
      background none
      border none
      border-bottom 1rem solid atariAzure(2)
      padding 0 4px
      color atariGrey(0)
      input-placeholder atariGrey(3)

      &:focus
        outline none

    textarea
      border 1rem solid atariAzure(2)
      height 3em
      padding 3rem

    label
      cursor pointer

    input[type='checkbox']
      display none

      & + .label::before
        content '[ ] '

      &:checked + .label::before
        content '[✔︎] '
