@import "{retronator:landsofillusions}/style/style.import"

line(name)
  unquote("[") + name + unquote("]")

.retronator-hq-items-daily-theme
  .newspaper
    .frontpage
      .headlines
        border 1rem solid atariGrey(0)
        min-height 200rem

        .group
          margin 1rem
          display grid
          grid-template-columns 20% 20% 20% 20% 20%

          .image
            background-size cover
            background-position center center

            img
              display block
              opacity 0
              border none
              padding 0
              width 100%

          .headline
            padding 3rem
            background atariGrey(2)
            hyphens auto

            .title
              acme-7()
              margin-bottom 3rem
              color atariGrey(5)

            .tags
              list-style none
              padding 0
              color atariGrey(0)

        /*
        1   2   3   4   5   6
         ___________________   1
        |                   |
        |                   |
        |         A1        |
        |   _____________   |  2
        |___|/////A/////|___|  3

        */
        .single-1
          .image-a1
            grid-column 1 / 6
            grid-row 1 / 3

          .headline-a
            grid-column 2 / 5
            grid-row 2 / 3

        /*
        1   2   3   4   5   6
         ___________________   1
        |                   |
        |                   |
        |        A1         |
        |                   |
        |...........________|  2
        |           |///////|
        |    A2     |///A///|
        |___________|///////|  3

        */
        .single-2
          .image-a1
            grid-column 1 / 6
            grid-row 1 / 2

          .image-a2
            grid-column 1 / 4
            grid-row 2 / 3

          .headline-a
            grid-column 4 / 6
            grid-row 2 / 3

        /*
        1   2   3   4   5   6
         ___________________   1
        |///////////|  A2   |  2
        |           ........|  3
        |     A1    .       |
        |           .  A3   |
        |___________._______|  4

        */
        .single-3
          .image-a1
            grid-column 1 / 4
            grid-row 2 / 4

          .image-a2
            grid-column 4 / 6
            grid-row 1 / 3

          .image-a3
            grid-column 4 / 6
            grid-row 3 / 4

          .headline-a
            grid-column 1 / 4
            grid-row 1 / 2

        /*
        1         2         3
         ___________________   1
        |                   |
        |         A1        |
        |         __________|  2
        |////A////|////B////|  3
        |                   |
        |         B1        |
        |___________________|  4

        */
        .double-1
          grid-template-columns 50% 50%

          .image-a1
            grid-column 1 / 3
            grid-row 1 / 2

          .headline-a
            grid-column 1 / 2
            grid-row 2 / 3
            margin 0 1rem 1rem 0

          .image-b1
            grid-column 1 / 3
            grid-row 3 / 4

          .headline-b
            grid-column 2 / 3
            grid-row 2 / 3
            text-align right
            margin-top 1rem

        /*
        1   2   3   4   5   6
         ___________________   1
        |           ////A///|  2
        |           ////B///|  3
        |     A1    .       |
        |           .  B1   |
        |___________._______|  4

        */
        .double-2
          .image-a1
            grid-column 1 / 4
            grid-row 1 / 4

          .headline-a
            grid-column 4 / 6
            grid-row 1 / 2
            margin-bottom 1rem

          .image-b1
            grid-column 4 / 6
            grid-row 3 / 4
            margin-left 1rem

          .headline-b
            grid-column 4 / 6
            grid-row 2 / 3
            text-align right
            margin-left 1rem

        /*
        1   2   3   4   5   6
         ___________________   1
        |       ////|       |
        |       /A//|       |
        |   A   ////|   B   |  2
        |   1   |////   1   |
        |       |//B/       |
        |_______|////_______|  3

        */
        .double-3
          .image-a1
            grid-column 1 / 3
            grid-row 1 / 3

          .headline-a
            grid-column 3 / 4
            grid-row 1 / 2
            margin 0 1rem 1rem 0

          .image-b1
            grid-column 4 / 6
            grid-row 1 / 3

          .headline-b
            grid-column 3 / 4
            grid-row 2 / 3
            text-align right
            margin-left 1rem

        /*
        1   2   3   4   5   6
         ___________________   1
        |           |       |
        |           |       |
        |     A1    |   B1  |
        |           |       |  2
        |___////A///|///B///|  3

        */
        .double-4
          .image-a1
            grid-column 1 / 4
            grid-row 1 / 3
            margin-right 1rem

          .headline-a
            grid-column 2 / 4
            grid-row 2 / 3
            margin-right 1rem

          .image-b1
            grid-column 4 / 6
            grid-row 1 / 2

          .headline-b
            grid-column 4 / 6
            grid-row 2 / 3
            text-align right

        /*
        1   2   3   4   5   6
         ___________________   1
        |   A1  |/////B/////|  2
        |       |           |  3
        |///A///|           |  4
        |///C///|     B1    |  5
        |       |           |
        |___C1__|___________|  6

        */
        .triple-1
          .image-a1
            grid-column 1 / 3
            grid-row 1 / 3
            margin-right 1rem

          .headline-a
            grid-column 1 / 3
            grid-row 3 / 4
            margin 0 1rem 1rem 0

          .image-b1
            grid-column 3 / 6
            grid-row 2 / 6

          .headline-b
            grid-column 3 / 6
            grid-row 1 / 2
            text-align right

          .image-c1
            grid-column 1 / 3
            grid-row 5 / 6
            margin-right 1rem

          .headline-c
            grid-column 1 / 3
            grid-row 4 / 5
            margin-right 1rem

        /*
        1     2     3       4
         ___________________   1
        |//A//|//B//|       |  2
        |     |     |       |
        |  A  |  B  |   C1  |
        |  1  |  1  |       |  3
        |_____|_____|///C///|  4

        */
        .triple-2
          grid-template-columns 30% 30% 40%

          .image-a1
            grid-column 1 / 2
            grid-row 2 / 4
            margin-right 1rem

          .headline-a
            grid-column 1 / 2
            grid-row 1 / 2
            margin-right 1rem

          .image-b1
            grid-column 2 / 3
            grid-row 2 / 4
            margin-right 1rem

          .headline-b
            grid-column 2 / 3
            grid-row 1 / 2
            margin-right 1rem

          .image-c1
            grid-column 3 / 4
            grid-row 1 / 3

          .headline-c
            grid-column 3 / 4
            grid-row 3 / 4
            text-align right

        /*
        1     2       3     4
         ___________________   1
        |//A//|       |//C//|  2
        |     |       |     |
        |  A  |   B1  |  C  |
        |  1  |       |  1  |  3
        |_____|///B///|_____|  4

        */
        .triple-3
          grid-template-columns 30% 40% 30%

          .image-a1
            grid-column 1 / 2
            grid-row 2 / 4
            margin-right 1rem

          .headline-a
            grid-column 1 / 2
            grid-row 1 / 2
            margin-right 1rem

          .image-b1
            grid-column 2 / 3
            grid-row 1 / 3
            margin-right 1rem

          .headline-b
            grid-column 2 / 3
            grid-row 3 / 4
            margin-right 1rem

          .image-c1
            grid-column 3 / 4
            grid-row 2 / 4

          .headline-c
            grid-column 3 / 4
            grid-row 1 / 2
            text-align right
