@import "{retronator:landsofillusions}/style/style.import"

.retronator-hq-store-display
  .landsofillusions-components-overlay
    z-index 1
    background atariOrange(7)
    overflow hidden

    .background
      background none

  .retro
    position absolute
    z-index 2
    top 88rem
    left 84rem
    width 95rem
    height 130rem
    pointer-events none

  .smile
    position absolute
    z-index 3
    top 88rem
    left 114rem
    width 35rem
    height 50rem
    pointer-events none

  .table
    position absolute
    top 218rem
    left -80rem
    right -80rem
    bottom -60rem
    background atariGrey(4)
    border-top 1rem solid atariGrey(3)

  .display
    position absolute
    left 160rem
    top 10rem
    width 270rem
    height 160rem
    padding 5rem
    background atariGrey(1)
    border 1rem solid atariGrey(2)
    border-color atariGrey(3) atariGrey(2) atariGrey(0) atariGrey(1)
    box-shadow 0 2rem 0 -1rem atariOrange(3), -1rem 1rem 0 atariOrange(4), -2rem 3rem 0 atariOrange(5), -3rem 5rem 0 atariOrange(5)

    .screen
      position relative
      height 148rem
      padding 5rem 7rem
      background atariGrey(0)
      border 1rem solid atariGrey(2)
      border-top-color atariGrey(0)
      border-right-color atariGrey(0)
      color atariGrey(4)

      h3
        position absolute
        top 0
        left 0
        width 100%
        z-index 1
        padding 5rem 7rem
        margin 0
        acme-7()
        font-weight normal
        background atariGrey(0)

      .recent-purchases
        width 140rem

        .retronator-store-components-top-supporters
          absolute-cover()
          z-index 0
          top 30rem
          overflow-y scroll
          padding 0 110rem 5rem 23rem
          margin 0
