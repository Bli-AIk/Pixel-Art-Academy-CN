@import "{retronator:landsofillusions}/style/style.import"

.retronator-hq-store-table-item-link
  max-width 100%
  padding 6px
  margin 0 auto
  background atariGrey(7)
  color atariGrey(0)
  text-align center

  a
    text-decoration none

    &:hover
      background atariGrey(0)
      color atariGrey(7)

  .url
    margin 6rem
    freehand()

  .title
    kyrou-7()
    margin 2rem

  .excerpt
    text-transform uppercase
    margin-bottom 6rem

  .photo
    display block
    margin-bottom 6px
    width 100%

    &:last-child
      margin 0
