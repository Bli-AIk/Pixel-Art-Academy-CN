@import "{retronator:landsofillusions}/style/style.import"

.retronator-hq-artstudio-pencils
  absolute-cover()

  .scene
    position absolute
    left 0
    width 100%
    height 240rem

    .table
      absolute-cover-size()
      height 240rem
      background image('/retronator/hq/locations/artstudio/pencils/table.png') center / 480rem 240rem

    .inventory
      position absolute
      left calc(50% - 192rem)
      top 16rem
      width 250rem
      height 150rem

      &::before
        content ''
        position absolute
        top -6rem
        left -35rem
        width 278rem
        height 170rem
        background-image image('/retronator/hq/locations/artstudio/pencils/inventory.png')
        pointer-events none

    .hand
      position absolute
      top -189rem
      left calc(50% + 50rem)
      width 239rem
      height 189rem
      transition all 1s ease-out
      background-image image('/retronator/hq/locations/artstudio/pencils/hand.png')

      &.visible
        top 0
        left calc(50% - 33rem)
