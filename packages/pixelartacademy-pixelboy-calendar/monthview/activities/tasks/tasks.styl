@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy-apps-calendar-monthview-tasks
  display flex
  justify-content center

  .icon
    display inline-block

    &.drawing-2
      position relative
      top -2rem
      width 11rem
      height 9rem
      background-image image('/pixelartacademy/pixelboy/apps/calendar/activities/drawing2.png')

      + .drawing-1
        margin-left -6rem

    &.drawing-1
      position relative
      width 6rem
      height 13rem
      background-image image('/pixelartacademy/pixelboy/apps/calendar/activities/drawing1.png')

    &.reading-1
      width 7rem
      height 8rem
      background-image image('/pixelartacademy/pixelboy/apps/calendar/activities/reading1.png')

    &.task-1
      position relative
      width 8rem
      height 8rem
      background-image image('/pixelartacademy/pixelboy/apps/calendar/activities/task.png')
