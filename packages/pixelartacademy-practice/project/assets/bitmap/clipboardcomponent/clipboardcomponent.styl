@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-practice-project-asset-bitmap-clipboardcomponent
  absolute-cover()

  .brief
    &::before
      content ''
      absolute-cover()
      z-index 1
      background-image image('/pixelartacademy/practice/project/asset/bitmap/clipboardcomponent/page-top.png')

    .content
      position absolute
      top 10rem
      left 11rem
      width 178rem
      height 240rem
      padding 14rem 12rem
      color atariGray(1)
      daily()

      .asset
        position relative
        z-index 1

        .asset-name
          text-transform uppercase

        .description
          margin 8rem 0

          ul
            list-style square

        .properties
          list-style none
          padding 0

          .property
            margin-bottom 4rem

            .property-name
              text-transform uppercase

            a
              text-decoration none
              border-bottom 1rem solid atariGray(4)

              &:hover
                color atariGray(2)

        .no-actions
          margin 8rem 0
          padding 4rem
          border 1rem solid atariGray(4)
          text-align center

        .actions
          list-style none
          width 100%
          padding 0
          display table
          border-collapse collapse

          .action
            display table-cell
            position relative
            border 1rem solid atariGray(4)
            width 33.3%
            height 10rem
            text-transform uppercase
            checkout()
            text-align center

            &.completed
              background atariGreen(5)
              padding 1rem

              .button
                &:hover
                  background atariGreen(6)

            .button
            .link
              color atariGray(2)

              &:hover
                background atariGray(6)

            .button
              absolute-cover-size()
              border none
              background none
              font inherit
              text-transform inherit

            .link
              absolute-cover()
              text-decoration none
              line-height 9rem

      .asset-placeholder
        position relative
        left -10rem

        &::after
          content ''
          position absolute
          z-index 3
          top 15rem
          left -6rem
          width 23rem
          height 9rem
          background-image image('/pixelartacademy/pixelpad/apps/drawing/clipboard/paperclip.png')

      .bitmap-info
        position relative
        z-index 1
        margin 7rem 0

        p
          margin 4rem 0

  .bottom
    absolute-cover()
    z-index 1
    background-image image('/pixelartacademy/practice/project/asset/bitmap/clipboardcomponent/page-bottom.png')

    .content
      top 10rem
      margin 29rem 0 0 12rem
      width 178rem
      height 221rem
      padding 5rem 12rem 14rem
      daily()
      color atariGray(1)

      h2
        daily()
        font-weight bold

      .asset
        float right
        position relative
        right -11rem

        &:hover
          .image
            right 2rem

        &::after
          content ''
          position absolute
          z-index 1
          width 23rem

        .image
          position relative
          width 100%
          right 0
          transition right 0.1s

  .turned-page
    absolute-cover-size()
    height 30rem
    z-index 3
    background image('/pixelartacademy/practice/project/asset/bitmap/clipboardcomponent/page-top-turned.png') center / 100%
    border none
    cursor pointer
