@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-landingpage-pages-about
  position relative
  adventure()
  background atariGray(4)
  min-width 320rem
  max-width 480rem
  margin 0 auto

  *
    pixel-image-rendering()

  .section
    padding 10rem

    .content
      width 300rem
      margin 0 auto

  .header
    position relative
    z-index 1

    .content
      position relative
      text-align center
      margin 10rem auto

      .title
        margin 0
        line-height initial

        .retronator
          display block
          retrotype()

        .pixel-art-academy
          display block
          position relative
          margin-top -2rem
          font-weight bold
          acme-9()

      .by
        adventure()
        line-height initial

      .retro
        position absolute
        top -2rem
        right 48rem
        width 25rem
        z-index 2

      .divider
        position absolute
        left 20rem
        right 20rem
        top 26rem
        z-index 1

        &::before
        &::after
          content ''
          position absolute
          border-bottom 1rem solid atariGray(0)

        &::before
          left -10rem
          right 76rem

        &::after
          left 193rem
          right -10rem

  .scene
    position relative
    left calc(50% - 240rem)
    margin-top -50rem
    width 480rem
    height 270rem

    .illustration
      width 100%
      height 100%
