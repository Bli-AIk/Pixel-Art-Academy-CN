.retronator-store-pages-admin-vat
  font-family monospace

  .data-filter
    margin 10px 0

  table
    border-collapse collapse

    tr
      th
      td
        border 1px solid black
        padding 2px 4px

      td
        text-align right

    .sum
      font-weight bold

  .si
    background-color atariYellow(7)

  .vat-business
    background-color atariBlue(7)

  .vat-consumer
    background-color atariCyan(7)

  .non-vat
    background-color atariGrey(6)
