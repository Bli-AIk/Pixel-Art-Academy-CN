@import "{retronator:landsofillusions}/style/style.import"

.retronator-store-pages-emailitemkeys
  width 200rem
  margin 50rem auto 0
  daily()
  color atariGray(5)
  pixel-image-rendering()

  .retro
    position relative
    height 1rem
    background atariGray(0)
    margin-bottom 10rem

    &::after
      content ''
      position absolute
      right 10rem
      top -28rem
      width 25rem
      height 38rem
      background image('/pixelartacademy/landingpage/locations/retropolis/retro.png') 0 0 / 100% 100%

  form
    text-align center

    input
      border none
      padding 2rem
      font inherit
      color atariGray(0)
      background-color atariGray(6)

    button
      border none
      padding 2rem
      font inherit
      color atariGreen(0)
      background-color atariGreen(5)

  .smallprint
    margin-top 20rem
    small-print()
    color atariGray(3)
