@import "{retronator:landsofillusions}/style/style.import"

.pixelartdatabase-pixeldailies-pages-home-header
  position relative
  z-index 1
  height 50rem
  padding 10rem 5vh
  background black
  box-shadow 0 0 50rem atariGrey(0)

  .title
    acme-9()
    margin 0
    color atariGrey(7)

    .link
      text-decoration none

  .subtitle
    adventure()
    text-transform uppercase
    margin-top 0

    .retronator
      text-decoration none

      &:hover
      &:focus
        background atariGrey(7)
        color atariGrey(0)

  .pixelartdatabase-pixeldailies-pages-home-navigation
    position absolute
    top 50%
    right 0
    left 160rem
    padding 5vh
    text-align right
    transform translateY(-50%)
