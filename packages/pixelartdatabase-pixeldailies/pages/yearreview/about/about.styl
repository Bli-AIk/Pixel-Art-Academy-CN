@import "{retronator:landsofillusions}/style/style.import"
@import "../yearreview.import"

.pixelartdatabase-pixeldailies-pages-yearreview-about
  position relative

  .header
    position relative
    z-index 1
    box-shadow 0 0 10rem atariGrey(0)

  .article
    position relative
    min-height 100vh
    padding 50rem 0 0
    color atariGrey(4)

    .page-content
      position relative
      z-index 1
      adventure-link()
      text-align justify
      hyphens auto
      background transparentify(atariGrey(1), 0.8)
      box-shadow 2rem 2rem 0 atariGrey(0),
                 0 10rem 20rem transparentify(atariGrey(0), 0.5)

      a
        display inline
        border-bottom none
        color atariGrey(6)

      strong
        kyrou-7()
        color atariGrey(7)
        adventure-link()

        a
          padding-left 1rem
          line-height 8rem

          &:hover
          &:focus
            border-top 1rem solid atariGrey(7)

      blockquote
        margin 0
        padding 0 2em
        border-left 1rem solid atariGrey(4)
        color atariGrey(3)
        line-height 11rem

        p:first-child::before
        p:last-child::after
          content '"'

      .video
        margin-top 5rem

    .background
      position absolute
      z-index 0
      top 0
      left 0
      right 0
      pixel-image-rendering()

      .image
        width 100%

      &::after
        content ''
        absolute-cover()
        z-index 0
        background linear-gradient(to top, atariGrey(0) 0%, transparent 100%)

    .background-author
      position absolute
      z-index 2
      top 0
      right 0
      acme-9()
      color atariGrey(7)
      font-size 8px
      padding 4rem
      opacity 0.3
      text-decoration none
      transition opacity 0.2s
      text-shadow 0 1rem 1rem black

      &:hover
        opacity 1
