@import "{retronator:landsofillusions}/style/style.import"

.pixelartdatabase-pixeldailies-pages-yearreview-day
  .header
    position relative
    height 50rem
    background black

    .title-area
      position absolute
      padding 10rem

      .title
        acme-9()
        margin 0
        color atariGrey(7)

      .subtitle
        adventure()
        text-transform uppercase
        margin-top 0

        .retronator
          text-decoration none

          &:hover
          &:focus
            background atariGrey(7)
            color atariGrey(0)

    .pixelartdatabase-pixeldailies-pages-yearreview-components-navigation
      position absolute
      top 50%
      right 0
      left 160rem
      padding 10rem
      text-align right
      transform translateY(-50%)

    .theme
      position absolute
      z-index 1
      top 100%
      left 0
      right 0
      padding-top 50rem
      text-align center

      .date
        kyrou-9()
        margin 0
        color atariGrey(6)
        text-shadow 0 1rem 0 atariGrey(0), 0 2rem 5rem transparentify(atariGrey(0), 0.5)

      .hashtags
        acme-9()
        font-size 20rem
        margin 0
        color atariGrey(7)
        text-shadow 0 2rem 0 atariGrey(0), 0 4rem 10rem transparentify(atariGrey(0), 0.5)

  .pixelartdatabase-pixeldailies-pages-yearreview-components-stream
    .artworks
      .artwork-area
        padding-top calc(10vh + 100rem)
