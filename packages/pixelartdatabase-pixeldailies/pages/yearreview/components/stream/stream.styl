@import "{retronator:landsofillusions}/style/style.import"

.pixelartdatabase-pixeldailies-pages-yearreview-components-stream
  .caption
    position relative
    padding 30rem 10rem
    text-align center
    color white
    acme-9()
    text-shadow 0 1rem 2rem black
    line-height 15rem

    a
      transition opacity 0.2s
      text-decoration none

      &:hover
        opacity 1 !important

    .favorites
    .author
    .date
    .comma
    .title .rank
      opacity 0.6

    .title .text
      opacity 0.7

    .title
      font-weight bold
      margin-bottom 5rem

    .authors
      .author
        .username
          text-decoration underline
