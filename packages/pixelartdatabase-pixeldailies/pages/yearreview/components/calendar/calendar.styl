@import "{retronator:retronator-identity}/style/style.import"

.pixelartdatabase-pixeldailies-pages-yearreview-components-calendar
  overflow-x hidden

  .months
    list-style none
    padding 0 0 5rem
    margin 0

    .month
      display none

      &.has-submissions
        display block

      > .name
        padding 10rem
        kyrou-9()
        font-weight bold

      .days
        list-style none
        padding 0
        margin 0

        .padding-day
        .day
          display block
          float left
          width 14%
          height 14vw

          &:nth-child(7n+0)
          &:nth-child(7n+1)
            width 15%

        .day
          position relative
          top 0
          left 0
          background atariGray(1)
          transition top 0.2s, left 0.2s, opacity 0.2s

          &::after
            content ''
            absolute-cover()
            transition box-shadow 0.2s
            box-shadow  1rem 1rem 0 atariGray(1),
                        2rem 2rem 0 atariGray(1),
                        3rem 3rem 0 atariGray(1),
                        4rem 4rem 0 atariGray(1)

          .face
            z-index 1
            absolute-cover()
            transition box-shadow 0.2s
            overflow hidden

            .top-submission
              absolute-cover-size()
              object-fit cover
              pixel-image-rendering()

            .number
              position absolute
              top 0
              left 0
              z-index 1
              padding 3rem
              background rgba(0, 0, 0, 0.5)
              acme-7()
              transition color 0.2s

            .hashtag
              position absolute
              bottom 0
              left 0
              right 0
              height 15rem
              z-index 1
              padding 3rem 6rem
              overflow hidden
              text-overflow ellipsis
              background transparentify(atariGray(7), 0.5)
              color atariGray(0)
              transition background-color 0.2s

          &.has-submission
            cursor pointer

            &:hover
              top -2rem
              left -2rem

              &::after
                content ''
                absolute-cover()
                box-shadow  1rem 1rem 0 atariGray(3),
                            2rem 2rem 0 atariGray(3),
                            3rem 3rem 0 atariGray(3),
                            4rem 4rem 0 atariGray(3)
              .face
                z-index 2
                box-shadow 5rem 5rem 10rem 5rem transparentify(atariGray(0), 0.5)

                .number
                  color atariGray(7)

                .hashtag
                  background transparentify(atariGray(7), 0.7)

      &::after
        content ''
        display block
        clear both

  .loading
    padding 20rem
    text-align center

@media (max-width: 768px)
  .pixelartdatabase-pixeldailies-pages-yearreview-components-calendar
    .months
      .month
        .days
          .padding-day
            display none

          .day
            display none
            width 33.333vw
            height 33.333vw

            &:nth-child(7n+0)
            &:nth-child(7n+1)
              width 33.333vw

            &.has-submission
              display block
