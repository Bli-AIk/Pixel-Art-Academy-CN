@import "{retronator:landsofillusions}/style/style.import"

.pixelartdatabase-pixeldailies-pages-yearreview
  .header
    position relative
    color atariGrey(7)

    .title
      position relative
      z-index 2
      font-weight normal
      padding 25rem 15rem
      margin 0
      text-align center

      > *
        display block

      .retronator
        retrotype()
        font-size 18rem
        color atariGrey(5)

      .year
        acme-9()
        font-size 68rem
        line-height 100rem
        font-weight bold
        text-shadow 0 2rem 0 atariGrey(0), 0 4rem 10rem atariGrey(0)

      .pixeldailies
        kyrou-9()
        font-size 16rem
        letter-spacing 5.2rem
        font-weight bold
        text-transform uppercase
        text-shadow 0 1.5rem 0 atariGrey(0), 0 2rem 5rem atariGrey(0)

      .subtitle
        acme-9()
        font-size 12rem
        text-transform lowercase
        margin 5rem 0
        color atariGrey(6)

        &.calendar
          font-size 16rem

      .retronator
      .subtitle
        text-shadow 0 1rem 0 atariGrey(0), 0 2rem 5rem atariGrey(0)

      &.year-2017
        .pixeldailies
          letter-spacing 4.55rem

    .background
      absolute-cover()
      z-index 0
      pixel-image-rendering()
      background-size cover

      &.transition
        transition background-position ease-in-out 10s

      &.old
        z-index 1

      &::after
        content ''
        absolute-cover()
        background linear-gradient(to bottom, atariGrey(0) 0%, transparent 100%)

    .background-author
      position absolute
      z-index 3
      bottom 0
      right 0
      acme-9()
      font-size 8px
      padding 2rem 4rem
      opacity 0.5
      text-decoration none
      transition opacity 0.2s
      text-shadow 0 1rem 1rem black

      &:hover
        opacity 1

  .pixelartdatabase-pixeldailies-pages-yearreview-components-navigation
    text-align center

@media (max-width: 768px)
  .pixelartdatabase-pixeldailies-pages-yearreview
    .header
      .title
        padding 10rem

        .retronator
          letter-spacing 0.1rem

        .year2016
          font-size 52rem
          line-height 68rem

        .pixeldailies
          font-size 12rem
          letter-spacing 4.25rem

        .subtitle
          font-size 8rem

@media (max-width: 414px)
  .pixelartdatabase-pixeldailies-pages-yearreview
    .header
      .title
        padding 10rem 5rem

        .retronator
          font-size 12rem
          letter-spacing 0.3rem

        .year2016
          font-size 36rem
          line-height 50rem

        .pixeldailies
          font-size 8rem
          letter-spacing 3.2rem
          line-height 15rem

        .subtitle
          font-size 8rem
