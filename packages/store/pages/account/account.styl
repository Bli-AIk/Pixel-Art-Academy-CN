@import "../../styles/console.import"

.pages-account
  h2
    margin-top 2em

  .section-body
    margin-left 2em

  .support-area
    .support-amount
      acme-9()

  .transactions
    list-style none
    padding 0

    .transaction
      .date
        text-transform uppercase
        color console-lighter-grey

      .details-area
        background #222
        border 2px solid #333
        width 100%
        padding 0 1em
        margin 1em 0

        .gift
          .gift-link
            display inline-block
            background #111
            padding 1em 1.5em

            a
              text-decoration none
              color console-grey

              &:hover
                color black
