@import "{retronator:artificialengines}/mirage/helpers.import"
@import "../typography/typography.import"

console-white = #eee
console-lighter-grey = #dedede
console-light-grey = #cacaca
console-grey = #b2b2b2
console-dark-grey = #929292

*
  box-sizing border-box

// Pixel art image scaling
img
canvas
  image-rendering optimizeSpeed
  image-rendering -moz-crisp-edges            // Firefox
  image-rendering -o-crisp-edges              // Opera
  image-rendering -webkit-optimize-contrast   // Chrome, Safari
  image-rendering pixelated                   // Chrome
  image-rendering optimize-contrast           // CSS3
  -ms-interpolation-mode nearest-neighbor     // IE8+

body
  margin 16px
  background black
  uni()
  color console-grey

h1
  acme-9()
  color console-white
  font-weight bold

h2
  kyrou-7()
  color console-white
  font-weight normal

h3
  kyrou-5()
  color console-white
  font-weight normal

ul
  list-style square

ul, ol
  li
    margin-bottom 1em

strong
  font-weight normal
  color console-white

a
  color console-white
  cursor pointer

  &:hover
    background-color console-white
    color black

hr
  margin 2em 0
  height 2px
  border none
  background-color #333

button
.button
  display inline-block
  position relative
  z-index 0
  top -3px
  margin 4px 0
  padding 4px 10px
  border none
  border-bottom 4px solid transparent
  background none
  uni()
  text-align center
  color black
  cursor pointer

  &::after
    content ''
    position absolute
    z-index -1
    top 0
    left 0
    right 0
    bottom -4px
    background #666
    border-bottom 4px solid #333

  &:focus
    outline none

    &::after
      background: #777

  &:hover
    &::after
      background: #888

  &:active
    border-top 4px solid transparent
    margin-top 0
    top 1px

    &::after
      border-bottom none
      bottom 0

  &:disabled
    color #444
    cursor default

    &:hover
      &::after
        background #666

button.link
  color console-white
  cursor pointer
  background none
  padding 0
  border none
  top 0

  &:hover
    background-color console-white
    color black

  &:active
    margin-bottom 0

a.button
  &:hover
    background none

input
textarea
  uni()
  background #333
  border 2px solid #666
  padding 0 4px
  color console-lighter-grey
  input-placeholder #666

  &:focus
    outline none
    border-color #777

body > .accounts-centered-dialog
  position fixed
  left 50%
  top 50%
  transform translate(-50%, -50%)

.accounts-dialog
  position absolute
  top -2px
  left -2px
  z-index 2
  width 22em
  border 2px solid #666
  background #333
  padding 1em

  box-shadow 10px 10px 0 rgba(0,0,0,0.5)

  .login-close-text
    display inline-block
    margin-bottom 10px

  .login-button
    display inline-block
    width 100%
    position relative
    top -4px
    background #999
    padding 4px
    margin 8px 0
    uni()
    text-align center
    color black
    border none
    border-bottom 4px solid #666
    cursor pointer

    &:last-child
      margin-bottom 0

      &:active
        margin-bottom 4px

    &:focus
      background: #aaa
      outline none

    &:hover
      background: #bbb

    &:active
      border-bottom none
      margin-bottom 12px
      top 0

  .or
    text-align center
    margin 10px 0 15px

    .hline
      display inline-block
      height 2px
      border none
      background-color #666
      vertical-align middle

    .or-text
      display inline-block
      vertical-align middle

  .login-form
    text-align right

    #login-email-label-and-input
      margin-bottom 0.3em

    #login-email-label
    #login-password-label
      display inline-block

    .login-button
      margin-top 10px
      width auto
      float right

    .additional-link-container
      display block

      &:last-child::after
        display block
        content " "
        clear both

    #signup-link
    #back-to-login-link
      display block
      float right
      clear both

    #forgot-password-link
      display block
      float left

  #login-buttons-do-change-password
    margin-top 20px

  #reset-password-new-password
    width 100%

  .accounts-close
    position absolute
    top 4px
    right 4px

#login-buttons
  position relative

.hide-background
  fixed-cover()
  z-index 1
  background rgba(0,0,0,0.9)
