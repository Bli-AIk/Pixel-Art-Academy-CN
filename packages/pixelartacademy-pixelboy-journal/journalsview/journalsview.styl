@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixelboy-apps-journal-journalsview
  absolute-cover()

  .overlay
    absolute-cover()
    z-index 1
    overflow-x auto

    .overlay-content
      display flex
      position relative
      top 40%
      height 30%

      .loading
      .new-journal-button
      .padding-placeholder
        display block
        height 100%
        background none
        border none
        flex-shrink 0

      .loading
        width 120rem
        padding-top 30rem
        daily()
        text-align center
        color atariGray(0)

      .new-journal-button
        width 120rem

      .padding-placeholder
        width 95rem

      .new-journal-button
        daily()
        padding 10rem

        &:hover
          color atariAzure(1)

      .journals
        display flex
        list-style none
        padding 0
        margin 0

        .journal
          width 120rem
          height 100%
          cursor pointer
