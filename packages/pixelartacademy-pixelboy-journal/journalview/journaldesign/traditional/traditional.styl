@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy-apps-journal-journalview-journaldesign.traditional
  position relative
  width 302rem
  height 223rem
  background-image image('/pixelartacademy/pixelboy/apps/journal/journal.png')

  .page-button
    position absolute
    display none
    bottom 5rem
    padding 5rem
    checkout()
    color atariBrown(4)
    cursor pointer

    &:hover
      color atariBrown(3)

    &.previous
      left 10rem

    &.next
      right 10rem

  &:hover
    .page-button.visible
      display block
