@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixelboy-apps-journal-journalview-entry-object-task-upload
  .upload
    margin 4rem 0

    .picture
      display block
      margin 0 auto
      padding 3rem
      background atariGray(7)
      box-shadow -2rem 1rem 0 transparentify(atariBrown(6), atariBrown(7))
      max-width 100%
      max-height 140rem
      cursor zoom-in

    .insert-picture-button
      width 100%
      padding 4rem 0 3rem
      border 1rem dotted atariGray(2)
      border-radius 4rem
      background transparent

      &:hover
        .icon
          opacity 0.73

      .icon
        width 14rem
        height 11rem
        opacity 0.54
