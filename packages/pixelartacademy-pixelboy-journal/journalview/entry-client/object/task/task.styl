@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy-apps-journal-journalview-entry-object-task
  cursor default
  border-bottom 1rem solid atariGrey(2)

  .goal
    margin-bottom 4rem
    border-bottom 1rem solid atariGrey(2)
    padding 1rem
    adventure()
    line-height 5rem
    text-transform uppercase

  .task
    &.completed
      .confirmation
        &::after
          content '✓'
          position absolute
          left 2rem
          top 0

    &.completed
    &.read-only
      .instructions
      .complete
        display none

    &:not(.ready)
      .confirmation
        &::before
          content '…'

      .instructions
      .complete
        display none

    &:not(.active)
      .complete
        display none

    &.ready
      .confirmation::before
        border-color atariGrey(2)

    .confirmation
      position relative

      &::before
        position relative
        content ''
        width 8rem
        height 8rem
        border 1rem solid transparent
        float left

      &.enabled
        cursor pointer

      .directive
        margin 0 0 4rem 13rem

    .instructions
      margin 3rem auto
      adventure()
      line-height 7rem

    .complete
    .prerequisites
      margin 3rem 0
      adventure()
      line-height 7rem

    .complete
      color atariGreen(2)

    .prerequisites
      color atariRed(2)
