@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy-apps-journal-journalview-entry-object-task
  border-bottom 1rem solid atariGrey(2)

  .goal
    margin-bottom 4rem
    border-bottom 1rem solid atariGrey(2)
    padding 1rem
    adventure()
    line-height 5rem
    text-transform uppercase

  .task
    &.completed
      .confirmation
        &::after
          content '✓'
          position absolute
          left 1rem
          top -1rem

      .instructions
      .complete
        display none

    &:not(.ready)
      .confirmation
        &::before
          content '…'

      .instructions
      .complete
        display none

    &.ready
      .confirmation
        border-color atariGrey(2)

    .confirmation
      position relative
      width 10rem
      height 10rem
      border 1rem solid transparent
      float left

    .directive
      margin 0 0 4rem 13rem

    .instructions
      margin 3rem auto
      adventure()
      line-height 7rem

    .complete
      margin 3rem 0
      adventure()
      color atariGreen(2)
      line-height 7rem
