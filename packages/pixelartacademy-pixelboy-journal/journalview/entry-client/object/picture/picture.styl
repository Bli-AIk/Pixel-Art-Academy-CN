@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy-apps-journal-journalview-entry-object-picture
  white-space normal

  .picture-area
    position relative

    &.uploading
      .picture
        visibility hidden

    .picture
    .missing-picture
    .uploading-picture
      background atariGray(7)
      box-shadow -2rem 1rem 0 transparentify(atariBrown(6), atariBrown(7))
      margin 0 auto

    .picture
      padding 3rem
      display block
      max-width 100%
      object-fit contain
      cursor zoom-in

    .missing-picture
      padding 10rem
      text-align center
      height 100%

    .uploading-picture
      padding 3rem 0 3rem 3rem
      height 100%

    .uploading-picture-area
      position absolute
      top -2rem
      left -2rem
      bottom -2rem
      padding 2rem
      overflow hidden

    .upload-error
      absolute-cover()
      background rgba(atariGray(7), 0.9)

      .message-area
        position absolute
        left 10%
        right 10%
        top 50%
        transform translateY(-50%)
        text-align center
        hyphens none

        .message
          color atariRed(0)

        .retry-area
          margin-top 5rem

          .retry-upload-button
            border none
            background atariGray(6)
            color atariGray(0)
            font inherit

            &:hover
              background atariGray(5)
