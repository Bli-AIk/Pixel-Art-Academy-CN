@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy-apps-journal-journalview-entry
  absolute-cover()
  overflow hidden

  .writing-area
    position absolute
    color atariGrey(1)
    daily()
    line-height 10rem
    cursor text
    hyphens auto
    column-fill auto

    p
      margin 10rem 0

    .ql-editor
      > *:first-child
        margin-top 0

    .ql-clipboard
      height 1px
      overflow-y hidden
      pointer-events none

  .objects-area
    position absolute
    display none

    .toggle-objects-button
      position absolute
      z-index 1
      top -7rem
      right 0
      width 35rem
      height 15rem
      background none
      border none

      &::after
      &::before
        content ''
        position absolute
        pointer-events none

      &::after
        z-index 1
        top 2rem
        right 2rem
        width 29rem
        height 11rem
        background image('/pixelartacademy/pixelboy/apps/journal/pushpin.png') center / 100%

      &::before
        z-index 0
        top 3rem
        right 3rem
        width 32rem
        height 11rem
        background image('/pixelartacademy/pixelboy/apps/journal/pushpin-shadow.png') center / 100%
        opacity 0.13

      &:hover
        &::after
          top 1rem

        &::before
          right 5rem

    .objects
      display none
      position absolute
      left 0
      right 0
      top -8rem
      height 17rem
      list-style none
      padding 0
      background atariGrey(7)
      border-left 1rem solid atariGrey(6)
      box-shadow -1rem 1rem 0 transparentify(atariBrown(6), atariBrown(7))

      .object
        .insert-object-button
          width 21rem
          height 17rem
          border none
          background-color transparent
          opacity 0.54
          background-repeat no-repeat
          background-position center

        &.image .insert-object-button
          background-image image('/pixelartacademy/pixelboy/apps/journal/objects-image.png')
          background-size 14rem 11rem

        &.todo .insert-object-button
          background-image image('/pixelartacademy/pixelboy/apps/journal/objects-todo.png')
          background-size 11rem 8rem

        &:hover
          .insert-object-button
            opacity 0.73

    &.expanded
      .toggle-objects-button
        width 21rem
        height 21rem
        top -14rem

        &::after
          width 15rem
          height 15rem
          background-image image('/pixelartacademy/pixelboy/apps/journal/pushpin-pushed.png')

        &::before
          top 9rem
          right 15rem
          width 28rem
          height 10rem
          background-image image('/pixelartacademy/pixelboy/apps/journal/pushpin-pushed-shadow.png')

        &:hover
          &::after
            top 1rem

          &::before
            right 17rem

      .objects
        display flex
