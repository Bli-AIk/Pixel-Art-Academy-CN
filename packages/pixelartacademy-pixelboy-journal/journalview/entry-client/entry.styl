@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy-apps-journal-journalview-entry
  absolute-cover()
  overflow hidden

  .writing-area
    position absolute
    color atariGrey(1)
    daily()
    line-height 10rem
    cursor text
    hyphens auto
    column-fill auto

    p
      margin 10rem 0

    .ql-editor
      > *:first-child
        margin-top 0

    .ql-clipboard
      display none

  .objects-area
    position absolute
    display none
    top 40rem
    left 110rem

    .show-objects-button
      position relative
      width 35rem
      height 15rem
      background none
      border none

      &::after
        content ''
        position absolute
        top 2rem
        left 4rem
        z-index 1
        width 29rem
        height 11rem
        background image('/pixelartacademy/pixelboy/apps/journal/pushpin.png') center / 100%

      &::before
        content ''
        position absolute
        z-index 0
        top 3rem
        left -1rem
        width 32rem
        height 11rem
        background image('/pixelartacademy/pixelboy/apps/journal/pushpin-shadow.png') center / 100%
        opacity 0.13

      &:hover
        &::after
          top 1rem

        &::before
          left -3rem
