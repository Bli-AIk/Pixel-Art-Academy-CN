@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-practice-journal-entry-memorypreview
  padding 10rem

  .author-image
    position absolute
    top 6rem
    left 10rem
    width 16rem
    height 64rem
    z-index 2

  .image-preview
    .image
      position absolute
      top 10rem
      right 10rem
      max-height 48rem
      max-width 70rem
      border 2rem solid atariGray(7)

    & ~ .icon
      margin-left 0

  .icon
    position relative
    z-index 1
    width 50rem
    height 50rem
    margin 5rem auto
    background-image image('/pixelartacademy/pixelboy/apps/journal/icon.png')

  .title
    text-align center
    daily()

  .landsofillusions-items-sync-memories-components-actionspreview
    .characters
      display flex
      position absolute
      left 10rem
      right 10rem
      bottom 10rem

      .character
        width 16rem
        height 13rem
        overflow hidden

        .image
          top -11rem

    .actions-area
      position absolute
      left 10rem
      right 10rem
      bottom 25rem
      height 40rem
      overflow hidden

      .actions
        position absolute
        bottom 0
        left 0
        right 0

        .action
          margin-bottom 5rem

          &:last-child
            margin 0
