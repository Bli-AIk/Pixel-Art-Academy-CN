@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-tutorials-drawing-instructions-desktop
  position absolute
  bottom 0
  left 0
  right 0
  daily()
  line-height 9rem
  color atariGray(0)

  .paper
    position absolute
    width 200rem
    left calc(50% - 100rem)
    transition top 0.35s ease-out

    &.closed:hover
      top -17rem !important

    &.open:hover
      .header
        .close-hint
          visibility visible

    &::after
      content ''
      display block
      position absolute
      z-index 2
      left 18rem
      width 1rem
      top 0
      bottom 0
      background-color atariRed(5)

    .header
      position relative
      height 14rem
      cursor pointer

      &:hover
        .close-hint
          color atariGray(1)

      &::before
      &::after
        content ''
        display block
        z-index 2

      &::before
        absolute-cover()
        background-color atariGray(5)

      &::after
        position absolute
        top 0
        bottom 0
        left -1rem
        width 1rem
        background-color #ebdfd3
        mix-blend-mode multiply

      .close-hint
        position absolute
        z-index 2
        right 3rem
        top 1rem
        visibility hidden
        color atariGray(2)

    .container
      position relative

      .gutter
        position absolute
        top 0
        bottom 0
        left 0
        width 18rem

        &::before
        &::after
          content ''
          display block
          z-index 2

        &::before
          position absolute
          top 0
          bottom 0
          left -1rem
          width 14rem
          background image('/pixelartacademy/tutorials/drawing/instructions/desktop/left-shadow.png') 0 0 / 14rem 27rem
          mix-blend-mode multiply

        &::after
          absolute-cover()
          background image('/pixelartacademy/tutorials/drawing/instructions/desktop/left.png') 0 0 / 18rem 27rem

      &::before
        content ''
        display block
        absolute-cover()
        z-index 2
        left 19rem
        background repeating-linear-gradient(atariGray(5), atariGray(5) 8rem, atariCyan(5) 8rem, atariCyan(5) 9rem)

      .content
        position relative
        z-index 2
        padding 0 10rem 1em 25rem
