@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-challenges-drawing-pixelartlineArt-referenceselection-portfoliocomponent
  position absolute
  bottom 0
  right 0
  width 63rem
  height 81rem
  pointer-events initial

  &::before
  &::after
    content ''
    position absolute
    z-index 1
    bottom 0
    height 81rem

  &::before
    left 0
    width 7rem
    background-image image('/pixelartacademy/challenges/drawing/pixelartlineart/sheet-portfolio-border.png')

  &::after
    right 0
    width 56rem
    background-image image('/pixelartacademy/challenges/drawing/pixelartlineart/sheet-portfolio-transparent.png')
    opacity 0.44

  .references
    position absolute
    right 2rem
    bottom 2rem
    width 52rem
    height 77rem

  .reference
    position absolute
    width calc(100% - 11rem)
    height calc(100% - 4rem)
