@import "{retronator:retronator-identity}/style/style.import"

.fatamorgana-splitview
  display flex
  width 100%
  height 100%

  &.top
    flex-direction column

  &.bottom
    flex-direction column-reverse

  &.left
    flex-direction row

  &.right
    flex-direction row-reverse

  &.top
  &.bottom
    > .divider
      width 100%
      height 1rem
      cursor ns-resize

  &.left
  &.right
    > .divider
      width 1rem
      height 100%
      cursor ew-resize

  &.fixed
    > .divider
      display none

  &.dragging
    &.top
    &.bottom
      cursor ns-resize

    &.left
    &.right
      cursor ew-resize

  > .divider
    flex-shrink 0

  .remaining-area
    flex-grow 1
