@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixeltosh-programs-finder-desktop
  fixed-cover()
  top 14rem

  .programs
    display flex
    absolute-cover()
    flex-flow column wrap-reverse
    align-items flex-start
    list-style none
    margin 0
    padding 0

    .program
      max-width 64rem
      margin 10rem

      .program-button
        font inherit
        background none
        border none
        padding 0

        .icon
          display block
          margin 0 auto 2rem
          width 20rem
          height 20rem

        .name
          display inline-block
          max-width 64rem
          padding 1rem 1rem 1rem 2rem
          background white
          overflow-wrap break-word
