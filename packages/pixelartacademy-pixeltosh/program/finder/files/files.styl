@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixeltosh-programs-finder-files
  margin 5rem

  .files
    display flex
    height 100%
    align-items flex-start
    list-style none
    margin 0
    padding 0

    .file
      max-width 64rem

      .file-button
        font inherit
        background none
        border none
        padding 0

        .icon
          display block
          margin 0 auto 2rem
          width 20rem
          height 20rem

        .name
          display inline-block
          max-width 64rem
          padding 1rem 1rem 1rem 2rem
          background white
          overflow-wrap break-word
