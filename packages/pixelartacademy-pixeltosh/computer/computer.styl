@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixeltosh-computer
  position relative
  height 100%

  .case
    position absolute
    left -62rem
    top -89rem
    width 444rem
    height 601rem
    background-image image('/pixelartacademy/pixeltosh/computer/case.png')

  .screen
    position relative
    left -1rem
    top -1rem
    width 322rem
    height 216rem
    background atariGray(0)

    &.crt-emulation
      filter sepia(15%) hue-rotate(180deg) blur(0.2rem) brightness(1.15) contrast(2) blur(0.2rem)

      &::after
        content ''
        absolute-cover()
        pointer-events none
        background-image image('/pixelartacademy/pixeltosh/computer/scanline.png')
        background-size 1rem 1rem
        image-rendering auto

    &:not(.crt-emulation)
      filter brightness(0.88)

    .os
      position absolute
      left 1rem
      right 1rem
      top 1rem
      bottom 1rem
