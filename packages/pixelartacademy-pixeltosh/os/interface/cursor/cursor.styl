@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixeltosh-os-interface-cursor
  position absolute
  left 0
  top 0
  z-index 100
  pointer-events none

  .cursor
    position absolute

    &::after
      content ''
      position absolute

    .fatamorgana-interface.arrow &::after
      left -1rem
      top -1rem
      width 10rem
      height 14rem
      background-image image('/pixelartacademy/pixeltosh/os/cursors/arrow.png')
