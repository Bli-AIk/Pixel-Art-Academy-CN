@import "{retronator:retronator-identity}/style/style.import"

balloonResizeDuration = 0.5s

.pixelartacademy-pixeltosh-instructions
  position absolute
  right 0
  bottom 0
  adventure()
  color atariGray(0)

  .retro
    position absolute
    right -20rem
    bottom -19rem
    width 30rem
    height 43rem
    background-image image('/pixelartacademy/pixeltosh/instructions/retro.png')
    pointer-events none

    &::after
      content ''
      position absolute
      left 6rem
      top 10rem
      width 9rem
      height 5rem
      background-image image('/pixelartacademy/pixeltosh/instructions/retro-peaceful.png')

    &.smirk-up::after
    &.smirk-down::after
      top 9rem
      width 8rem
      height 6rem

    &.smirk-up::after
      background-image image('/pixelartacademy/pixeltosh/instructions/retro-smirk-up.png')

    &.smirk-down::after
      background-image image('/pixelartacademy/pixeltosh/instructions/retro-smirk-down.png')

    &.ohno::after
      top 9rem
      width 7rem
      height 6rem
      background-image image('/pixelartacademy/pixeltosh/instructions/retro-ohno.png')

  .speech-balloon
    position absolute
    right 7rem
    bottom 28rem
    visibility hidden
    border 5rem solid transparent
    border-image image('/pixelartacademy/pixeltosh/instructions/speechballoon.png') 6 / 6rem / 1rem
    text-align center

    &::after
      content ''
      position absolute
      right -1rem
      bottom -14rem
      width 9rem
      height 9rem
      background-image image('/pixelartacademy/pixeltosh/instructions/speechballoon-tail.png')

    &.open
      visibility visible

      .content-area
        .content
          visibility visible

    .content-area
      width 0
      height 0
      overflow hidden
      transition all balloonResizeDuration cubic-bezier(0, 0, 0, 1)
      background atariGray(7)

      .content
        width 120rem
        visibility hidden
        transition visibility balloonResizeDuration balloonResizeDuration

        p
          margin 0 0 5rem

          &:last-child
            margin-bottom 0
