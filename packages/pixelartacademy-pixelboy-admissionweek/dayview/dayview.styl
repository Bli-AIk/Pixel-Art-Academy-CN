@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy-apps-admissionweek-dayview
  position relative
  z-index 11
  width 229rem
  margin 0 auto
  padding 5rem 10rem 70rem
  display none

  &.visible
    display block

  h1
    text-transform uppercase
    kyrou-7()
    margin 5rem 0

  h2
    text-transform uppercase
    kyrou-7()
    font-weight normal
    margin 15rem 0 5rem

  button
    padding 0 2rem 0 3rem
    border 1rem solid atariLime(5)
    color atariLime(7)
    background atariLime(2)
    uni()
    text-transform uppercase

    &:hover
      background atariLime(3)
      color atariGrey(7)

  .displayed-apps
    list-style none
    padding 0
    margin 5rem 0

    &.locked-apps
      .displayed-app
        .recommendation
          position relative
          margin 5rem 5rem 0 5rem
          padding-left 10rem
          color atariLime(5)
          checkout()

          &::before
            content '*'
            display block
            position absolute
            top 0
            left 0

          .personality-factor
            text-transform uppercase

        .app-unlock-area
          position absolute
          top 5rem
          right 5rem

    .displayed-app
      position relative
      padding 5rem
      border 1rem solid atariOrange(1)
      background atariGrey(0)
      margin-bottom 5rem

      .pixelartacademy-pixelboy-apps-admissionweek-dayview-app
        display flex

        .icon-area
          width 54rem
          padding 2rem
          margin-right 10rem

          .icon
            width 50rem
            height 50rem

        .info
          .header
            kyrou-7()
            margin 3rem 0 5rem

          .features
            list-style square
            color atariGrey(5)
            padding-left 8rem

            .feature
              margin-bottom 3rem

  .unlock-recommendation
    margin 5rem 0 15rem
    text-align center
    color atariLime(5)

    .unlock-recommendation-button
      border-color atariGrey(3)
      color atariGrey(5)
      background atariGrey(1)

      &:hover
        background atariGrey(2)
        color atariGrey(7)

  .progress
    margin-top 15rem

    h2
      margin 10rem 0 5rem 10rem
      kyrou-5()

    .goal-title
      &.completed
        color atariLime(7)

        &::after
          content ' âœ“'
          daily()
          font-weight bold

    .goal-info-area
      margin-left 20rem

      &.study-group
        .info-item.members
          .members
            list-style none
            padding 0
            margin 0

      .info-item
        display flex
        margin-bottom 8rem

        .label
          width 80rem
          margin-right 10rem
          flex-shrink 0
          color atariGrey(6)

        .value
          text-transform uppercase
          checkout()

          &.completed
            color atariLime(6)

          &.not-completed
            color atariPeach(6)
