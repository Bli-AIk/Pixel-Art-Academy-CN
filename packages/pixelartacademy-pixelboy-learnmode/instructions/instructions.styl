@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixelboy-apps-learnmode-instructions
  position absolute
  left calc(50% - 114.5rem)
  width 229rem
  padding 10rem 20rem
  visibility hidden
  text-align justify

  &.visible
    visibility visible

  .address
    text-align center
    text-transform uppercase
    uni()

  .prompt
    text-align center

    .start-button
      margin-top 5rem
      padding 1rem 3rem 0
      border 1rem solid atariGreen(4)
      color atariGreen(7)
      background atariGreen(1)
      kyrou-7()
      text-transform uppercase

      &:hover
        background atariGreen(2)
        color atariGray(7)
