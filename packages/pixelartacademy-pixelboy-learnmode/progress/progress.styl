@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixelboy-apps-learnmode-progress
  position relative
  width 229rem
  margin 0 auto
  padding 5rem 10rem 70rem
  display none

  &.visible
    display block

  h1
    text-transform uppercase
    kyrou-7()
    margin 5rem 0

  h2
    text-transform uppercase
    kyrou-7()
    font-weight normal
    margin 15rem 0 5rem

  button
    padding 0 2rem 0 3rem
    border 1rem solid atariLime(5)
    color atariLime(7)
    background atariLime(2)
    uni()
    text-transform uppercase

    &:hover
      background atariLime(3)
      color atariGray(7)

  .progress
    margin-top 15rem

    h2
      margin 10rem 0 5rem 10rem
      kyrou-5()

    .goal-title
      &.completed
        color atariLime(7)

        &::after
          content ' âœ“'
          daily()
          font-weight bold

    .goal-info-area
      margin-left 20rem

      .info-item
        display flex
        margin-bottom 8rem

        .label
          width 80rem
          margin-right 10rem
          flex-shrink 0
          color atariGray(6)

        .value
          text-transform uppercase
          checkout()

          &.completed
            color atariLime(6)

          &.not-completed
            color atariPeach(6)
