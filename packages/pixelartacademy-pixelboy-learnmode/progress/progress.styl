@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixelboy-apps-learnmode-progress
  position relative
  width 229rem
  min-height 230rem
  margin 0 auto
  padding 5rem 10rem 70rem
  display none

  &.visible
    display block

  h1, h2, h3, h4
    margin 0
    color atariGray(7)

  h1
    text-transform uppercase
    kyrou-9()

  h2
    text-transform uppercase
    kyrou-7()

  h3
    kyrou-7()
    font-weight normal

  h4
    daily()
    font-weight normal

  button
    padding 0 2rem 0 3rem
    border 1rem solid atariGreen(5)
    color atariGreen(7)
    background atariGreen(2)
    uni()
    text-transform uppercase

    &:hover
      background atariGreen(3)
      color atariGray(7)

  input[type='checkbox']
    display none

    & + .label::before
      content 'âœ”'
      display inline-block
      width 7rem
      height 7rem
      padding 0 0 1rem 1rem
      margin-right 6rem
      vertical-align baseline
      border 1rem solid atariOrange(1)
      text-align center
      color transparent
      adventure()

    &:checked + .label::before
      color inherit

  .contents
    margin 0
    padding 0
    list-style none

  .settings
    .title
      font-weight normal
      margin 10rem 0

    .completionist
      cursor pointer
