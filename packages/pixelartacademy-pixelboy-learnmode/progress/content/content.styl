@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixelboy-apps-learnmode-progress-content
  margin 10rem 0

  &.unavailable
    color atariGray(3)

  &.locked
    .title-area
      .title::after
        content ''
        display inline-block
        width 7rem
        height 8rem
        margin-left 4rem
        background-image url("/pixelartacademy/pixelboy/apps/learnmode/lock.png")

  .component
    &.completed
      color atariGreen(5)

      .title-area
        h1, h2, h3
          color atariGreen(6)

        .title::after
          content ' âœ“'
          daily()
          font-weight bold

    .title-area
      display flex

      &.has-contents
        cursor pointer

      .completion
        flex-grow 1
        text-align right

      h1 + .completion
      h2 + .completion
        font-weight bold

  .contents
    height 0
    overflow hidden

    &.displayed
      height auto
