@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixelboy-apps-learnmode-progress-content-appcontent
  display flex
  position relative
  padding 5rem
  border 1rem solid atariOrange(1)
  background atariGray(0)
  margin-bottom 5rem

  .icon-area
    width 54rem
    padding 2rem
    margin-right 10rem

    .icon
      width 50rem
      height 50rem

  .info
    flex-grow 1

    .title-area
      margin 3rem 0 5rem

    .features
      list-style square
      color atariGray(5)
      padding-left 8rem

      .feature
        margin-bottom 3rem

    .app-unlock-area
      position absolute
      top 5rem
      right 5rem
