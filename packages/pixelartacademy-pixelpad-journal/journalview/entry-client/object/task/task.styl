@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixelpad-apps-journal-journalview-entry-object-task
  cursor default
  border-bottom 1rem solid atariGray(2)
  white-space normal

  .goal
    margin-bottom 4rem
    border-bottom 1rem solid atariGray(2)
    padding 1rem
    adventure()
    line-height 6rem
    text-transform uppercase

  .task
    &.completed
      .confirmation
        &::after
          content 'âœ“'
          position absolute
          left 2rem
          top 0

    &.completed
    &.read-only
      .instructions
      .complete
        display none

    &:not(.active)
      .complete
        display none

    .confirmation
      position relative

      &::before
        position relative
        content ''
        width 8rem
        height 8rem
        border 1rem solid atariGray(2)
        float left

      &.enabled
        cursor pointer

      .directive
        margin 0 0 4rem 13rem

    .instructions
      margin 3rem auto
      adventure()
      line-height 7rem

    .complete
    .prerequisites
      margin 3rem 0
      adventure()
      line-height 7rem

    .complete
      color atariGreen(2)

    .prerequisites
      color atariRed(2)
