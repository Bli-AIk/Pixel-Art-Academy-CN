@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-learnmode-locations-mainmenu
  fixed-cover()
  color atariGray(0)
  background-color rgba(atariGray(7), 0.75)
  text-align center
  opacity 0
  transition opacity 1s

  &.visible
    opacity 1

  .content-area
    position absolute
    z-index 0

    .header-area
      position absolute
      z-index 1
      left 0
      right 0
      top 0

      .header
        display inline-block
        position relative
        vertical-align middle
        width 100%

        .title
          margin 0
          line-height initial

          .pixel-art-academy
          .learn-mode
            display block
            position relative
            font-weight bold
            acme-9()

          .learn-mode
            margin-top -5rem

        .by
          margin-top 1rem
          adventure()
          line-height initial

        .retro
          position absolute
          top -1rem
          right 48rem
          width 25rem
          z-index 2

        .divider
          position absolute
          left 20rem
          right 20rem
          top 27rem
          z-index 1
          border-bottom 1rem solid atariGray(0)

    .menu-area
      position absolute
      left 0
      right 0

      .landsofillusions-components-menu-items
        display inline-block
        vertical-align middle

        .actionable:not(button)
          display inline-block
          width 100%
          padding 1rem 10rem 0

        .actionable
        button
          &:hover
            background atariGray(0)
            color atariGray(7)
