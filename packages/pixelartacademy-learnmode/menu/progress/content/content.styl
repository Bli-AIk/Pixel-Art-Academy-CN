@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-learnmode-menu-progress-content
  margin-top 8rem

  &.depth-2
    margin-bottom 16rem

  &.unavailable
    color atariGray(3)

  &.locked
    .title-area
      .title::after
        content ''
        display inline-block
        width 7rem
        height 8rem
        margin-left 4rem
        background-image url("/pixelartacademy/learnmode/menu/progress/lock.png")

  &.depth-4
    padding-left 10rem

  .component
    &.completed
      color atariGreen(5)

      .title-area
        h1, h2, h3, h4
          color atariGreen(6)

        .title::after
          content ' âœ“'
          daily()
          font-weight bold

    .title-area
      display flex

      &.has-contents
        cursor pointer

      .completion
        flex-grow 1
        text-align right

      h1 + .completion
      h2 + .completion
        font-weight bold

  .contents
    list-style none
    margin 0
    padding 0
    height 0
    overflow hidden

    &.displayed
      height auto
