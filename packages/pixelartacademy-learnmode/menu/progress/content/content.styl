@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-learnmode-menu-progress-content
  margin-top 8rem

  &.depth-1
    color atariGray(7)

  &.depth-2
    margin-bottom 16rem
    color atariGray(6)

  &.depth-3
    color atariGray(5)

  &.depth-4
    padding-left 10rem
    color atariGray(4)

  &.unavailable
    color atariGray(3)

  &.locked
    .title-area
      .title::after
        content ''
        display inline-block
        width 7rem
        height 8rem
        margin-left 4rem
        background-image url("/pixelartacademy/learnmode/menu/progress/lock.png")

  .component
    &.completed
      color atariGreen(5)

      .title-area
        h1, h2, h3, h4
          color atariGreen(6)

        .title::after
          content ' âœ“'
          daily()
          font-weight bold

    .title-area
      display flex
      align-items center
      justify-content space-between

      &:hover
        .preview
          .button
            color atariGray(7)
            background atariCyan(3)

            &:active
              border-bottom 0
              margin-top 2rem

      &.has-contents
        cursor pointer

      .title-with-tags
        .tags
        .title
          vertical-align middle

        .title
          display inline
          margin-right 10rem

        .tags
          display inline-block
          list-style none
          margin-right 10rem
          padding 0
          small-print()

          .tag
            display inline-block
            position relative
            text-transform uppercase
            padding-left 1rem
            margin 3rem 3rem 3rem 0

            &:hover
              .description
                display block

            &.free
            &.base-game
              background atariGreen(1)
              color atariGreen(6)

              &::before
              &::after
                border-color atariGreen(2)

              .description
                background atariGreen(0)

            &.future
              background atariIndigo(1)
              color atariIndigo(6)

              &::before
              &::after
                border-color atariIndigo(2)

              .description
                background atariIndigo(0)

            &::before
            &::after
              content ''
              absolute-cover()
              border 1rem solid

            &::before
              top -1rem
              bottom -1rem
              border-left none
              border-right none

            &::after
              left -1rem
              right -1rem
              border-top none
              border-bottom none

            .description
              display none
              position absolute
              z-index 1
              bottom 7rem
              left 50%
              width 120rem
              transform translateX(-50%)
              text-align center
              padding 3rem 4rem

      .preview
        visibility hidden

        &.visible
          visibility visible

        .button
          text-transform uppercase
          color atariCyan(7)
          background atariCyan(2)
          border none
          border-bottom 2rem solid atariCyan(1)

      h1 + .completion
      h2 + .completion
        font-weight bold

  .contents
    list-style none
    margin 0
    padding 0
    height 0
    overflow hidden

    &.displayed
      height auto
