@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-learnmode-menu-progress-content
  margin-top 8rem

  &.depth-2
    margin-bottom 16rem

  &.unavailable
    color atariGray(3)

  &.locked
    .title-area
      .title::after
        content ''
        display inline-block
        width 7rem
        height 8rem
        margin-left 4rem
        background-image url("/pixelartacademy/learnmode/menu/progress/lock.png")

  &.depth-4
    padding-left 10rem

  .component
    &.completed
      color atariGreen(5)

      .title-area
        h1, h2, h3, h4
          color atariGreen(6)

        .title::after
          content ' âœ“'
          daily()
          font-weight bold

    .title-area
      display flex
      align-items center

      &:hover
        .preview
          .button
            color atariGray(7)
            background atariCyan(3)

            &:active
              border-bottom 0
              margin-top 2rem

      &.has-contents
        cursor pointer

      .tags
        list-style none
        padding 0
        margin 0 10rem
        small-print()

        .tag
          position relative
          display inline-block
          vertical-align middle
          text-transform uppercase
          padding-left 1rem

          &:hover
            .description
              display block

          &.free
            background atariGreen(1)
            color atariGreen(6)

            &::before
            &::after
              border-color atariGreen(2)

          &::before
          &::after
            content ''
            absolute-cover()
            border 1rem solid

          &::before
            top -1rem
            bottom -1rem
            border-left none
            border-right none

          &::after
            left -1rem
            right -1rem
            border-top none
            border-bottom none

          .description
            display none
            position absolute
            z-index 1
            bottom 7rem
            left 50%
            width 100rem
            transform translateX(-50%)
            background atariGray(1)
            color atariGray(5)
            text-align center
            padding 2rem

      .preview
      .completion
        flex-grow 1
        text-align right

      .preview
        .button
          text-transform uppercase
          color atariCyan(7)
          background atariCyan(2)
          border none
          border-bottom 2rem solid atariCyan(1)

      h1 + .completion
      h2 + .completion
        font-weight bold

  .contents
    list-style none
    margin 0
    padding 0
    height 0
    overflow hidden

    &.displayed
      height auto
