@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-learnmode-menu-progress
  fixed-cover()
  z-index 5

  .safe-area
    display none

  .viewport-area
    position absolute
    overflow-y scroll

    .progress-area
      position relative
      width 300rem
      margin 16rem auto

      h1, h2, h3, h4
        margin 0

      h1
        text-transform uppercase
        kyrou-9()

      h2
        text-transform uppercase
        kyrou-7()

      h3
        kyrou-7()
        font-weight normal

      h4
        daily()
        font-weight normal

      button
        padding 0 2rem 0 3rem
        border 1rem solid atariGreen(5)
        color atariGreen(7)
        background atariGreen(2)
        uni()
        text-transform uppercase

        &:hover
          background atariGreen(3)
          color atariGray(7)

      input[type='checkbox']
        display none

        & + .label::before
          content 'âœ”'
          display inline-block
          width 7rem
          height 7rem
          padding 0 0 1rem 1rem
          margin-right 6rem
          vertical-align baseline
          border 1rem solid atariGray(2)
          text-align center
          color transparent
          adventure()

        &:checked + .label::before
          color inherit

      .courses-area
      .settings
        > .title
          font-weight normal
          margin 10rem 0

      .courses-area
        .preview-description
          position relative
          margin 10rem 0
          padding 0 5rem 0 25rem
          color atariCyan(5)
          background atariCyan(1)
          overflow auto
          small-print()

          &::before
            content: '?'
            position absolute
            top 8rem
            left 9rem
            acme-9()
            font-weight bold

        .courses
          list-style none
          padding 0
          margin 0

          .course
            margin 10rem 0
            padding 0 10rem
            border 1rem solid atariGray(1)
            background atariGray(0)

      .settings
        .completionist
          cursor pointer
