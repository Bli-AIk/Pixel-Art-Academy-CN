@import "{retronator:landsofillusions}/style/style.import"

.sanfrancisco-c3-design-terminal-character
  .character
    width 220rem

    .full-name
    .short-name
      .landsofillusions-components-translationinput
        display inline-block
        width 100rem

    .dialog-color
      margin-right 2rem

    .dialog-preview
      color atariGray(5)
      padding 4rem 6rem
      background atariGray(0)
      pixel-text-outline black
      line-height 9rem

     .avatar-item
       display inline-block
       margin-right 4rem

       .name
         text-transform uppercase
         color atariGray(5)

    .preview
      position absolute
      bottom 1rem
      left 115rem
      width 89rem
      height 89rem
      background-image image('/sanfrancisco/c3/design/preview-cube.png')
