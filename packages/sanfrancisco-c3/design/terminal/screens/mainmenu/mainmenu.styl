@import "{retronator:retronator-identity}/style/style.import"

.sanfrancisco-c3-design-terminal-mainmenu
  .section
    display inline-block
    width 142rem
    vertical-align top

  .characters
    margin-right 8rem

  .document-selection
    .document
      .document-selection-button
        overflow hidden
        white-space nowrap

  .templates
    .category
      height 14rem
      border 1rem solid atariCyan(1)
      background atariGray(0)

      .category-selection
        width 100%
        border none

    .document-selection
      height 79rem
      margin-top -1rem
