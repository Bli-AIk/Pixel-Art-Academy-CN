@import "{retronator:landsofillusions}/style/style.import"

.sanfrancisco-c3-design-terminal-avatarpart
  .templates-area
    .new-part-button
    .template
      float left
      margin-left -1rem
      margin-top -1rem

    .new-part-button
      text-transform uppercase

    .templates
      list-style none
      margin 0
      padding 0

  .template-info
  .part
    width 220rem

  .template-info
    .label
      text-transform uppercase

    .name
      margin-bottom 3rem

      .landsofillusions-components-translationinput
        display inline-block

  .part
    .properties
      margin 0
      padding 0
      list-style none

      .property
        display inline-block
        vertical-align top
        margin 0 4rem 4rem 0
        text-transform uppercase
        color atariRed(2)

    .preview
      position absolute
      bottom 1rem
      left 115rem
      width 89rem
      height 89rem
      background-image image('/sanfrancisco/c3/design/preview-cube.png')
