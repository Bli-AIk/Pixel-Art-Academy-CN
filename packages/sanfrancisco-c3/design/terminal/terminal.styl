@import "{retronator:landsofillusions}/style/style.import"

.sanfrancisco-c3-design-terminal
  .sanfrancisco-c3-items-terminal
    .landsofillusions-components-overlay
      > .background
        background-image image('/sanfrancisco/c3/design/terminal-background.png')

    .avatar-part
      position relative
      padding 2rem 4rem
      border 1rem solid atariCyan(1)
      font inherit
      color atariGrey(5)
      background rgba(atariGrey(1), 0.5)
      width 34rem
      height 34rem
      cursor pointer

      &:hover
      &:focus
        border-color atariCyan(2)
        z-index 1

      &.draft-template
        background rgba(atariRed(1), 0.5)

      &.can-upgrade
        background rgba(atariGreen(1), 0.5)

        &::before
          content 'â†‘'
          display block
          position absolute
          top 1rem
          right 1rem
          color atariGreen(2)
