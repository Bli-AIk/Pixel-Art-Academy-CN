@import "{retronator:landsofillusions}/style/style.import"

.sanfrancisco-c3-design-terminal-properties-array
  display flex

  &.dragging
    .part
      cursor grabbing

    .dragging-part
      background atariGrey(1)

  .new-array-part-button
    text-transform uppercase

  .parts
    display flex
    flex-wrap wrap
    list-style none
    margin 0
    padding 0

  .avatar-part
    margin -1rem 0 0 -1rem
