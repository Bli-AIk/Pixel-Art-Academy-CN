@import "{retronator:landsofillusions}/style/style.import"

.sanfrancisco-c3-design-terminal-properties-outfitcolor
  .reflection
    .reflection-properties
      display table-cell
      border 1rem solid atariCyan(1)
      padding 2rem

      .reflection-property
        color atariGray(4)

        .reflection-property-name
          display inline-block
          border none
          checkout()

        .reflection-property-value
          display inline-block

          input
            padding 0
            border none
            background none
