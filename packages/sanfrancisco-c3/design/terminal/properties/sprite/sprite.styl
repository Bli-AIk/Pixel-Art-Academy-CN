@import "{retronator:landsofillusions}/style/style.import"

.sanfrancisco-c3-design-terminal-properties-sprite
  .sprite-selection
    position relative

    .landsofillusions-assets-components-assetslist
      display none
      position absolute
      z-index 1
      top calc(100% + 1rem)
      left 0
      width 150rem
      height 100rem
      overflow-y auto
      background atariGrey(0)
      border 1rem solid atariGrey(2)
      padding 1rem

      .new-asset-button
        position relative
        padding 2rem 4rem
        margin 1rem 1rem 2rem
        background atariGrey(1)
        border none
        font inherit
        color atariGrey(3)
        text-transform uppercase
        text-align center

        &:hover
        &:focus
          z-index 1
          background atariGrey(2)
          color atariGrey(4)
          outline none

      .assets
        list-style none
        padding 0
        margin 0
        color atariGrey(2)

        .asset
          cursor pointer
          padding 1rem 2rem

          &:hover
            background-color atariGrey(1)
            color atariGrey(3)

          &.active
            background-color atariGrey(1)
            color atariGrey(4)
            cursor default

    &.visible
      .landsofillusions-assets-components-assetslist
        display block

  .sprite-preview
    position relative
    margin-top 3rem
    overflow hidden

    .landsofillusions-assets-components-spriteimage
      position absolute
      left 50%
      top 50%
      // HACK: We use 49% because 50% does a weird 1px offset.
      transform translate(-50%, -49%)
