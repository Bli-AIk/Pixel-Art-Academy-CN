@import "{retronator:landsofillusions}/style/style.import"

.sanfrancisco-c3-design-terminal-properties-sprite-opendialog
  position fixed
  top 50%
  left 50%
  width 80vw
  z-index 1
  transform translate(-50%, -50%)
  padding 8rem
  border 1rem solid atariGray(2)
  background atariGray(1)
  box-shadow 5rem 5rem 0 rgba(atariGray(0), 0.5)

  .landsofillusions-assets-editor-filemanager
    margin 0 0 8rem
    height 70vh
    border 1rem solid atariGray(0)

  .actions
    button
      position relative
      padding 2rem 4rem
      margin 1rem 1rem 2rem
      background atariGray(2)
      border none
      font inherit
      color atariGray(4)
      text-transform uppercase
      text-align center

      &:hover
      &:focus
        z-index 1
        background atariGray(3)
        color atariGray(5)
        outline none
