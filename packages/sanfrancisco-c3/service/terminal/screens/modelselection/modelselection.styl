@import "{retronator:retronator-identity}/style/style.import"

.sanfrancisco-c3-service-terminal-modelselection
  .main-content
    absolute-cover()
    padding 10rem 90rem 10rem 10rem

    .model-name
      margin 4rem 0 6rem 0
      acme-7()
      font-weight normal
      color atariOrange(5)

    .category-name
      text-transform uppercase
      color atariRed(2)

    .actions
      position absolute
      bottom 10rem
      left 10rem
      right 90rem
      text-align center

  .preview
    position absolute
    bottom 1rem
    right 5rem
    width 74rem
    height 89rem
    background-image image('/sanfrancisco/c3/service/preview-cube.png')

    .sanfrancisco-c3-design-terminal-components-avatarpartpreview
      absolute-cover()
