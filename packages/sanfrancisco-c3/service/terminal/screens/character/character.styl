@import "{retronator:retronator-identity}/style/style.import"

.sanfrancisco-c3-service-terminal-character
  .main-content
    absolute-cover()
    overflow-y auto
    padding 10rem 90rem 10rem 10rem

  .character
    width 220rem

    .full-name
    .short-name
      .landsofillusions-components-translationinput
        display inline-block
        width 100rem

    .dialog-color
      margin-right 2rem

    .dialog-preview
      color atariGray(5)
      padding 4rem 6rem
      background atariGray(0)
      pixel-text-outline black
      line-height 9rem

    .category-name
      text-transform uppercase
      color atariRed(3)

  .preview
    position absolute
    bottom 1rem
    right 5rem
    width 74rem
    height 89rem
    background-image image('/sanfrancisco/c3/service/preview-cube.png')

    .sanfrancisco-c3-design-terminal-components-avatarpartpreview
      absolute-cover()
