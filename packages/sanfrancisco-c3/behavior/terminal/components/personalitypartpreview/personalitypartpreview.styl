@import "{retronator:retronator-identity}/style/style.import"

.sanfrancisco-c3-behavior-terminal-components-personalitypartpreview
  .factors
    position relative
    margin-top 3rem

    .sanfrancisco-c3-behavior-terminal-personality-factor-axis
      .names
        checkout()
        text-transform uppercase

        .left
        .right
          position absolute
          width 15rem
          overflow hidden

        .left
          left 0

        .right
          right 0

      .axis
        border none
        background none
        height 5rem
        margin 1rem 0 2rem

        .left
        .right
          position absolute
          top 0
          bottom 0

          .indicator
            display none

          .progress-bar
            position absolute
            top 0
            bottom 0

        .left
          left 20rem
          right 50%

          .progress-bar
            right 0

        .right
          left 50%
          right 20rem

          .progress-bar
            left 0
