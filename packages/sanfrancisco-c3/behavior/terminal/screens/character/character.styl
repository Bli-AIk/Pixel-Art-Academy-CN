@import "{retronator:landsofillusions}/style/style.import"

.sanfrancisco-c3-behavior-terminal-character
  .main-content
    absolute-cover()
    overflow-y auto
    padding 10rem 90rem 10rem 10rem

    .character
      width 220rem

      .actions
        margin-bottom 10rem

      .focal-points
        .focal-point
          input
            border none
            background atariGrey(1)
            padding 0

            &[type=number]
              width 27rem
              text-align right

            &[type=text]
              width 80rem
              text-overflow ellipsis

      .time-analysis
        .time-calculation
          background atariOrange(4)
          color atariGrey(0)
          padding 5rem

          tr
            &:first-child
            &:last-child
              text-transform uppercase

          td
            padding-bottom 3rem

            &:first-child
              padding-right 10rem

            &:last-child
              text-align right
