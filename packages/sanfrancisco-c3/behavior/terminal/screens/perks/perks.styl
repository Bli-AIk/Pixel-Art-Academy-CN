@import "{retronator:landsofillusions}/style/style.import"

.sanfrancisco-c3-behavior-terminal-perks
  .main-content
    absolute-cover()
    overflow-y auto
    padding 10rem 90rem 10rem 10rem

  .perks
    list-style none
    padding 0

    .perk
      padding-bottom 4rem

      .available
        cursor pointer

        .label
          &::before
            margin-right 3rem

  .perk-info
    position absolute
    bottom 10rem
    right 10rem
    width 110rem
    padding 1rem
    border 1rem solid atariGray(2)

    .name
      acme-7()
      border 1rem solid atariGray(1)
      text-align center
      padding 2rem 0 3rem

    .description
    .requirements
    .effects
      padding 3rem

    .description
      color atariYellow(5)
      border-bottom 1rem solid atariGray(1)

    .requirements
      color atariRed(5)

      .label
        color atariRed(2)

      &.satisfied
        color atariGreen(5)

        .label
          color atariGreen(2)

    .effects
      color atariCyan(4)
      border-bottom 1rem solid atariGray(1)
      list-style none
      margin 0

      .effect
        margin-bottom 3rem

        &:last-child
          margin 0

        &::before
          content 'â†’ '
