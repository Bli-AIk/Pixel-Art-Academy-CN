@import "{retronator:landsofillusions}/style/style.import"

.sanfrancisco-c3-behavior-terminal-personality-factor
  margin-bottom 5rem

  .information
    display flex
    color atariGrey(2)

    .factor-template
      flex-grow 1

      .label-name
        text-transform uppercase

    .menu
      position relative

      .factor-actions
        display none
        position absolute

      &:hover
        .factor-actions
          display block

  .traits
    margin-top 2rem
    color atariGrey(2)
    cursor pointer

    &:hover
      color atariGrey(3)

    .title
      text-transform uppercase

.sanfrancisco-c3-behavior-terminal-personality-factor-axis
  .names
  .axis
    display flex

  .left
  .right
    width 50%

  .right
    text-align right

  .names
    acme-7()

  .axis
    margin 3rem 0
    border 1rem solid atariGrey(2)
    background atariGrey(1)
    height 7rem
