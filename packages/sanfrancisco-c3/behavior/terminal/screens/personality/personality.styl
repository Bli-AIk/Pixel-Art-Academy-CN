@import "{retronator:landsofillusions}/style/style.import"

.sanfrancisco-c3-behavior-terminal-personality
  .main-content
    absolute-cover()
    overflow-y auto
    padding 10rem 90rem 10rem 10rem

    .templates-area
      .personality-part
        position relative
        margin-top -1rem
        padding 4rem 6rem
        border 1rem solid atariCyan(2)
        color atariGrey(5)
        background atariGrey(0)
        cursor pointer

        &:hover
        &:focus
          border-color atariCyan(3)
          z-index 1

        .name
          margin 3rem 0
          kyrou-7()
          color atariPeach(5)

      .templates
        list-style none
        margin 0
        padding 0

  .template-info
  .part
    width 220rem

  .template-info
    .label
      text-transform uppercase

    .name
      margin-bottom 3rem

      .landsofillusions-components-translationinput
        display inline-block

  .auto-traits
    cursor pointer
    color atariCyan(4)

  .personality
    .factors
      list-style none
      margin 15rem
      padding 0
