@import "{retronator:landsofillusions}/style/style.import"

.sanfrancisco-c3-behavior-terminal-personality
  .main-content
    absolute-cover()
    overflow-y auto
    padding 10rem 90rem 10rem 10rem

  .templates-area
    .new-part-button
    .template
      float left
      margin-left -1rem
      margin-top -1rem

    .new-part-button
      text-transform uppercase

    .templates
      list-style none
      margin 0
      padding 0

  .template-info
  .part
    width 220rem

  .template-info
    .label
      text-transform uppercase

    .name
      margin-bottom 3rem

      .landsofillusions-components-translationinput
        display inline-block

  .auto-traits
    cursor pointer
    color atariCyan(4)

  .personality
    .factors
      list-style none
      margin 15rem
      padding 0
