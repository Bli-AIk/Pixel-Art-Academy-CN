@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixeltosh-programs-pinball-interface-parts
  position relative
  height 100%
  padding 10rem
  background white
  thintel()

  .parts
    display flex
    list-style none
    padding 0
    margin 0
    flex-wrap wrap
    align-items flex-end

    .part
      position relative
      margin 0 10rem 10rem 0

      .image
        text-align center
        padding 3rem

      .name
        text-transform uppercase

      .description
        display none
        position absolute
        z-index 1
        left 50%
        top 100%
        width 100rem
        transform translateX(-50%)
        padding 3rem
        border 1rem solid black
        background white
        text-align center
        pointer-events none

  .playfield-overlay
    position absolute
    left -180rem
    top 0

    .selection
      position absolute

      &.visible
        border-image image('/pixelartacademy/pixeltosh/os/dither-border-white.png') 1 / 1rem repeat
        mix-blend-mode difference

    .polygon-debug
      position absolute
      left 0
      top 0
      width 180rem
      height 200rem
      pointer-events none

      canvas
        width 100%
        height 100%
