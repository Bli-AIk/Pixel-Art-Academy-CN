.calendar-pixel-dailies-theme
  background #333
  border 2px solid #666
  padding 1em
  max-width 90%
  margin-bottom 2em

  .tweet-text
    margin 0 0 1em

  .submissions
    list-style none
    padding 0
    text-align center

    .submission
      display inline-block
      width 48%

      background #444
      padding 1em

      .images
        list-style none
        padding 0

        .image
          max-width 506px

          a
            &:hover
              background none

            img
            video
              max-width 100%

      .user
        margin 0

        a
          text-decoration none
