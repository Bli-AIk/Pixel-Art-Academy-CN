@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-stilllifestand-inventory
  position absolute
  bottom 0
  left 0
  right 0
  height 24rem
  opacity 0.5
  //background rgba(black, 0.2)
  transition all 0.2s

  &:hover
    opacity 1
    background rgba(black, 0.2)

    .items
      .hint
        display block

  &.grabbing
    cursor grabbing

    .items
      .item
        cursor grabbing

  .name
    position absolute
    left 12rem
    top 0
    bottom 0
    padding 2rem
    line-height 20rem
    vertical-align middle
    color atariGrey(0)
    text-transform uppercase

  .items
    display flex
    margin 0
    padding 2rem
    justify-content center
    list-style none

    .item
      padding 2rem
      cursor grab

    .hint
      display none
      line-height 28rem
      vertical-align middle
      color atariGrey(0)
