@import "{retronator:landsofillusions}/typography/typography.import"

body
  margin 1em
  background black
  uni()
  color console-grey

h1
  kyrou-9()
  color console-white
  font-weight normal

h2
  kyrou-7()
  color console-white
  font-weight normal

h3
  kyrou-5()
  color console-white
  font-weight normal

ul
  list-style square

ul, ol
  li
    margin-bottom 1em

strong
  font-weight normal
  color console-white

a
  color console-white
  cursor pointer

  &:hover
    background-color console-white
    color black

hr
  margin 2em 0
  height 0.1em
  border none
  background-color #333

button
  uni()
  background #666
  color black
  border none
  border-bottom 0.2em solid #333
  cursor pointer

  &:focus
  &:hover
    background: #777
    outline none

  &:active
    border-bottom none
    position relative
    top 0.2em
