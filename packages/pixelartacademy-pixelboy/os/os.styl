@import "{retronator:landsofillusions}/style/style.import"

// When just OS is loaded directly to html.
html.pixelartacademy-pixelboy-os-root
html.pixelartacademy-pixelboy-os-root body
  margin 0
  padding 0
  height 100%

  #__blaze-root
    height 100%

html.landsofillusions-style-adventure
  .pixelartacademy-pixelboy-os
    cursor default

    a
      cursor pointer

.pixelartacademy-pixelboy-os-root
  background atariCyan(0) image('/pixelartacademy/pixelboy/background.png') center bottom repeat-x
  background-size 21rem 21rem !important

.pixelartacademy-pixelboy-os
  position relative
  color atariGrey(7)
  height 100%
  uni()
  cursor default

  *
    box-sizing border-box

  a
    cursor pointer

  // Pixel art image scaling
  img
  canvas
    image-rendering optimizeSpeed
    image-rendering -moz-crisp-edges            // Firefox
    image-rendering -o-crisp-edges              // Opera
    image-rendering -webkit-optimize-contrast   // Chrome, Safari
    image-rendering pixelated                   // Chrome
    image-rendering optimize-contrast           // CSS3
    -ms-interpolation-mode nearest-neighbor     // IE8+

  .app-wrapper
    height 100%

    .app
      min-height 100%

  .shortcuts-table
    position absolute
    z-index 10
    bottom -35rem
    left 0
    right 0
    transition bottom 1s

    &.visible
      bottom 0
