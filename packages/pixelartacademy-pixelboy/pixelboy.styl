@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy
  color atariGrey(5)
  adventure()

  *
    box-sizing border-box

  // Pixel art image scaling
  img
  canvas
    pixel-image-rendering()

  h1
    kyrou-9()
    color atariGrey(7)
    font-weight normal

  h2
    kyrou-7()
    color atariGrey(7)
    font-weight normal

  h3
    kyrou-5()
    color atariGrey(7)
    font-weight normal

  ul
    list-style square

  ul, ol
    li
      margin-bottom 1em

  strong
    font-weight normal
    color atariGrey(7)

  a
    color atariGrey(7)
    cursor pointer

    &:hover
      background-color atariGrey(7)
      color atariGrey(0)

  hr
    margin 2em 0
    height 1rem
    border none
    background-color atariGrey(3)

  button
    display inline-block
    position relative
    z-index 0
    padding 4rem 8rem
    adventure()
    color black
    border none
    border-bottom 4rem solid transparent
    cursor pointer
    margin-bottom 10rem
    background transparent
    vertical-align top

    &::after
      content ''
      position absolute
      z-index -1
      top 0
      left 0
      right 0
      bottom -4rem
      background #666
      border-bottom 4rem solid #333

    &:hover
    &:focus
      outline none

      &::after
        background: #888

    &:active
      border-top 4rem solid transparent
      border-bottom none

      &::after
        top 0
        bottom 0
        border-bottom none

    &:disabled
      color atariGrey(4)

    &.link-button
      color atariGrey(7)
      cursor pointer
      background none
      padding 0
      border none
      top 0

      &:hover
        background-color atariGrey(7)
        color atariGrey(0)

      &:active
        margin-bottom 0

  input
  textarea
    uni()
    background atariGrey(1)
    border 2px solid atariGrey(2)
    padding 0 4px
    color atariGrey(6)
    input-placeholder atariGrey(2)

    &:focus
      outline none
      border-color atariGrey(3)
