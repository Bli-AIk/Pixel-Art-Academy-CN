@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy-resizing
.pixelartacademy-pixelboy-resizing *
  cursor nesw-resize !important

.pixelartacademy-pixelboy
  visibility hidden

  &.visible
    visibility visible

  .landsofillusions-components-overlay
    > .safe-area
      display none

  .device
    position absolute
    z-index 1
    bottom -100vh
    left 50%
    transform translateX(-50%)
    transition bottom 1s, transform 1s

    &.active
      &.screen-center
        bottom 50%
        transform translate(-50%, 50%)

      &.screen-bottom
        bottom 35rem

    .landsofillusions-components-hand
      position absolute
      left -68rem
      bottom -66rem

    .os
      absolute-cover()
      border none
      transform translateX(0)
      overflow hidden

    .screen
      position absolute
      left -1rem
      top -1rem
      right -1rem
      bottom -1rem
      border solid 1rem atariGrey(1)
      box-shadow:
        0 2rem 0 -1rem atariGrey(2),
        -1rem 1rem atariGrey(3)

    .glass
      position absolute
      left -4rem
      top -4rem
      right -4rem
      bottom -4rem
      border solid 1rem atariGrey(7)
      opacity 0.75
      box-shadow -1rem 1rem atariGrey(5)

      &.resizable
        cursor nesw-resize
