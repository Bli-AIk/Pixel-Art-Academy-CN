@import "{retronator:landsofillusions}/style/style.import"

.retronator-hq-items-tablet-apps-menu
  absolute-cover()
  background atariBlue(1)

  .paper
    background atariYellow(5)
    position absolute
    width 256rem
    height 192rem
    top 4rem
    left 22rem
    zx-spectrum()
    text-transform uppercase
    color atariGrey(0)

    .title
      font-size 1em
      font-weight normal
      text-align center
      margin 40rem 0 16rem

    .apps
      margin-left 56rem
      line-height 10rem

      .app
        margin-bottom 3rem

        .link
          color inherit
          text-decoration none
          cursor pointer
          border-bottom 1rem solid atariGrey(0)

    .hint
      position absolute
      bottom 8rem
      left 0
      right 0
      text-transform none
      text-align center
      adventure()
