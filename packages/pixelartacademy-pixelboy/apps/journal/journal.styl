@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy-apps-journal
  margin-left 10rem

  .check-ins
    list-style none
    padding 0

    .check-in
      position relative
      margin-bottom 10rem

      .image
        position relative
        float left
        width 200rem
        min-height 1rem
        margin 0 0 5rem 5rem

        img
          max-width 100%
          margin-bottom 5rem

        a
          word-break break-all

        .actions
          display none
          position absolute
          z-index 1

      &:hover
        .image
          .actions
            display block

      .data
        float left
        width 206rem
        margin 0 10rem 5rem 0

        .date
          margin-bottom 5rem

        .text-area
          border 1rem solid atariGrey(1)
          padding 2rem

          .text
            position relative
            width 200rem

            textarea
              width 200rem
              min-height 5em
              background none
              border none
              resize none

      .comments
        clear both
