@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy-apps-journal
  .check-ins
    list-style none
    padding 0

    .check-in
      position relative
      margin-bottom 10rem

      .image
        position relative
        float left
        width 200rem
        min-height 1rem
        margin 0
        word-break break-all

        img
          max-width 100%

        .actions
          display none
          position absolute
          left 5rem
          bottom 5rem

        &:hover
          .actions
            display block

      .data
        float left
        width 200rem
        margin-right 10rem

        .date
          margin-bottom 5rem

        .text
          position relative

          textarea
            width 200rem
            background none
            border none
            resize none

      .check-in-conversations
        clear both
