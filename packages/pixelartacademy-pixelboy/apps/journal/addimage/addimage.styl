@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy-apps-journal-addimage
  absolute-cover()
  position fixed
  z-index 1
  overflow-y scroll
  padding 0 3em
  background rgba(0,0,0,0.9)

  .dialog
    margin 3em auto
    max-width 40em
    border 2px solid atariGrey(2)
    background atariGrey(1)
    padding 1em

  .check-in-form
    .text
      width 100%
      min-height 5em

    .image-preview
      max-width 100%

    .submit-area
      margin-top 2em

body.disable-scrolling
  overflow hidden
