@import "{retronator:landsofillusions}/style/style.import"

.retronator-hq-locations-checkout-display
  fixed-cover()
  z-index 1
  background atariOrange(7)
  overflow hidden

  .lands-of-illusions-components-overlay
    .background
      background none

  .retro
    position absolute
    z-index 2
    top 88rem
    left 33rem
    width 95rem
    height 130rem
    pointer-events none

  .table
    position absolute
    top 218rem
    left -80rem
    right -80rem
    bottom -60rem
    background atariGrey(5)
    border-top 1rem solid atariGrey(4)

  .display
    position absolute
    left 160rem
    top 10rem
    width 270rem
    height 160rem
    padding 5rem
    background atariGrey(1)
    border 1rem solid atariGrey(2)
    border-color atariGrey(3) atariGrey(2) atariGrey(0) atariGrey(1)
    box-shadow 0 2rem 0 -1rem atariOrange(3), -1rem 1rem 0 atariOrange(4), -2rem 3rem 0 atariOrange(5), -3rem 5rem 0 atariOrange(5)

    .screen
      height 148rem
      overflow-y scroll
      padding 5rem 7rem
      background atariGrey(0)
      border 1rem solid atariGrey(2)
      border-top-color atariGrey(0)
      border-right-color atariGrey(0)
      color atariGrey(4)

      h3
        margin 0
        acme-7()
        font-weight normal

      .recent-purchases
        width 140rem

        .retronator-store-components-top-supporters
          padding-left 15rem
