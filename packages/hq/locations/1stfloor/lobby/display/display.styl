@import "{retronator:landsofillusions}/style/style.import"

.retronator-hq-locations-lobby-display
  .safe-area
    display none

  .background
    .viewport-area
      overflow auto

      .display
        margin 30rem

        h2
          margin-top 2em
          kyrou-7()
          color atariGrey(7)
          font-weight normal

        h3
          kyrou-5()
          color atariGrey(7)
          font-weight normal

        a
          position relative
          display inline-block
          color atariGrey(5)
          cursor pointer
          text-decoration none
          white-space nowrap

          &::after
            display block
            content ''
            absolute-cover()
            right 1rem
            bottom -1rem
            border-bottom 1rem solid atariGrey(7)

          &:hover
            background-color atariGrey(7)
            color atariGrey(0)

            &::after
              display none

        .supporters-area
          display flex

          .area
            width 50%
            padding-right 10%

        .transaction-messages
          .retronator-store-components-top-supporters
            list-style none
            padding 0

            .supporter
              .name-amount-area
                width 20%
                float left

                .name
                  width 100%

                .amount
                  display none

              .message
                padding-left 20%
