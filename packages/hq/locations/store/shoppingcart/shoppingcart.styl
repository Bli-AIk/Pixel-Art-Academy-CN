@import "{retronator:landsofillusions}/style/style.import"

.retronator-hq-locations-store-shopping-cart
  fixed-cover()
  z-index 1
  background atari2600grey(0)
  overflow scroll

  .shopping-cart-area
    margin 30rem
    max-width 400rem

    h2
      margin-top 2em
      kyrou-7()
      color atari2600grey(7)
      font-weight normal

    h3
      kyrou-5()
      color atari2600grey(7)
      font-weight normal

    > .shopping-cart
      padding 1em
      margin-bottom 15px
      background #222
      border 2px solid #333

      .shopping-cart-items
        list-style none
        padding 0

        .cart-item
          position relative
          padding-right 210px
          margin-bottom 50px

          > .description
            margin-left 30px

          .price-area
            position absolute
            top 0
            right 0
            width 180px

            .price
              acme-9()
              text-align center
              margin-bottom 10px

            .remove-from-cart-button
              padding 6px 10px
              width 100%

            .gift-label
              display block
              text-align center
              padding-right 10px

          .bundle
            margin-left 30px

      .total
        text-align right

        .total-price
          display inline-block
          top 0
          right 0
          width 180px
          acme-9()
          text-align center

    .navigation
      position relative
      display flex
      margin 2em 1em
      align-items center

      a
        text-decoration none

      .item
        width 50%

      .continue
        text-align left

      .checkout
        text-align right

        .checkout-button
          width 180px
          padding 0.5em
          acme-5()
          text-transform uppercase

    a
      color atari2600grey(7)
      cursor pointer

      &:hover
        background-color atari2600grey(7)
        color atari2600grey(0)

    button
    .button
      position relative
      top -4px
      margin-top 4px
      background #666
      uni()
      color atari2600grey(0)
      border none
      border-bottom 4px solid #333
      cursor pointer

      &:focus
        background: #777
        outline none

      &:hover
        background: #888

      &:active
        border-bottom none
        margin-bottom 4px
        top 0

      &:disabled
        color #444
        cursor default

        &:hover
          background #666
