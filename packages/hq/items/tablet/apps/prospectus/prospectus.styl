@import "{retronator:landsofillusions}/style/style.import"

.retronator-hq-items-tablet-apps-prospectus
  position relative
  color atariGrey(5)

  *
    position relative
    box-sizing border-box

  .main-wrapper
    background black

  h1
    acme-9()
    font-weight normal

  h2
    acme-7()
    color atariGrey(7)
    text-transform uppercase

  .byline
    kyrou-7()

  p
    uni()
    margin-bottom 10rem

  a
    text-decoration none
    color #eee
    white-space nowrap

    &::after
      display block
      content ''
      absolute-cover()
      right 1rem
      border-bottom 1rem solid #eee

    &:hover
      background-color #eee
      color black

      &::after
        display none

  button:not(.reset)
  .button:not(.reset)
    display inline-block
    transform translateY(-4rem)
    margin-top 4rem
    background #666
    padding 4rem 8rem
    uni()
    color black
    border none
    cursor pointer
    margin-bottom 10rem

    &::after
      content ''
      position absolute
      top 100%
      left 0
      width 100%
      height 4rem
      background-color #333
      border none

    &:focus
      background: #777
      outline none

    &:hover
      &:after
        display block

    &:hover:not([disabled='false'])
      background: #888

    &:active:not([disabled='false'])
      border-bottom none
      transform translateY(0)

      &::after
        height 0

    &:disabled
      color atariGrey(4)

    &.link-button
      color atariGrey(7)
      cursor pointer
      background none
      padding 0
      border none
      top 0

      &:hover
        background-color atariGrey(7)
        color black

      &:active
        margin-bottom 0

  .cta
    &::before
      content '> '
      white-space nowrap

  input
  textarea
    uni()
    background #333
    border 2rem solid #666
    padding 0 4rem
    color atariGrey(6)

    &:focus
      outline none
      border-color #777

  blockquote
    kyrou-7()
    padding 10rem 0 20rem 20rem

    &::before
      content '"'
      font-size 20rem
      position absolute
      top 0
      left 0

    cite
      uni()
      font-style normal
      font-size 10rem
      text-transform none

  nav
    position absolute
    top 0
    left 0
    width 100%
    height 15rem
    line-height 15rem
    padding 0 15rem
    text-align right
    z-index 2
    background-color black
    uni()

    .social-media-icons
      float left
      font-size 12rem

      .social-media-icon
        display inline-block
        width 16rem
        height 16rem
        overflow hidden
        text-decoration none
        vertical-align top
        border 0
        float left

        &::after
          display:none

        img
          position absolute
          width 48rem
          height 32rem
          bottom -16rem

        &:hover
          background transparent

          img
            bottom 0

        &.facebook
          img
            left 0

        &.twitter
          img
            left -16rem

        &.tumblr
          img
            left -32rem

    & > a
      margin-left 8rem

      &::after
        display:none

      &.active
        text-transform uppercase

  #jumbotron
    min-height 100%
    height 100%
    text-align center
    background-image image('/retronator/hq/items/tablet/apps/prospectus/background.png')
    background-attachment fixed
    background-position center bottom
    background-size cover
    color #eee

    &::after
      content ''
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background-color black
      opacity 0.5
      z-index 0

  .jumbotron-content
    position absolute
    top 55%
    left 50%
    width 100%
    transform translate(-50%, -50%)
    z-index 1
    padding-left 0

    h1
      padding-bottom 15rem

      .subheading
        display block
        uni()
        margin-bottom 8rem

        .retronator
          retrotype()

      .title
        acme-9()
        font-weight bold
        display inline-block

        .author
          position absolute
          right 8rem
          bottom -9rem
          uni()
          color dark-grey

    .tagline
      margin-bottom 15rem

    .button
      uni()
      font-size 12rem
      background-color #eee
      color black
      text-shadow none
      text-transform uppercase
      border 0
      cursor pointer
      margin-bottom 15rem
      display inline-block
      padding 4rem 8rem

      &:hover
        color #eee
        text-shadow 1.5rem 1.5rem black
        background-color transparent

  section:not(.jumbotron)
    margin auto
    padding 25rem 0 10rem

  section > *
    padding 0 20rem 0 30rem

  .core-features
    text-align center

    .title
      kyrou-5()

    .description
      margin 10rem

  .core-features-img
    height 50rem
    padding-top 10rem

    > img
      position static

    > [src*="icon-character"]
      height 21rem

    > [src*="icon-yearbook"]
      height 22rem

    > [src*="icon-palette"]
      height 24rem

    > [src*="icon-book"]
      height 24rem

  .enrollment
    text-align center
    margin-top 10rem

  .student-life
    .infoblock
      min-height 200rem
      background-position center bottom
      background-repeat no-repeat
      background-attachment fixed
      background-size cover

      .line
        height 200rem

        .unit
          top 50%
          transform translateY(-50%)

          &.size2of3
            border 1rem solid #eee
            padding 10rem 10rem 0 10rem
            text-shadow 1rem 1rem black
            color #eee
            background hsla(211,20%,20%,0.7)

          .title
            display block
            kyrou-7()
            margin-bottom 5rem

      &.campus
        background-image image('/retronator/hq/items/tablet/apps/prospectus/campus.png')
        background-color #002C5C

      &.studio
        background-image image('/retronator/hq/items/tablet/apps/prospectus/studio.png')

      &.pixelboy
        background-image image('/retronator/hq/items/tablet/apps/prospectus/pixelboy.png')

      &.library
        background-image image('/retronator/hq/items/tablet/apps/prospectus/library.png')
        background-color black

  // On iOS background-attachment fixed does not work. Fallback to scroll.
  .ios
    .student-life
      .infoblock
        background-attachment scroll
        background-position center center

  .support-intro
    background-color #a7e2fd
    padding-top 20rem
    color black

  .featured-product
    background-image image('/retronator/hq/items/tablet/apps/prospectus/greetings.png')
    background-position left top
    background-repeat no-repeat
    background-color #a7e2fd
    background-size 350rem
    margin-bottom 10rem
    padding 20rem

    .products
      .store-item
        color black
        z-index 1
        padding 10rem
        margin-bottom 10rem
        background hsla(0,0%,100%,0.9)
        border 2rem solid #689ec2

        h3
          font-weight bold

        .purchase-product
          uni()
          text-transform uppercase
          padding 6rem 10rem
          background atariGreen(4)

          &:hover
            background atariGreen(5)

          &::after
            background-color atariGreen(2)

    .line.products
      max-width 380rem

    .more
      color black
      text-align center
      margin-top 20rem

  .products
    text-align center

    .store-item
      h3
        acme-9()
        font-weight normal
        line-height 15rem

      .price
        margin 15rem 0 5rem
        kyrou-9()
        font-weight bold

        small
          position relative
          top -2rem
          kyrou-7()
          font-weight normal

          .discounted-from
            text-decoration none

            &::after
              content ''
              position absolute
              top 50%
              left -2rem
              right -2rem
              height 0
              border-top 1rem solid

      .purchase-product
        margin 10rem
        display inline-block
        vertical-align middle

      .product-image
        height: 19rem
        display inline-block
        vertical-align middle

      ul
        list-style square
        text-align left

        li
          p
            margin-bottom 5rem

      .keycard
        text-align right
        uni()
        text-transform uppercase
        opacity 0.6

        .product-image
          display inline-block
          vertical-align middle

  .payment-smallprint
    color atariGrey(4)
    margin-bottom 0

  .payment-form-screen
    absolute-cover()
    background-color rgba(0, 0, 0, 0.8)
    overflow auto
    z-index 3

    .retronator-store-components-bundle-item
      .tooltip
        left 50%
        transform translateX(-50%)

    .bundle
      .headline
        kyrou-9()
        font-weight normal
        line-height 12rem

      .bundle-items
        list-style square

  .payment-form-wrapper
    width 240rem
    background black
    border 1rem solid #eee
    padding 20rem
    padding-top 30rem
    margin 30rem auto

    .submit-payment
      display inline-block
      width 100%
      margin 10rem 0

    .payment-errors
      uni()
      padding 5rem
      background #222
      margin-bottom 10rem

  .close-payment
    uni()
    position absolute
    right 0
    top 0
    padding 10rem
    cursor pointer

  .reset-payments
    font-size 10rem !important

  /* **************** GRIDS ***************** */
  .line::after
    content '.'
    display block
    height 0
    clear both
    visibility hidden

  .line
    max-width 380rem
    margin 0 auto
    @media only screen and (min-width: 1024px)
      margin auto

  .unit
    float left
    padding-right 15rem

  .size1of1
    float none

  .size1of2
    width 50%

  .size1of3
    width 33.33333%
  .size2of3
    width 66.66666%

  .size1of4
    width 25%
  .size3of4
    width 75%

  .size1of5
    width 20%
  .size2of5
    width 40%
  .size3of5
    width 60%
  .size4of5
    width 80%

.prospectus-disable-scrolling
  overflow hidden

.retronator-hq-items-tablet
  .retronator-hq-items-tablet-apps-prospectus
    absolute-cover()

    .home-link
      display none

    .main-wrapper
      absolute-cover()
      overflow scroll

    #jumbotron
      background-attachment local

    .student-life
      .infoblock
        background-attachment local

    section:not(.jumbotron)
      margin auto
      padding 15rem 0 10rem
