@import "{retronator:landsofillusions}/style/style.import"

.retronator-hq-items-tablet-apps-prospectus
  *
    position relative
    box-sizing border-box
    margin-top 0
    margin-left 0
    margin-right 0

  .main-wrapper
    background black

  h1
    font-size 1em
    font-weight normal

  h2
    acme-7()
    color console-white
    text-transform uppercase

  .byline
    kyrou-7()

  p
    uni()
    margin-bottom 1.5em

  a
    text-decoration none
    color #eee
    white-space nowrap

    &::after
      display block
      content ''
      absolute-cover()
      right 1rem
      border-bottom 1rem solid #eee

    &:hover
      background-color #eee
      color black

      &::after
        display none

  button:not(.reset)
  .button:not(.reset)
    display inline-block
    transform translateY(-4rem)
    margin-top 4rem
    background #666
    padding 4rem 8rem
    uni()
    color black
    border none
    cursor pointer
    margin-bottom 10rem

    &::after
      content ''
      position absolute
      top 100%
      left 0
      width 100%
      height 4rem
      background-color #333
      border none

    &:focus
      background: #777
      outline none

    &:hover
      &:after
        display block

    &:hover:not([disabled='false'])
      background: #888

    &:active:not([disabled='false'])
      border-bottom none
      transform translateY(0)

      &::after
        height 0

    &:disabled
      color console-dark-grey

    &.link-button
      color console-white
      cursor pointer
      background none
      padding 0
      border none
      top 0

      &:hover
        background-color console-white
        color black

      &:active
        margin-bottom 0

  .cta
    &::before
      content '> '
      white-space no-wrap

    &::after
      display inline
      position static
      content '_'
      border-bottom none
      right auto
      left auto
      top auto
      bottom auto
      white-space no-wrap
      animation blink 1s step-start 0s infinite;
      -webkit-animation blink 1s step-start 0s infinite;

    &:hover
      &::after
        display inline

  input
  textarea
    uni()
    background #333
    border 0.2em solid #666
    padding 0 4rem
    color console-light-grey

    &:focus
      outline none
      border-color #777

  @keyframes blink {
    50% {
      visibility hidden
    }
  }
  @-webkit-keyframes blink {
    50% {
      visibility hidden
    }
  }

  blockquote
    kyrou-7()
    padding 1em 0 2em 2em

    &::before
      content '"'
      font-size 2em
      position absolute
      top 0
      left 0

    cite
      uni()
      font-style normal
      font-size 1em
      text-transform none

  nav
    position absolute
    top 0
    left 0
    width 100%
    height 2em
    line-height 2
    padding 0 2em
    text-align right
    z-index 2
    background-color black
    uni()

    .social-media-icons
      float left
      font-size 1.25em

      .social-media-icon
        display inline-block
        width 16rem
        height 16rem
        overflow hidden
        text-decoration none
        vertical-align top
        border 0
        float left

        &::after
          display:none

        img
          position absolute
          width 48rem
          height 32rem
          bottom -16rem

        &:hover
          background transparent

          img
            bottom 0

        &.facebook
          img
            left 0

        &.twitter
          img
            left -16rem

        &.tumblr
          img
            left -32rem

    //around the width the nav bumps into 2 lins, hide it
    @media only screen and (max-width: 40em)
      display none

    & > a
      margin-left 8rem

      &::after
        display:none

      &.active
        text-transform uppercase

  #jumbotron
    min-height 100%
    height 100%
    text-align center
    background-image image('/retronator/hq/items/tablet/apps/prospectus/background.png')
    background-attachment fixed
    background-position center bottom
    background-size cover
    color #eee
    margin-bottom 2rem

    &::after
      content ''
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background-color black
      opacity 0.5
      z-index 0

  .jumbotron-content
    position absolute
    top 55%
    left 50%
    width 100%
    transform translate(-50%, -50%)
    z-index 1
    padding-left 0

    h1
      padding-bottom 10rem

      .subheading
        display block
        uni()
        margin-bottom 5rem

        .retronator
          retrotype()

      .title
        acme-9()
        font-weight bold
        display inline-block

        .author
          position absolute
          right 8rem
          bottom -9rem
          uni()
          color dark-grey

    .button
      uni()
      font-size 12rem
      background-color #eee
      color black
      text-shadow none
      text-transform uppercase
      border 0
      cursor pointer
      margin-bottom 1em
      display inline-block
      padding 4rem 8rem

      &:hover
        color #eee
        text-shadow 1.25rem 1.25rem black
        background-color transparent

  section:not(.jumbotron)
    margin auto
    padding 4em 0 1em

  section > *
    padding-left 15rem

  .core-features
    text-align center

    .title
      kyrou-5()

    .description
      margin 1em

    @media only screen and (max-width: 40em)
      .size1of3
        width 100%
        margin 0 auto
        max-width 15em
        float initial

  .core-features-img
    height 5em

    > img
      top 50%
      transform translateY(-50%)

    > [src*="icon-character"]
      height 21rem

    > [src*="icon-yearbook"]
      height 22rem

    > [src*="icon-palette"]
      height 24rem

    > [src*="icon-book"]
      height 24rem

  .enrollment
    text-align center
    margin-top 1em
    line-height 1.5em

  .student-life
    .infoblock
      min-height 20em
      background-position center bottom
      background-repeat no-repeat
      background-attachment fixed
      background-size cover

      .line
        height 20em

        .unit
          top 50%
          transform translateY(-50%)

          &.size2of3
            border 1rem solid #eee
            padding 1em 1em 0 1em
            text-shadow 1rem 1rem black
            color #eee
            background hsla(211,20%,20%,0.7)

          .title
            display block
            kyrou-7()
            margin-bottom 5rem

      &.campus
        background-image image('/retronator/hq/items/tablet/apps/prospectus/campus.png')
        background-color #002C5C

      &.studio
        background-image image('/retronator/hq/items/tablet/apps/prospectus/studio.png')

      &.pixelboy
        background-image image('/retronator/hq/items/tablet/apps/prospectus/pixelboy.png')

      &.library
        background-image image('/retronator/hq/items/tablet/apps/prospectus/library.png')
        background-color black

  // On iOS background-attachment fixed does not work. Fallback to scroll.
  .ios
    .student-life
      .infoblock
        background-attachment scroll
        background-position center center

  .featured-product
    background-image image('/retronator/hq/items/tablet/apps/prospectus/greetings.png')
    background-position left top
    background-repeat no-repeat
    background-color #a7e2fd
    background-size 350rem
    margin-bottom 1em
    padding 2em

    .products
      .store-item
        color black
        z-index 1
        padding 1em
        margin-bottom 1em
        background hsla(0,0%,100%,0.9)
        border 2rem solid #689ec2

        h3
          font-weight bold

        .purchase-product
          uni()
          text-transform uppercase
          padding 6rem 10rem
          background atariGreen(4)

          &:hover
            background atariGreen(5)

          &::after
            background-color atariGreen(2)

    .line.products
      max-width 38em

    .more
      color black
      text-align center
      margin-top 2em

  .products
    text-align center

    .store-item
      h3
        acme-9()
        font-weight normal
        line-height 1.5em

      .price
        margin 1.5em 0 0.5em
        kyrou-9()
        font-weight bold

        small
          position relative
          top -2rem
          kyrou-7()
          font-weight normal

          .discounted-from
            text-decoration none

            &::after
              content ''
              position absolute
              top 50%
              left -2rem
              right -2rem
              height 0
              border-top 1rem solid

      .purchase-product
        margin 1em
        display inline-block
        vertical-align middle

      .product-image
        height: 1.9em
        display inline-block
        vertical-align middle

      ul
        list-style square
        text-align left

        li
          p
            margin-bottom 5rem

      .keycard
        text-align right
        uni()
        text-transform uppercase
        opacity 0.6

        .product-image
          display inline-block
          vertical-align middle

  .payment-smallprint
    color console-dark-grey
    margin-bottom 0

  .payment-form-screen
    absolute-cover()
    background-color rgba(0, 0, 0, 0.8)
    overflow auto
    z-index 3

    .retronator-store-components-bundle-item
      .tooltip
        left 50%
        transform translateX(-50%)

    .bundle
      .headline
        kyrou-9()
        font-weight normal
        line-height 12rem

      .bundle-items
        list-style square

  .payment-form-wrapper
    width 24em
    background black
    border 1rem solid #eee
    padding 2em
    padding-top 3em
    margin 3em auto

    .submit-payment
      display inline-block
      width 100%
      margin 1em 0

    .payment-errors
      uni()
      padding 5rem
      background #222
      margin-bottom 1em

  .close-payment
    uni()
    position absolute
    right 0
    top 0
    padding 1em
    cursor pointer

  .reset-payments
    font-size 1em !important

  /* **************** GRIDS ***************** */
  .line::after
    content '.'
    display block
    height 0
    clear both
    visibility hidden

  .line
    max-width 38em
    margin 0 auto
    @media only screen and (min-width: 1024px)
      margin auto

  .unit
    float left
    padding-right 15rem

  .size1of1
    float none

  .size1of2
    width 50%

  .size1of3
    width 33.33333%
  .size2of3
    width 66.66666%

  .size1of4
    width 25%
  .size3of4
    width 75%

  .size1of5
    width 20%
  .size2of5
    width 40%
  .size3of5
    width 60%
  .size4of5
    width 80%

.retronator-hq-items-tablet
  .retronator-hq-items-tablet-apps-prospectus
    absolute-cover()

    .main-wrapper
      absolute-cover()
      overflow scroll

    // Don't do fixed backgrounds when running on the tablet.
    #jumbotron
      background-attachment local

  .student-life
    .infoblock
      background-attachment local
