@import "{retronator:landsofillusions}/style/style.import"

.retronator-hq-items-wallet
  .title
    position absolute
    top 30rem
    left 0
    right 0
    kyrou-9()
    font-weight bold
    text-align center
    pixel-text-emboss(atari2600grey(0), atari2600grey(2))

  .wallet-layer
    absolute-cover()
    width 100%
    height 100%
    pointer-events none

    &.layer-0
      filter drop-shadow(-5px 5px 20px black)
      z-index 0

    &.layer-1
      z-index 2

    &.layer-2
      z-index 4

    &.layer-3
      z-index 6

    &.layer-4
      z-index 8

    &.layer-5
      z-index 10

  #login-sign-in-link
  .login-close-text
  .or
    display none

  .login-text-and-button
    .login-button
      position absolute
      left 18rem
      width 127rem
      height 52rem
      text-align center
      color atari2600grey(6)
      padding-top calc(2rem - 1px)
      cursor pointer

      &:hover
        margin-top -1rem

      &:active
        margin-top -3rem

  #login-buttons-facebook
    top 86rem
    z-index 5
    background-image image('/retronator/hq/items/wallet/facebook-card.png')

  #login-buttons-twitter
    top 99rem
    z-index 7
    background-image image('/retronator/hq/items/wallet/twitter-card.png')

  #login-buttons-google
    top 112rem
    z-index 9
    background-image image('/retronator/hq/items/wallet/google-card.png')

  .login-form
    color atari2600grey(2)

    &::before
      content ''
      position absolute
      top 106rem
      left 180rem
      width 122rem
      height 64rem
      z-index 5
      background atari2600grey(7)

    #login-email-label-and-input
    #forgot-password-email-label-and-input
      position absolute
      left 185rem
      top 113rem
      z-index 5

      input
        freehand()

    #login-password-label-and-input
      position absolute
      left 185rem
      top 134rem
      z-index 5

    #login-buttons-password
    #login-buttons-forgot-password
      position absolute
      right 30rem
      top 155rem
      z-index 5
      color atari2600blue(3)
      cursor pointer
      white-space nowrap
      border-bottom 1rem solid atari2600grey(6)

      &:hover
        border-bottom-color atari2600grey(5)

    #login-buttons-forgot-password
      top 134rem

    label
      display block

    input
      width 109rem
      border 0
      color atari2600grey(1)
      background atari2600grey(5)

    #forgot-password-link
    #signup-link
    #back-to-login-link
      display block
      position absolute
      text-align center
      cursor pointer
      freehand()

      &:hover
        margin-top -1rem

    #forgot-password-link
      top 73rem
      left 220rem
      width 81rem
      height 15rem
      z-index 3
      color atari2600blue(3)
      background-image image('/retronator/hq/items/wallet/password-paper.png')
      padding-top calc(1rem - 1px)
      freehand()

    #signup-link
    #back-to-login-link
      top 85rem
      left 175rem
      width 76rem
      height 15rem
      z-index 5
      color atari2600blue(4)
      background-image image('/retronator/hq/items/wallet/account-paper.png')
      padding-top calc(2rem - 1px)
      freehand()

    #back-to-login-link
      left 222rem
      freehand()
