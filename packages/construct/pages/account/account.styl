@import "{retronator:landsofillusions}/styles/helpers.import"
@import "{retronator:landsofillusions}/styles/atari2600.import"

.lands-of-illusions-style-console
  .account-page
    #login-buttons
      position absolute
      top 16px
      right 16px

      .accounts-dialog
        left auto
        right 0
        width 15em
        text-align right

    .tabs
      list-style none
      padding 0

      li
        display inline-block
        text-transform uppercase

        &::before
          content "~ "

        &:last-child::after
          content " ~"

        a
          text-decoration none

    .load-character
      visibility hidden

      &.show-load-button
        visibility visible

    .current-character-editor
      .color
        margin-left 3em

        .dialog-preview
          display inline-block
          padding 1em
          background atari2600colors[1][0]
          pixel-text-outline black
