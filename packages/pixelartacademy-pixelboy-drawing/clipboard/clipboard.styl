  z-index 1
  left calc(50% - 100rem)
  top -260rem
  width 200rem
  height 260rem
  transition top 0.4s
  background-image image('/pixelartacademy/pixelboy/apps/drawing/clipboard/clipboard.png')

  &.active-asset
