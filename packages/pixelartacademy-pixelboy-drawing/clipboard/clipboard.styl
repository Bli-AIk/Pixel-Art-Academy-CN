@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy-apps-drawing-clipboard
  position absolute
  left calc(50% - 100rem)
  top -275rem
  width 200rem
  height 260rem
  transition all 0.4s

  .board
    absolute-cover()
    z-index 11
    background-image image('/pixelartacademy/pixelboy/apps/drawing/clipboard/clipboard-board.png')

  &::after
    content ''
    position absolute
    width 86rem
    height 18rem
    top 1rem
    left 57rem
    z-index 12
    background image('/pixelartacademy/pixelboy/apps/drawing/clipboard/clipboard-clip.png') center / 100%

.pixelartacademy-pixelboy-apps-drawing.active-asset:not(.editor-active)
  .pixelartacademy-pixelboy-apps-drawing-clipboard
    top calc(50% - 130rem)
    transition all 0.6s 0.2s
