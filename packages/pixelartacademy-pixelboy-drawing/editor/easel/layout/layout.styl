@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy-apps-drawing.editor-easel
  &.editor-active
    .pixelartacademy-pixelboy-apps-drawing-editor-easel-layout
      .frame
        left 87rem

.pixelartacademy-pixelboy-apps-drawing-editor-easel-layout
  position absolute
  left 50%

  .frame
    position absolute
    bottom 49rem
    left calc(50vw + 71rem)
    transition all 1s

    .frame-bottom
      position absolute
      top 0
      left -57rem
      width 114rem
      height 94rem
      background-image image('/pixelartacademy/pixelboy/apps/drawing/editor/easel/frame-bottom.png')

    .tray
      position absolute
      top 0
      left -71rem
      width 142rem
      height 68rem
      background-image image('/pixelartacademy/pixelboy/apps/drawing/editor/easel/tray-back.png')

      .tray-front
        position absolute
        z-index 3
        top 43rem
        left 0
        width 142rem
        height 13rem
        background-image image('/pixelartacademy/pixelboy/apps/drawing/editor/easel/tray-front.png')

    .frame-top-back
      position absolute
      bottom 0
      left -63rem
      width 126rem
      height 189rem
      background-image image('/pixelartacademy/pixelboy/apps/drawing/editor/easel/frame-top.png')

    .movable-stand
      position absolute
      transition all 1s

      .movable-stand-bottom
        position absolute
        bottom -17rem
        left -66rem
        width 132rem
        height 253rem
        background-image image('/pixelartacademy/pixelboy/apps/drawing/editor/easel/movablestand-bottom.png')

      .movable-stand-top
        position absolute
        left -16rem
        width 32rem
        height 43rem
        background-image image('/pixelartacademy/pixelboy/apps/drawing/editor/easel/movablestand-top.png')
        transition all 1s

      .asset-placeholder
        position absolute
        bottom 0
