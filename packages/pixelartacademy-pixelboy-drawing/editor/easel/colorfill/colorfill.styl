@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy-apps-drawing-editor-easel-colorfill
  position absolute
  top 10rem
  left 78rem
  width 23rem
  height 39rem
  z-index 4

  &::before
  &::after
    content ''
    absolute-cover()

  &::before
    background-image image('/pixelartacademy/pixelboy/apps/drawing/editor/easel/jar-back.png')

  &::after
    background-image image('/pixelartacademy/pixelboy/apps/drawing/editor/easel/jar-front.png')

  .color
    position absolute
    transition all 0.2s
    background-color rgba(255, 255, 255, 0.3)

    &.top
      left 5rem
      top 9rem
      width 13rem
      height 1rem

    &.bottom
      left 1rem
      top 10rem
      width 21rem
      height 27rem
