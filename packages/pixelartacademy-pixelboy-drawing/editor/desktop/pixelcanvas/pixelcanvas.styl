@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy-apps-drawing-editor-desktop-pixelcanvas
  .drawing-area
    position absolute
    z-index 1
    background atariGray(6)
    box-sizing content-box
    border solid atariGray(6)
    box-shadow -1rem 1rem 0 transparentify(atariOrange(4), atariOrange(5))
    transition all 0.6s

    &.hidden
      display none

    &.completed
      &::before
        content 'ï¸Ž'
        position absolute
        z-index 1
        top -2rem
        right -2rem
        width 10rem
        height 8rem
        background-image image('/pixelartacademy/practice/project/asset/sprite/clipboardcomponent/completedcheckmark.png')

    canvas
      absolute-cover-size()

.pixelartacademy-pixelboy-apps-drawing.editor-desktop
  &.editor-active
    .pixelartacademy-pixelboy-apps-drawing-editor-desktop.dragging
      .fatamorgana-interface.move-canvas
        .pixelartacademy-pixelboy-apps-drawing-editor-desktop-pixelcanvas
          .drawing-area
            transition none !important

  &.active-asset:not(.editor-active)
    .pixelartacademy-pixelboy-apps-drawing-editor-desktop
      .pixelartacademy-pixelboy-apps-drawing-editor-desktop-pixelcanvas
        .drawing-area
          transition top 0.6s 0.2s, left 0.6s 0.2s, width 0.2s, height 0.2s

  .pixelartacademy-pixelboy-apps-drawing-editor-desktop.drawing-active
    .pixelartacademy-pixelboy-apps-drawing-editor-desktop-pixelcanvas
      .drawing-area
        transition all 0.2s
