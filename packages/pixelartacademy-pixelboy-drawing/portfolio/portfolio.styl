@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy-apps-drawing-portfolio
  position absolute
  z-index 0
  left calc(50% - 161rem)
  top calc(50% - 120rem)
  width 322rem
  height 241rem
  background-image image('/pixelartacademy/pixelboy/apps/drawing/portfolio/back.png')
  transition 0.5s

  &.active-asset
    visibility hidden

  .cover
    position absolute
    z-index 101
    bottom 2rem
    left -5rem
    right -5rem
    background image('/pixelartacademy/pixelboy/apps/drawing/portfolio/front.png') center center / 100% 180%
    transition all 0.2s

    &::before
    &::after
      content ''
      position absolute
      left 0
      right 0
      height 2rem
      background image('/pixelartacademy/pixelboy/apps/drawing/portfolio/front.png') center center / 100% 9rem

    &::before
      background-position-y top
      top -2rem

    &::after
      background-position-y bottom
      bottom -2rem

    .handle
      position absolute
      z-index 1
      top 8%
      left 114rem
      width 104rem
      height 60rem
      background-image image('/pixelartacademy/pixelboy/apps/drawing/portfolio/handle.png')

    .handle-shadow
      content ''
      position absolute
      z-index -1
      top calc(8% + 1rem)
      left 106rem
      width 110rem
      height 64rem
      background-image image('/pixelartacademy/pixelboy/apps/drawing/portfolio/handle-shadow.png')
      mix-blend-mode darken

  .sections
    list-style none
    margin-top 13rem
    padding 0

    .section
      position relative
      z-index 100
      background-color atariGrey(5)
      box-shadow 0 0 10rem rgba(atariGrey(0), 0.25)
      margin 0 auto
      height 21rem
      transition all 0.2s
      cursor pointer

      &:not(.active):hover
        height 38rem
        margin-top -5rem

      &.active
        cursor default

        .groups
          .group
            &:not(.active):hover
              height 19rem
              margin-top -1rem

            &.active
              cursor default

      &.group-in-section-active
        .groups
          .group
            height 3rem

            &:not(.active):hover
              height 15rem
              margin-top -1rem

      .section-name
        height 21rem
        padding 7rem
        acme-7()
        color atariCyan(1)

      .groups
        list-style none
        margin 0
        padding 0

        .group
          position relative
          background-color atariBrown(4)
          margin 0 auto
          height 17rem
          box-shadow 0 0 5rem rgba(atariGrey(0), 0.1)
          transition all 0.2s
          cursor pointer

          &.active
            height 150rem

          .group-name
            height 17rem
            padding 5rem
            adventure()
            color atariGrey(1)

          .briefs
            position absolute
            z-index 0
            left 0
            right 0
            top 20rem
            margin 0
            padding 0
            list-style none
            text-align center

            .brief
              display inline-block
              position relative
              top 0
              width 120rem
              height 150rem
              margin-left -120rem
              padding 8rem
              vertical-align top
              background atariGrey(7)
              color atariGrey(2)
              box-shadow 0 0 5rem rgba(atariGrey(0), 0.1)
              text-align left
              transition top 0.5s

              &:first-child
                margin-left 0

              &.hovered
              &.active
                z-index 99 !important

              &.hovered
                top -4rem
                transition top 0.2s

              &.active
                top -240rem
                transition top 0.5s

              .asset-name
                margin-bottom 4.5rem
                checkout()
                text-transform uppercase

              .description
                checkout()

          .assets
            position absolute
            z-index 1
            display flex
            justify-content space-around
            top 54rem
            left 10rem
            right 10rem
            height 100rem
            margin 0
            padding 0
            list-style none

            &::before
            &::after
              content ''
              display block
              width 100%
              flex-shrink 2

            .asset
              position relative
              top 0
              height 100rem
              transition all 0.2s, top 0.5s
              cursor pointer
              pointer-events none

              &:hover
                flex-shrink 0.2
                transition all 0.2s

              &:first-child
                flex-shrink 0

              &.active
                top -240rem
                transition all 0.2s, top 0.5s

              .sprite
                position absolute
                bottom 0
                right 0
                border 6rem solid atariGrey(6)
                box-sizing content-box
                background atariGrey(6)
                box-shadow 0 0 5rem rgba(atariGrey(0), 0.2)
                pointer-events initial

                .landsofillusions-assets-components-spriteimage
                  absolute-cover()

                  .canvas
                    width 100% !important
                    height 100% !important
