@import "{retronator:retronator-identity}/style/style.import"

.landsofillusions-items-sync-memories
  .sync-hint
    position absolute
    top calc(50% - 0.5em)
    left 0
    right 0
    text-align center

  .memories
    absolute-cover()
    list-style none
    padding 0
    perspective 20rem

    .memory
      absolute-cover()
      top 50rem
      transition transform 0.2s

      .preview
        position absolute
        left 0
        bottom 10rem
        width 120rem
        height 160rem
        border 1rem solid atariCyan(4)
        background atariGray(0)
        cursor pointer

        &:hover
          border-color atariCyan(6)
          background atariCyan(0)

      .end-date
        position absolute
        bottom 10rem
        left 170rem
        daily()

      &.updated
        .preview
          background-color atariAqua(0)
          border-color atariAqua(7)
          box-shadow 0 0 30rem rgba(atariGray(7), 0.5)

          &:hover
            border-color atariGray(7)
            background atariAqua(1)
