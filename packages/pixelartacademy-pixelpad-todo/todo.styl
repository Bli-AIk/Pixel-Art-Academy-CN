@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixelpad-systems-todo
  position absolute
  z-index 5
  bottom 0
  left 0
  right 0
  daily()
  line-height 9rem
  color atariGray(0)

  &.task-selected
    .notepad
      .binding
        .turned-page
          visibility visible

        .retro
          top -31rem
          width 26rem
          height 37rem
          background-position-x -25rem

      .page
        .sideline::after
          top -16rem
          width 4rem
          height 18rem
          background image('/pixelartacademy/pixelpad/systems/todo/turnedpage-line.png') 0 0 / 100% 100%

        .content
          .todo
            display none

  .notepad
    position absolute
    right 10rem
    width 150rem
    border 1rem solid atariGray(0)
    border-bottom none
    background atariBrown(6)
    transition top 0.35s cubic-bezier(.41,1.25,.84,1)

    &.closed
      transition-timing-function cubic-bezier(.17,1.02,.84,1)

    &.open:hover
      .binding
        .close-hint
          visibility visible

    &.open-button-hovered
      .binding
        .close-hint
          color atariGray(1)

    &.selected-task-visible
      .open-button
        display none

    .open-button
      position absolute
      z-index 3
      left 0
      top 0
      width 100%
      height 17rem
      border none
      background none

    .binding
      position relative
      height 14rem
      background-image image('/pixelartacademy/pixelpad/systems/todo/binding-back.png')

      &::before
      &::after
        content ''
        display block
        position absolute
        top 0
        bottom 0

      &::before
        left 0
        width 1rem
        background-image image('/pixelartacademy/pixelpad/systems/todo/binding-left.png')

      &::after
        right 0
        width 5rem
        background-image image('/pixelartacademy/pixelpad/systems/todo/binding-right.png')

      .close-hint
        position absolute
        z-index 1
        right 3rem
        top 1rem
        visibility hidden
        color atariGray(2)

      .turned-page
        position absolute
        visibility hidden
        z-index 1
        top -3rem
        left 0
        right 0
        height 19rem
        border-top 1rem solid atariGray(0)
        background-image image('/pixelartacademy/pixelpad/systems/todo/turnedpage-back.png')

        &::before
        &::after
          content ''
          display block
          position absolute
          top 0
          height 18rem

        &::before
          bottom 0
          left 0
          width 3rem
          background-image image('/pixelartacademy/pixelpad/systems/todo/turnedpage-left.png')

        &::after
          right -3rem
          width 17rem
          background-image image('/pixelartacademy/pixelpad/systems/todo/turnedpage-right.png')

    .page
      position relative
      border-left 1rem solid atariBrown(3)

      &::before
        content ''
        display block
        position absolute
        top 6rem
        left 0
        right 0
        height 100%
        background repeating-linear-gradient(transparent, transparent 8rem, atariCyan(5) 8rem, atariCyan(5) 9rem)

      .sideline
        position absolute
        z-index 1
        top 0
        bottom 0
        left 20rem
        width 1rem
        background-color atariRed(5)

        &::after
          content ''
          display block
          position absolute
          top -1rem
          width 1rem
          height 1rem
          background-color atariRed(3)

      .content
        position relative
        z-index 0
        padding 6rem 10rem 1em 25rem

        .tasks-area
          position relative

          .tasks
          .displayed-tasks
            margin 0
            padding 0 0 0 7rem
            list-style '- '

            .task
              cursor pointer

              &:hover
                .directive
                  color atariGray(1)

              &::after
                content '\00a0âœ“'
                color transparent

              &.completed
                &:hover::after
                  color atariGreen(3)

                &::after
                  color atariGreen(2)

              .directive
                .crossed-off
                  text-decoration line-through 1rem

          .displayed-tasks
            absolute-cover()

          .tasks
            visibility hidden

        .instructions
          color atariCyan(1)

          p
            margin 9rem 0 0

          .back-button
            position absolute
            left 1rem
            top 0
            border none
            background none
            color inherit
            font inherit
            padding 5rem

            &:hover
              color atariCyan(2)

          .goal-name
            text-transform uppercase
            margin-bottom 9rem
