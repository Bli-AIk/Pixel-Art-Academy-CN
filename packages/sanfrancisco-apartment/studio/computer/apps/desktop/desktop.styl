@import "{retronator:landsofillusions}/style/style.import"

.sanfrancisco-apartment-studio-computer-desktop
  background atariGray(0) image('/sanfrancisco/apartment/studio/computer/wallpapers/sworcery.png') 0 0 / 320rem 200rem

  .apps
    list-style none
    padding 0
    margin 10rem 5rem

    .app
      margin-bottom 10rem

      .app-button
        font inherit
        background none
        border none
        width 32rem
        padding 0

        .icon
          display block
          margin 0 auto 2rem
          width 24rem
          height 24rem
          background-size 100%

        .name
          color atariGray(7)
          pixel-text-outline(rgba(atariGray(0),0.3))
