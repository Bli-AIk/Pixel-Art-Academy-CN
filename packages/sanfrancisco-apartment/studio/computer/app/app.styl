@import "{retronator:landsofillusions}/style/style.import"

.sanfrancisco-apartment-studio-computer-app
  .title-bar
    position absolute
    top 0
    left 0
    right 0
    height 10rem
    border 1rem solid
    border-color atariGrey(7) atariGrey(4) atariGrey(3)
    background atariGrey(6)
    color atariGrey(1)

    .name
      text-transform uppercase
      text-align center

    .close-button
      display block
      position absolute
      width 6rem
      height 6rem
      padding 0
      top 1rem
      right 1rem
      background atariGrey(4)
      border 1rem solid
      border-color atariGrey(3) atariGrey(4) atariGrey(5)

      &:hover
        background atariGrey(3)

  .window-contents
    position absolute
    top 10rem
    left 0
    right 0
    bottom 0
