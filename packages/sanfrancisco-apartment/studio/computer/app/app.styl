@import "{retronator:retronator-identity}/style/style.import"

.sanfrancisco-apartment-studio-computer-app
  .title-bar
    position absolute
    top 0
    left 0
    right 0
    height 10rem
    border 1rem solid
    border-color atariGray(7) atariGray(4) atariGray(3)
    background atariGray(6)
    color atariGray(1)

    .name
      text-transform uppercase
      text-align center

    .close-button
      display block
      position absolute
      width 6rem
      height 6rem
      padding 0
      top 1rem
      right 1rem
      background atariGray(4)
      border 1rem solid
      border-color atariGray(3) atariGray(4) atariGray(5)

      &:hover
        background atariGray(3)

  .window-contents
    position absolute
    top 10rem
    left 0
    right 0
    bottom 0
