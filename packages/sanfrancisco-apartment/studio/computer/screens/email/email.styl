@import "{retronator:landsofillusions}/style/style.import"

.sanfrancisco-apartment-studio-computer-email
  absolute-cover()
  background atariGrey(7)
  color atariGrey(0)
  display flex

  .inbox
    width 100rem
    height 100%
    border-right 1rem solid atariGrey(5)
    display flex
    flex-direction column
    adventure()

    .emails
      list-style none
      padding 0
      margin 0
      overflow-y auto

      .email
        border-bottom 1rem solid atariGrey(5)
        padding 2rem
        cursor pointer

        &.selected
          background atariGrey(2)
          color atariGrey(7)

        .from
        .subject
        .body-preview
          overflow hidden
          text-overflow ellipsis
          white-space nowrap

        .from
          text-transform uppercase

        .body-preview
          opacity 0.5

  .message
    width auto
    height auto
    overflow-y scroll
    padding 10rem
    daily()

    .headers
      padding-bottom 5rem
      border-bottom 1rem solid atariGrey(5)

      .from
        margin-bottom 5rem
        font-weight bold
