@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy-apps-studyplan-blueprint
  absolute-cover()
  background atariCyan(1)

  &.dragging
  &.dragging *
    cursor grabbing

  &.dragged ~ .pixelartacademy-pixelboy-apps-studyplan-goalsearch
    pointer-events none
    opacity 0.5

  .origin
  .canvas
    position absolute
    top 0
    left 0

  .trash
    display none
    position absolute
    bottom 5rem
    right 5rem
    padding 5rem
    background atariCyan(2)
    pointer-events none

    &.active
      background atariRed(3)

  &.dragged
    .trash
      display block
