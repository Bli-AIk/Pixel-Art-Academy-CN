@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy-apps-studyplan-goal
  display block
  position relative
  width 100rem
  padding 5rem
  border 1rem solid atariCyan(5)
  background atariCyan(0)
  cursor grab

  > .name
    text-align center
    cursor pointer
    text-transform uppercase

  .tasks
    display none
    padding 0
    margin 5rem 0 0
    cursor default

    .task
      display inline-block

  .provided-interests
    position absolute
    top 5rem
    right -4rem
    width 8rem
    height 8rem
    padding-left 2rem
    background atariCyan(5)
    color atariCyan(0)
    cursor text

    &:hover
      background atariCyan(7)

    &::before
      content '+'

  .required-interests
    position absolute
    top 0
    list-style none
    padding-left 2.5rem
    margin 5rem 0 0

    .interest
      position absolute
      padding-bottom 5rem
      cursor pointer

      &:last-child
        padding 0

      &::before
        content 'â†’'
        display block
        position absolute
        left -12rem
        width 6rem
        height 8rem
        padding-left 2rem
        background atariCyan(5)
        color atariCyan(0)

      &:hover::before
        background atariCyan(7)

      .name
        display none

  &.expanded
    .tasks
      display block

    .provided-interests
      top 18rem

    .required-interests
      position relative

      .interest
        position relative

        .name
          display block
