@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy-apps-studyplan-goal
  display block
  width 70rem
  padding 5rem
  border 1rem solid atariCyan(5)
  background atariCyan(0)
  cursor grab

  .name
    text-align center
    cursor pointer
    text-transform uppercase

  .tasks
    display none
    padding 0
    margin 5rem 0 0
    cursor default

    .task
      display inline-block
      position relative
      width 8rem
      height 8rem
      border 1rem solid atariCyan(5)
      cursor pointer

      .info
        display none
        position absolute
        z-index 1
        top 12rem
        left 50%
        transform translateX(-50%)
        width 100rem
        padding 5rem
        background atariCyan(2)

        .directive
          margin-bottom 5rem
          text-transform uppercase

        .instructions
          hyphens auto

      &:hover
        border-color atariCyan(7)

        .info
          display block

  .interests
    display none
    position relative
    list-style none
    padding-left 10rem
    margin 5rem 0 0

    .interest
      &::before
        content '+'
        position absolute
        left 0

  &.expanded
    .tasks
    .interests
      display block
