@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy-apps-studyplan-goal
  display block
  position relative
  border 1rem solid atariCyan(5)
  background atariCyan(0)
  cursor grab

  > .name
    padding 5rem
    text-align center
    cursor pointer
    text-transform uppercase

  .tasks-map
    position absolute
    display none
    cursor default

    .connections-canvas
      position absolute
      width 100%
      height 100%

    .tasks
      list-style none
      padding 0
      margin 0

      .task
        position absolute

  .provided-interests
    position absolute
    display none
    z-index 1
    top 5rem
    right -4rem
    width 9rem
    height 9rem
    padding 0.5rem 0 0 2.5rem
    background atariCyan(5)
    color atariCyan(0)
    cursor text

    &:hover
      background atariCyan(7)

    &::before
      content '+'

  .required-interests
    position absolute
    top 0
    list-style none
    padding-left 2.5rem
    margin 5rem 0 0

    .interest
      position absolute
      padding-bottom 5rem
      cursor pointer

      &:last-child
        padding 0

      &.valid-target
        .connector
          background atariGrey(7)

      .name
        display none

      .connection-target
        position absolute
        z-index 1
        left -20rem
        top -2rem
        right 0
        bottom 0

      .connector
        display block
        position absolute
        top 0
        left -12rem
        width 9rem
        height 9rem
        padding 0.5rem 0 0 2.5rem
        background atariCyan(5)
        color atariCyan(0)

        &::before
          content 'â†’'

      &:hover:not(.invalid-target):not(.valid-target)
        .connector
          background atariCyan(7)

  &.expanded
    .tasks-map
    .provided-interests
    .required-interests
      display block
