@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy-apps-studyplan-goal-task
  position relative
  width 100%
  height 100%

  &:hover
    z-index 4

    .icon
      border-color atariCyan(7)

    .info
      display block

  &.active
    .icon
      border-color atariCyan(7)
      background-color atariCyan(3)

    &:hover
      .icon
        border-color atariGrey(7)

  .icon
    position relative
    width 100%
    height 100%
    border 1rem solid atariCyan(5)
    cursor pointer

    .completed
      &::before
        content '✓'
        position absolute
        top -0.5rem
        left 1.5rem
        adventure()

  .info
    display none
    position absolute
    z-index 1
    top 12rem
    left 50%
    transform translateX(-50%)
    width 120rem
    padding 5rem
    background atariCyan(2)

    .directive
      margin-bottom 5rem
      text-transform uppercase

    .instructions
      hyphens auto

    .interests
      .label
        margin-top 5rem
        padding-bottom 1rem
        border-bottom 1rem solid atariCyan(4)

      .list
        position relative
        list-style none
        padding-left 10rem
        margin-top 1rem

        .interest
          &::before
            content '+'
            position absolute
            left 0

          &.required
            &::before
              content '→'
