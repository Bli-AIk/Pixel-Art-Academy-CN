@import "{retronator:landsofillusions}/style/style.import"

.pixelartacademy-pixelboy-apps-studyplan-goal-task
  position relative
  width 100%
  height 100%

  .icon
    position relative
    width 100%
    height 100%
    border 1rem solid atariCyan(5)
    cursor pointer

    .interests
      &::before
        content '+'
        position absolute
        top -0.5rem
        left 1.5rem

  .info
    display none
    position absolute
    z-index 1
    top 12rem
    left 50%
    transform translateX(-50%)
    width 120rem
    padding 5rem
    background atariCyan(2)

    .directive
      margin-bottom 5rem
      text-transform uppercase

    .instructions
      hyphens auto

    .interests
      position relative
      list-style none
      padding-left 10rem
      margin 5rem 0

      .interest
        &::before
          content '+'
          position absolute
          left 0

  &:hover
    border-color atariCyan(7)
    z-index 4

    .info
      display block
