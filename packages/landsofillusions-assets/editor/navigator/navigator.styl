@import "{retronator:landsofillusions}/style/style.import"

.landsofillusions-assets-editor-navigator
  display flex
  flex-direction column

  .thumbnail
    flex-grow 1
    position relative
    margin 2rem

    .canvas
      absolute-cover-size()
      object-fit contain

  .controls
    flex-shrink 0
    margin-top 2rem

    // Note: We can't simply name this .zoom for some reason.
    .zoom-display
      text-align center

      .zoom-percentage-input
        width 50rem
        text-align right
        background none
        border none
