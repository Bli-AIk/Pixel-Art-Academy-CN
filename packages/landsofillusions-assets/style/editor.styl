@import "{retronator:landsofillusions}/style/style.import"

html.asset-editor
  overflow hidden

.landsofillusions-assets-editor
  absolute-cover()
  adventure()
  color atariGrey(4)
  background blend(rgba(atariGrey(1), 0.5) atariGrey(2))

  *
    pixel-image-rendering()
    background-size 100% 100%

  button
  input
  select
    border 1rem solid atariGrey(0)
    height 12rem
    font inherit
    color inherit

    &:focus
      outline none

  input
  select
    background rgba(atariGrey(0),0.65)
    padding 0 3rem

    &[type=number]
      padding-right 0

  button
    background atariGrey(1)
    padding 0 5rem
    margin-bottom 3rem

  .landsofillusions-assets-components-pixelcanvas
    absolute-cover()
    cursor default

    .canvas
      position absolute
      top 0
      left 0
      width 100%
      height 100%

  .landsofillusions-assets-components-assetslist
    position absolute
    top 5rem
    left 5rem
    width 100rem

    .assets
      list-style none
      padding 0
      margin 0
      background atariGrey(3)
      color atariGrey(0)

      .asset
        cursor pointer
        padding 1rem 2rem

        &:hover
          background-color atariGrey(4)

        &.active
          background-color atariGrey(5)
          cursor default

  .landsofillusions-assets-components-navigator
    position absolute
    top 5rem
    right 5rem

    .zoom-display
      display inline-block

      .zoom-percentage-input
        width 50rem
        text-align right
        background none
        border none

  .landsofillusions-assets-components-palette
    position absolute
    bottom 5rem
    right 5rem
    display flex
    border 1rem solid atariGrey(0)
    flex-direction column

    .ramp
      display flex

      .color
        width 7rem
        height 7rem
        position relative
        cursor pointer

        &::after
          content ''
          display none
          position absolute
          top -1rem
          bottom -1rem
          left -1rem
          right -1rem
          z-index 1
          border 1rem solid atariGrey(4)

        &.active::after
          display block

  .landsofillusions-assets-components-assetinfo
    .properties
      position absolute
      top 25rem
      right 5rem
      width 75rem

      .name
      .palette
        display block

        input
        select
          width 75rem

      .name
        margin-bottom 2rem

      .palette
        margin-bottom 5rem

  .landsofillusions-assets-components-materials
    position absolute
    top 90rem
    right 5rem
    width 120rem

    .color-table
      border-collapse collapse
      table-layout fixed
      width 100%

      .legend
        th
          checkout()
          font-weight normal
          width 20rem
          overflow hidden
          white-space nowrap

          &.name
            width auto

          &.preview
            width 12rem

      .index
        text-align center

      .color
        td
          border 1rem solid black
          padding 0
          margin 0
          height 9rem
          font-size inherit
          line-height 5rem
          background rgba(atariGrey(0), 0.65)
          cursor pointer

        .preview
          position relative

          &::after
            content ''
            display none
            position absolute
            top -1rem
            bottom -1rem
            left -1rem
            right -1rem
            border 1rem solid atariGrey(4)

          &.active::after
            display block

        input
          border none
          background none
          width 100%
          height 10rem

          &:focus
            outline none

    .actions
      text-align right
      margin-top 5rem

  .landsofillusions-assets-components-toolbox
    position absolute
    top 100rem
    left 5rem
    width 60rem

    .tools
      list-style none
      padding 0
      margin 0

      .tool
        .tool-button
          width 100%
          overflow hidden
          white-space nowrap
          text-overflow ellipsis

        &.active
          .tool-button
            background atariAqua(1)

  .landsofillusions-assets-components-shadingsphere
    position absolute
    bottom 5rem
    left 5rem

    .landsofillusions-assets-components-pixelcanvas
      display inline-block
      vertical-align bottom
      position relative
      top auto
      right auto
      width 60rem
      height 60rem
      background blend(rgba(atariGrey(1), 0.5) atariGrey(2))
      border 1rem solid atariGrey(0)

    .edit-light-button
      margin-bottom 0

      &.active
        background atariYellow(5)
        color atariGrey(0)
