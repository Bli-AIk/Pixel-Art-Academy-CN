@import "{retronator:landsofillusions}/style/style.import"

.landsofillusions-assets-components-filemanager
  .items
    list-style none
    margin 0 0 8rem
    padding 0
    user-select none

    .item
      cursor pointer
      padding 0 3rem

      &:hover
        color atariGrey(6)

      &.selected
        background atariGrey(2)
        color atariGrey(7)

      .icon
        width 7rem
        height 7rem
        margin-right 1rem
        vertical-align middle

      .name
        vertical-align middle
