@import "{retronator:landsofillusions}/style/style.import"

.landsofillusions-assets-spriteeditor-layers
  .layers-table
    .layer
      &.active
        td
          background atariGrey(2)

        .thumbnail
          &::after
            display block

        .name
          .name-input
            &::placeholder
              color atariGrey(3)

      .depth
        width 20rem

      .visible
        position relative
        width 15rem
        height 100%

        .label
          absolute-cover()
          cursor pointer

          .visible-checkbox
            background red
            display none

            &:checked + .icon
              display block
              position absolute
              top 50%
              left 50%
              transform translate(-50%, -50%)
              background-image image('/landsofillusions/assets/spriteeditor/layer-visible.png')
              width 9rem
              height 5rem

      .thumbnail
        position relative
        cursor pointer
        width 20rem

        &::after
          content ''
          display none
          position absolute
          top -1rem
          bottom -1rem
          left -1rem
          right -1rem
          border 1rem solid atariGrey(4)

        .canvas
          width 100%
          max-height 15rem
          object-fit contain
