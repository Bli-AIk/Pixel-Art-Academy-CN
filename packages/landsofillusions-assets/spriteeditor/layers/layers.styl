@import "{retronator:landsofillusions}/style/style.import"

.landsofillusions-assets-spriteeditor-layers
  .layers-table
    .layer
      &.active
        td
          background atariGrey(2)

        .thumbnail
          &::after
            display block

        .name
          .name-input
            &::placeholder
              color atariGrey(3)

      .depth
        width 20rem

      .thumbnail
        position relative
        cursor pointer
        width 20rem

        &::after
          content ''
          display none
          position absolute
          top -1rem
          bottom -1rem
          left -1rem
          right -1rem
          border 1rem solid atariGrey(4)

        .canvas
          width 100%
          max-height 15rem
          object-fit contain
