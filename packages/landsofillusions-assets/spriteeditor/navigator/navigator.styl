@import "{retronator:landsofillusions}/style/style.import"

.landsofillusions-assets-spriteeditor-navigator
  .controls
    .rot8
      text-align center
      margin-top 2rem

      .side
        display inline-block
        width 57rem
        text-align right

    .mipmaps
      display flex
      list-style none
      justify-content center
      margin 2rem 0 0
      padding 0

      .mipmap
        margin-right -1rem

        &.active
          .mipmap-button
            background atariGrey(2)
            color atariGrey(6)
