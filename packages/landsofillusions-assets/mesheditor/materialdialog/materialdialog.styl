@import "{retronator:landsofillusions}/style/style.import"

.landsofillusions-assets-mesheditor-materialdialog
  width 300rem
  padding 8rem
  display flex

  .preview
    width 50rem
    height 50rem
    margin-right 8rem
    border 1rem solid atariGrey(0)

  .texture
    .value
      display flex !important

      .texture-name
        .texture-name-input
          border-right none

      .texture-browse
        .texture-browse-button
          padding 0 3rem

  .texture-mapping
    .value
      .landsofillusions-assets-mesheditor-texturemappingmatrix
        .elements-table
          .legend
            .row-name
              width 10rem

  .texture-mapping
  .texture-offset
    .name
      padding-top 11rem !important
