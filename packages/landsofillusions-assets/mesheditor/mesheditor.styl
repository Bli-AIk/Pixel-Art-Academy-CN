@import "{retronator:landsofillusions}/style/style.import"

.landsofillusions-assets-mesheditor
  .landsofillusions-assets-mesheditor-cameraangles
    float right
    clear both
    width 120rem
    margin-bottom 5rem

    .actions
      text-align right

    .camera-angles
      list-style none
      padding 0
      margin 0
      max-height 100rem
      overflow-y auto
      background atariGrey(3)
      color atariGrey(0)

      .camera-angle
        cursor pointer
        padding 1rem 2rem

        &:hover
          background-color atariGrey(4)

        &.active
          background-color atariGrey(5)
          cursor default

    .properties
      > .name
        display block

        input
          width 75rem

  .landsofillusions-assets-mesheditor-meshcanvas
    absolute-cover()

    .canvas
      position absolute
      top 0
      left 0
      // Note: We have to use !important because THREE.js will style the div itself and thus fix the size.
      width 100% !important
      height 100% !important
