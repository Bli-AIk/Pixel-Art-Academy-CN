@import "{retronator:retronator-identity}/style/style.import"

.landsofillusions-assets-mesheditor-materials
  .materials-table
    .legend
      .preview
        width 15rem

    .material
      .preview
        position relative
        height 15rem !important

        &::after
          content ''
          display none
          position absolute
          top -1rem
          bottom -1rem
          left -1rem
          right -1rem
          border 1rem solid atariGray(4)

        &.active::after
          display block
