@import "{retronator:landsofillusions}/style/style.import"

.landsofillusions-assets-mesheditor-cameraangles
  .camera-angles-table
    .camera-angle
      cursor pointer
      padding 1rem 2rem

      &.active
        td:not(.row-name)
          background atariGray(2)

        .thumbnail
          &::after
            display block

        .name
          color atariGray(5)

          .name-input
            &::placeholder
              color atariGray(4)

      .thumbnail
        position relative
        cursor pointer
        width 40rem
        user-select none

        &::after
          content ''
          display none
          position absolute
          top -1rem
          bottom -1rem
          left -1rem
          right -1rem
          border 1rem solid atariGray(4)

        .canvas
          width 100%
          max-height 30rem
          object-fit contain
