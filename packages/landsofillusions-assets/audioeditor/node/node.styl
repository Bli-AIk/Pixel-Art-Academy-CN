@import "{retronator:landsofillusions}/style/style.import"

.landsofillusions-assets-audioeditor-node
  display block
  position relative
  z-index 0
  border 1rem solid atariBlue(5)
  background atariGrey(0)
  cursor grab

  &.expanded
    padding-top 3rem

  &:hover
    z-index 1

  > .name
    padding 5rem
    text-align center
    cursor pointer
    text-transform uppercase

  .content
    position absolute
    z-index 2
    visibility hidden
    cursor default

    .parameters
      list-style none
      min-width 74rem
      padding 0
      margin 0

    .custom-content
      margin-top 6rem

  .inputs
  .outputs
    list-style none
    padding 0
    margin 0
    visibility hidden

    .input
    .output
      position absolute
      cursor default
      color atariGrey(6)

      &.valid-target
        .connector
          background atariGrey(7)

          &:hover
            background atariGrey(7)

      .connection-target
        position absolute
        left -10rem
        width 20rem
        height 20rem

      .connector
        display block
        position absolute
        z-index 1
        top -4rem
        left -5rem
        width 9rem
        height 9rem
        padding-left 1rem
        text-align center
        background atariBlue(5)
        color atariBlue(0)
        cursor text

        &::before
          content 'â†“'

        &:hover
          background atariBlue(7)

      .name
        position absolute
        left 6rem

  .inputs
    .input
      top 0

      .connection-target
        top -15rem

      .name
        top -10rem

  .outputs
    .output
      bottom 0

      .connection-target
        top -5rem

      .name
        top 1rem

  &.expanded
    .content
    .inputs
    .outputs
      visibility visible

