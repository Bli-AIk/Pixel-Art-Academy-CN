@import "{retronator:landsofillusions}/style/style.import"

.landsofillusions-assets-audioeditor
  .world
    position absolute
    left 0
    right 0
    bottom 0
    height 10%
    background atariGrey(0)

    .controls
      position absolute
      top 5rem
      left 5rem
      z-index 1

      .location
        select
          width 100rem

    .landsofillusions-engine-world
      absolute-cover()

  button
  input
  select
    border 1rem solid atariBlue(1)
    height 12rem
    font inherit
    color inherit

    &:focus
      outline none

  input
  select
    background rgba(atariBlue(1),0.65)
    padding 0 3rem

    &[type=number]
      padding-right 0

  button
    background atariBlue(1)
    padding 0 5rem
    margin-bottom 3rem

  .landsofillusions-assets-components-assetinfo
    .properties
      .palette
        display none

  .landsofillusions-assets-components-assetslist
    .assets
      background atariBlue(0)
      color atariGrey(3)

      .asset
        &:hover
          background-color atariBlue(1)

        &.active
          background-color atariBlue(2)

  .landsofillusions-assets-components-toolbox
    .tools
      .tool
        .tool-button
          background atariGrey(0)
          color atariBlue(2)

        &.active
          .tool-button
            background atariBlue(4)

        &.enabled
          .tool-button
            background atariBlue(1)
            color atariGrey(4)

            &:hover
              border-color atariBlue(2)
              color atariGrey(5)
