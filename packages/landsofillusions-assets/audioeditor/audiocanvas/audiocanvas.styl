@import "{retronator:landsofillusions}/style/style.import"

.landsofillusions-assets-audioeditor-audiocanvas
  absolute-cover()
  bottom 10%
  background atariGrey(0)

  &.dragging
  &.dragging *
    cursor grabbing

  &.connecting
  &.connecting *
    cursor text

  .origin
  .canvas
    position absolute
    top 0
    left 0

  .canvas
    width 100%
    height 100%

  .trash
    display none
    position absolute
    bottom 5rem
    right 5rem
    padding 5rem
    background atariBlue(2)
    pointer-events none

    &.active
      background atariRed(3)

  &.dragged
    .trash
      display block
