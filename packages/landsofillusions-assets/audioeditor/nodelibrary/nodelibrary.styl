@import "{retronator:landsofillusions}/style/style.import"

.landsofillusions-assets-audioeditor-nodelibrary
  float right
  clear both
  width 94rem
  margin-bottom 5rem
  padding 3rem
  background rgba(atariBlue(0),0.65)

  .search
    position relative

    .input
      background rgba(atariBlue(1),0.65)
      border none
      padding 2rem 5rem
      width 100%

      &::placeholder
        color atariBlue(3)

    .clear-input-button
      position absolute
      top 1rem
      right 1rem
      border none
      background none
      padding 2rem 2rem 1rem 4rem
      font inherit
      color atariBlue(6)
      text-align center

      &::before
        content 'X'

      &:hover
        background atariBlue(4)
        color atariGrey(7)

  .node-classes
    padding 0
    margin 5rem 0 0
    list-style none

    .node-class
      display inline-block
      margin 0 1rem 1rem 0

      .landsofillusions-assets-audioeditor-node
        .name
          pointer-events none
