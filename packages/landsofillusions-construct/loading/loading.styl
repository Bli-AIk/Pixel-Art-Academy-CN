@import "{retronator:retronator-identity}/style/style.import"

// Construct loading program overrides text adventure styling to an inverted (white) theme.

construct-hoverable()
  color atariGray(0)

  &:hover
    background atariGray(0)
    color atariGray(7)

body.construct
  .artificial-mirage-display
    .crop-bar
      background white

  .landsofillusions-loading
    background white
    color black

  .landsofillusions-interface-text
    background white
    color atariGray(0)

    .ui-background
      background white

    .ui
      .text-display
        .narrative
          .command
            construct-hoverable()

            &::after
              border-bottom 1rem solid atariGray(2)
          .exits
            .exit
              &::after
                content: ","

              .name
                construct-hoverable()

        .dialog-selection
          .options
            .option
              &.active
                background atariGray(0)
                color atariGray(7)
