@import "{retronator:landsofillusions}/style/style.import"

.landsofillusions-construct-loading-tv-newlink
  position relative
  padding-right 85rem

  .name
    acme-7()
    margin 15rem 0 5rem
    color atariGreen(5)

  .avatar
    position absolute
    top 15rem
    right 0
    width 75rem
    height 75rem
    border 1rem solid atariGreen(4)
    background image('/landsofillusions/construct/tv/preview-box.png') 0 0 / 100% 100%
    animation 60s step-end infinite glitch-opacity

    .sanfrancisco-c3-design-terminal-components-avatarpartpreview
      filter sepia(100%) saturate(200%) hue-rotate(80deg)

    &::after
      content ''
      absolute-cover()
      z-index -1
      animation 60s infinite glitch-characters
      border 1rem solid atariGreen(2)

  .controls
    position absolute
    top 165rem
    left 0
    right 0
    text-align center

    .clone-character-button
      position absolute
      left 0
      top 0

    .cancel-button
      position absolute
      right 0
      top 0
