@import "{retronator:retronator-identity}/style/style.import"

.landsofillusions-components-loadgame
  .safe-area
    .profiles
      display flex
      position relative
      height 80rem
      padding 0
      margin 0
      list-style none
      transition left 0.5s

      .profile
        display flex
        position relative
        vertical-align top
        flex-shrink 0
        flex-grow 1
        width 80rem
        height 80rem
        cursor pointer
        justify-content center
        align-items center

        &:hover:not(.active)
          .floppy
            top -1rem

            .shutter
              left 7rem

        &.active
          .floppy
            top -300rem
            transition top 1s

    .controls
      text-align center

      .action-button
        position relative
        padding 2rem 4rem 4rem
        margin 0 3rem
        vertical-align bottom
        font inherit
        color atariGray(0)
        text-transform uppercase
        text-align center
        border none
        background transparent

        &::before
          content ''
          absolute-cover()
          z-index -1
          background atariGray(2)
          border-bottom 2rem solid atariGray(1)

        &:disabled
          color atariGray(1)

        &:hover:not(:disabled)::before
          background atariGray(3)

        &:active:not(:disabled)
          padding-top 4rem
          padding-bottom 2rem

          &::before
            border-bottom none
            top 2rem

        &.previous-button
        &.next-button
          visibility hidden

          &.visible
            visibility visible
