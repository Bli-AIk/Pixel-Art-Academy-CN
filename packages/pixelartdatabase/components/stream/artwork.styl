@import "{retronator:landsofillusions}/style/style.import"

.pixelartdatabase-components-stream
  .artworks
    .artwork-area
      position relative
      padding 10vh 5vh
      overflow hidden
      background black

      &:only-child
        .artwork-with-caption
          .artwork-frame
            line-height 80vh

      .artwork-with-caption
        display inline-block
        position relative
        z-index 1
        width 100%
        margin 0
        line-height 1em

        .artwork-frame
          line-height calc(100vh - 30rem)
          text-align center

          .artwork
            max-width 100%
            object-fit contain
            vertical-align middle
            pixel-image-rendering()
            opacity 0
            transition opacity 1s

            &.visible
              opacity 1

          video.artwork
            box-shadow 0 15px 25px transparentify(atariGray(0), 0.3)

          img.artwork
            filter drop-shadow(0 10px 20px transparentify(atariGray(0), 0.3))

      .background
        position absolute
        top 0
        left 0
        z-index 0
        pixel-image-rendering()
        opacity 0
        transition opacity 0.5s

        &.visible
          opacity 1
