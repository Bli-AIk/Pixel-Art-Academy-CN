@import "{retronator:landsofillusions}/style/style.import"

.pixelartdatabase-components-stream
  background black

  .artworks
    list-style none
    padding 0
    margin 0

    .artwork-area
      position relative
      padding 10vh 5vh
      overflow hidden
      background black

      &.removing
        opacity 0
        transition opacity ease-in 0.5s

      .artwork-with-caption
        display inline-block
        position relative
        z-index 1
        width 100%
        margin 0
        line-height 1em

        .artwork-frame
          line-height calc(90vh - 30rem)
          text-align center

          .artwork
            width 100%
            max-width 130vh
            object-fit contain
            vertical-align middle
            pixel-image-rendering()

          video.artwork
            box-shadow 0 15px 25px transparentify(atariGrey(0), 0.3)

          img.artwork
            filter drop-shadow(0 10px 20px transparentify(atariGrey(0), 0.3))
            max-height 130vh

      .background
        absolute-cover-size()
        z-index 0
        object-fit cover
        filter blur(100px)
