@import "{retronator:landsofillusions}/style/style.import"

.retropolis-city-pages-academyofart-application
  padding 1rem 0

  .success
    background-color atariGreen(6)
    padding 1rem 10rem
    margin 10rem 0

  .sign-in-area
    margin 10rem 0

  .characters
    list-style none
    padding-left 5rem

    .character
      margin 5rem 0

  button
    background-color atariGray(5)
    padding 3rem 6rem
    border none
    font inherit
    color inherit

    &:hover
      background-color atariPeach(5)

  .sign-in
    margin 10rem 0

  .retropolis-city-pages-academyofart-application-form
    margin 10rem 0

    .application-form
      .label
        display block
        margin 5rem 0

        &.name
          .landsofillusions-components-translationinput
            display inline-block
            width 100rem

      select
        font inherit
        color inherit

      .error
        background-color atariRed(6)
        padding 1rem 10rem
        margin 10rem 0
