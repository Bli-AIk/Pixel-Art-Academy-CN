.retronator-hq-locations-landsofillusions-room-chair
  fixed-cover()
  // We need to use important to override the relative positioning for all items.
  position fixed !important
  transition background 4s
  background rgba(255,255,255,0)

  &.activated
    background rgba(255,255,255,1)

  .landsofillusions-components-overlay
