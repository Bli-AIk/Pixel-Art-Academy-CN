@import "{retronator:retronator-identity}/style/style.import"

// When just OS is loaded directly to html.
html.pixelartacademy-pixelpad-os-root
html.pixelartacademy-pixelpad-os-root body
  margin 0
  padding 0
  height 100%

  #__blaze-root
    height 100%

html.landsofillusions-style-adventure
  .pixelartacademy-pixelpad-os
    cursor default

    a
      cursor pointer

.pixelartacademy-pixelpad-os-root
  &::before
    content ''
    absolute-cover()
    background atariCyan(0) image('/pixelartacademy/pixelpad/background.png') center bottom repeat-x
    background-size 21rem 21rem !important

.pixelartacademy-pixelpad-os
  position relative
  color atariGray(7)
  height 100%
  uni()
  cursor default

  *
    box-sizing border-box

  a
    cursor pointer

  // Pixel art image scaling
  img
  canvas
    image-rendering optimizeSpeed
    image-rendering -moz-crisp-edges            // Firefox
    image-rendering -o-crisp-edges              // Opera
    image-rendering -webkit-optimize-contrast   // Chrome, Safari
    image-rendering pixelated                   // Chrome
    image-rendering optimize-contrast           // CSS3
    -ms-interpolation-mode nearest-neighbor     // IE8+

  .app-wrapper
    height 100%

    .app
      min-height 100%

  .shortcuts-table
    position absolute
    z-index 10
    bottom -35rem
    left 0
    right 0
    transition bottom 1s

    &.visible
      bottom 0
