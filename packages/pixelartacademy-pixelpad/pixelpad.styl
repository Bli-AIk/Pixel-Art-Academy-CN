@import "{retronator:retronator-identity}/style/style.import"

.pixelartacademy-pixelpad-resizing
.pixelartacademy-pixelpad-resizing *
  cursor nesw-resize !important

.pixelartacademy-pixelpad
  visibility hidden

  &.visible
    visibility visible

  &.fullscreen
    .landsofillusions-components-hand
      left -78rem !important
      transition-delay 0.5s

  .landsofillusions-components-hand
    transition all 0.5s

  .landsofillusions-components-overlay
    > .safe-area
      display none

  .back-button-area
    visibility hidden

    &.visible
      visibility visible

  .device
    position absolute
    z-index 1
    bottom -100vh
    left 50%
    transform translateX(-50%)
    transition bottom 1s, transform 1s

    &.active
      &.screen-center
        bottom 50%
        transform translate(-50%, 50%)

      &.screen-bottom
        bottom 65rem

    .landsofillusions-components-hand
      position absolute
      left -68rem
      bottom -66rem

    .os
      absolute-cover()
      border none
      transform translateX(0)
      overflow hidden

    > .screen
      position absolute
      left -1rem
      top -1rem
      right -1rem
      bottom -1rem
      border solid 1rem atariGray(1)
      box-shadow 0 2rem 0 -1rem atariGray(2),
                 -1rem 1rem atariGray(3)

    > .glass
      position absolute
      left -4rem
      top -4rem
      right -4rem
      bottom -4rem
      border solid 1rem atariGray(7)
      opacity 0.75
      box-shadow -1rem 1rem atariGray(5)

      &.resizable
        cursor nesw-resize
