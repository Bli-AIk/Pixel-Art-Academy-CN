{
    "name": "Pixel Art Academy Learn Mode",
    "version": "0.7.0",
    "devTools": false,
    "devtron": true,
    "desktopHCP": true,
    "desktopHCPIgnoreCompatibilityVersion": false,
    "webAppStartupTimeout": 30000,
    "exposeLocalFilesystem": true,
    "window": {
        "minWidth": 640,
        "minHeight": 480,
        "fullscreen": true,
        "autoHideMenuBar": true,
        "icon": "@assets/icons/coatofarms.png",
        "backgroundColor": "black",
        "_windows": {
            "icon": "@assets/icons/coatofarms.ico"
        }
    },
    "windowDev": {
        "fullscreen": false,
        "fullscreenable": true
    },
    "uglify": true,
    "plugins": {
        "meteor-desktop-splash-screen": {
            "version": "0.5.0",
            "imagePath": "splash/main.png",
            "windowSettings": {
                "width": 512,
                "height": 512
            },
            "updateScreen": true,
            "updateScreenSettings": {
                "imagePath": "splash/updating.gif",
                "windowSettings": {
                    "width": 400,
                    "height": 300
                },
                "clickThrough": false,
                "style": {
                    "background-size": "auto"
                }
            }
        }
    },
    "devDependencies": {
        "electron": "11.5.0"
    },
    "packageJsonFields": {
        "author": "Retronator",
        "private": true,
        "devDependencies": {
            "electron": "11.5.0"
        }
    },
    "builderOptions": {
        "icon": ".desktop/assets/meteor.ico",
        "appId": "meteor.app",
        "compression": "maximum",
        "win": {
            "target": "nsis"
        },
        "publish": [
            {
                "provider": "generic",
                "url": "http://127.0.0.1:8080/"
            }
        ],
        "mac": {
            "icon": ".desktop/assets/meteor.icns"
        },
        "dmg": {
            "icon": ".desktop/assets/meteor.icns",
            "background": ".desktop/assets/dmgBackground.png",
            "iconSize": 54,
            "contents": [
                { "x": 377, "y": 190, "type": "link", "path": "/Applications" },
                { "x": 63, "y": 190, "type": "file" }
            ],
            "window": {
                "width": 480,
                "height": 300
            }
        }
    },
    "packagerOptions": {
        "appBundleId": "com.retronator.pixelartacademy-learnmode",
        "icon": ".desktop/assets/icons/coatofarms.ico",
        "_osx": {
            "icon": ".desktop/assets/icons/coatofarms.icns"
        },
        "darwinDarkModeSupport": true,
        "appCategoryType": "public.app-category.education",
        "appCopyright": "Copyleft (AGPL-3.0 & CC-SA) 2023 Matej Jan, Retronator",
        "overwrite": true,
        "electronVersion": "11.5.0",
        "platform": "darwin, win32, linux"
    }
}
